@INPROCEEDINGS{Tramontina-Wainer2005,
  author = {Gregório Tramontina and Jacques Wainer},
  title = {Statistically Analyzing the Performance of Scheduling Techniques in Sequences of Workflow Activities},
  crossref = {proceedings:wcscw:2005},
  abstract = {Using scheduling techniques to reorder work in workflow systems can improve the performance of the business processes enacted by these systems. But this research area is still under-explored. This paper presents preliminary results on applying scheduling techniques to workflow systems. It studies the performance of scheduling techniques in five scenarios composed of sequences of workflow activities using simulation. The scenarios are dynamic and have uncertainties on the processing times of the cases in each of their activities. These uncertainties are handled by the guess and solve approach, which consists of making a guess on these processing times and solving the resulting deterministic problem with a suitable technique. The techniques results are compared to those obtained by the FIFO rule and they show that it is a good practice to use other techniques than FIFO (the most used ordering policy on today's workflows) and that the guess and solve is a feasible approach at least when its error is bound to 30%.},
  year = {2005},
  note = {Gerência e coordenação de workflow},
}

@INPROCEEDINGS{Veloso2005,
  author = {Renê Veloso},
  title = {Distributing Tasks in Workflow Systems based on Resource Suitability},
  crossref = {proceedings:wcscw:2005},
  abstract = {The distribution of tasks in workflow systems, in general, does not consider resource suitability. Resources that share the same role in the workflow can have different degrees of suitability to a task. This paper proposes an extension to the suitability metrics and presents the use of this extension in the selection of the most suitable resources for the execution of tasks. The experiments show the effectiveness of the approach presented here. A comparison with traditional strategies has proven effective gains in terms of time and quality of execution of the tasks.},
  year = {2005},
  note = {Gerência e coordenação de workflow},
  abstract-original = {A distribuição de tarefas em sistemas de workflow, em geral, não considera a aptidão dos recursos. Recursos que compartilham o mesmo papel no workflow podem possuir diferentes graus de aptidão a uma tarefa. Este trabalho propõe uma extensão às métricas de aptidão e apresenta a utilização dessa extensão na seleção de recursos mais adequados para a execução de tarefas. Os experimentos realizados mostram a efetividade da abordagem aqui apresentada. Uma comparação com estratégias tradicionais comprovou ganhos efetivos em termos de tempo e qualidade de execução das tarefas.},
  title-original = {Distribuição de Tarefas em Sistemas de Workflow Baseada na Aptidão dos Recursos}
}

@INPROCEEDINGS{Vieira-etal2005,
  author = {Vaninha Vieira and Ana Carolina Salgado and Patrícia Tedesco},
  title = {Representation of Contexts in Collaborative Environments Using Ontology},
  crossref = {proceedings:wcscw:2005},
  abstract = {By analyzing the context surrounding a group interaction or the context of its individual participants, groupware systems can provide participants with information and services relevant in that situation. However, there is little research on the use of context to support group work. One difficulty is to consider how context and how to represent this information. The use of ontologies is considered an effective technique to represent context by enabling the sharing and reuse of information and can be used by existing inference engines to reason about various contexts. In this article, we present an ontology for formal representation of context in groupware and a mechanism to support the building of context-aware groupware. Are also presented some scenarios in which the ontology and the context mechanism could be applied.},
  year = {2005},
  note = {Ambientes colaborativos adaptativos; Percepção (awareness)},
  abstract-original = {Através da análise do contexto que cerca uma interação em grupo ou do contexto individual de seus participantes, sistemas de groupware podem fornecer aos participantes informações e serviços relevantes naquela situação. No entanto, há pouca pesquisa sobre o uso de contexto para apoiar o trabalho em grupo. Uma dificuldade é o que considerar como contexto e como representar essas informações. O uso de ontologias é considerado uma técnica eficiente para representar contexto, por permitir o compartilhamento e reuso das informações e podem ser usadas por máquinas de inferência existentes para raciocinar sobre vários contextos. Neste artigo, apresentamos uma ontologia para representação formal de contexto em groupware e um mecanismo para suporte à construção de groupware ciente de contexto. São apresentados, também, alguns cenários em que a ontologia e o mecanismo de contexto poderiam ser aplicados.},
  title-original = {Representação de Contextos em Ambientes Colaborativos Usando Ontologia}
}

