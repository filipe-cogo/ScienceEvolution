@INPROCEEDINGS{Andre2005,
  author = {Amaury André},
  title = {A planning application for workflow},
  crossref = {proceedings:wcscw:2005},
  abstract = {In this paper we present a new approach to the development of Workflow Systems based on planning techniques in Artificial Intelligence. This new approach enables the generation of processes consisting of ordered sequences of tasks to optimize its execution using a larger number of parallel streams and enabling the inclusion of uncertainty factors in predefined project. For this we use planning strategies supported in Artificial Intelligence based on algorithms Partial Order Planning (POP) and Conditional Planning.},
  year = {2005},
  note = {Gerência e coordenação de workflow; Outros},
  abstract-original = {Neste artigo apresentamos uma nova abordagem para o desenvolvimento de Sistemas de Workflow baseada em técnicas de planejamento em Inteligência Artificial. Nesta nova abordagem permitimos a geração de processos constituídos por seqüências ordenadas de tarefas visando otimizar a sua execução através do maior número de fluxos paralelos e possibilitando a inclusão de fatores de indeterminação predefinidos em projeto. Para isso utilizamos estratégias de planejamento apoiadas em Inteligência Artificial, baseadas em algoritmos de Planejamento de Ordem Parcial (POP) e Planejamento Condicional.},
  lang = {pt},
  title-original = {Uma Aplicacão de Planejamento em Workflow}
}

