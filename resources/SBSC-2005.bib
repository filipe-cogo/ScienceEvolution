@INPROCEEDINGS{Coelho-Raposo2005,
  author = {André L. V. Coelho and Alberto B. Raposo},
  title = {Dealing with imprecision in temporal interdependencies between collaborative tasks: A fuzzy perspective},
  crossref = {proceedings:wcscw:2005},
  abstract = {In this paper, we advocate that the use of concepts from Soft Computing theory, in particular from fuzzy systems, can be quite useful in the modeling and coordination of collaborative activities. The tolerance of imprecision, uncertainty and approximation, which is the core of such technology, may provide a more subjective model for such activities, closer to human reasoning. We introduce a fuzzy-based approach to deal with temporal interdependencies between collaborative tasks, aiming to provide a step further toward the flexibility of coordination mechanisms in CSCW systems.},
  pages = {791--800},
  year = {2005},
  note = {Ambientes colaborativos adaptativos; Gerência e coordenação de workflow},
}

@INPROCEEDINGS{Martins-etal2005,
  author = {Ademir Martins and Margarete Axt and Antonio Carlos da Rocha Costa},
  title = {Supporting the cooperation in Collective Writing Virtual Environment},
  crossref = {proceedings:wcscw:2005},
  abstract = {The need to generate texts arising from collective efforts and the wide use of the Internet for collaborative/cooperative activities led us to design a virtual environment that supports group work for the collective development of documents, EccoLogos. Their focus is to facilitate interaction among members of the work team and promote qualitative values exchange among them. By using Piaget's Theory of Social Exchanges, simple mechanisms were used to support cooperation on three levels - content, standards and exchanges - in order to encourage the distribution of qualitative values that enrich the interactive process of collective writing.},
  year = {2005},
  note = {Aspectos sociais do trabalho em grupo; Ambientes/Aplicações cooperativas para Web/Internet},
  abstract-original = {A necessidade de geração de textos resultantes de esforços coletivos e a ampla utilização da Internet para atividades cooperativas/colaborativas levou-nos a projetar um ambiente virtual que suportasse o trabalho em grupo para o desenvolvimento coletivo de documentos, o EccoLogos. Seu foco é facilitar a interação entre os membros da equipe de trabalho e promover trocas qualitativas de valores entre eles. Com o aporte da Teoria das Trocas Sociais, de Piaget, mecanismos simples foram utilizados para dar suporte a cooperação em três níveis - conteúdo, normas e trocas - de forma a favorecer a circulação de valores qualitativos que enriquecessem o processo interativo da escrita coletiva.},
  lang = {pt},
  title-original = {Suporte à Cooperação em Ambiente Virtual de Escrita Coletiva}
}

@INPROCEEDINGS{Miranda-etal2005,
  author = {Igor Miranda and Flavia Santoro and Renata Araujo},
  title = {An Approach for Defining System Requirements for Group},
  crossref = {proceedings:wcscw:2005},
  abstract = {Communication is one of the most important aspects to promote information and knowledge sharing within a work group. The way communication takes place in a collaborative interaction is intrinsic to the nature of the group, the task to be performed and the environment where it occurs. Nevertheless, we observe that most groupware applications relies on basic communication channels, such as chat and message systems, and do not explore other possible communication requirements for each particular situation. This research work proposes a method to guide the definition of group communication requirements. It presents a conceptual framework for group communication aspects based on human communication and computer mediated communication that will be used in the method as a guide for identifying communication requirements.},
  year = {2005},
  note = {Outros},
}

@INPROCEEDINGS{Pimentel-etal2005,
  author = {Mariano Pimentel and Marco Aurelio Gerosa and Denise Filippo and Celso Ribeiro and Alberto Raposo and Hugo Fuks and Carlos Lucena},
  title = {{AulaNet} 3.0: developing collaborative applications using {3C} components},
  crossref = {proceedings:wcscw:2005},
  abstract = {In this paper, the development of groupware applications for the AulaNet learningware is addressed. This piece of software is currently evolving into version 3.0, which is component-based. The usage of the collaboration 3C Model (Communication, Coordination and Cooperation) to guide the development of AulaNet 3.0 services is discussed. The following topics are addressed: frameworks and component's kits built to support the groupware development; the services' architecture; the services' development process; and AulaNet's PDA version.},
