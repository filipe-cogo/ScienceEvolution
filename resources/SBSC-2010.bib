@INPROCEEDINGS{Berkenbrock.etal_2010,
  author = {Berkenbrock, C. D. M. and Silva, A. P. C. and Hirata, C. M. and Fernandes, C. T. and Pichiliani, M. C.},
  title = {Investigating Users Anonymity in a Collocated Mobile Groupware Environment},
  crossref = {proceedings:sbsc:2010},
  abstract = {Some activities in presential meetings require the anonymous participation while others demand publicity. This paper investigates the problem of keeping the anonymity of participants in collocated environments, which use mobile groupware. The mobile groupware both allows accomplishing the activities and keeps the anonymity. For the study, an experiment where participants are collocated was undertaken, however, in order to assess the influence of the reaction to awareness provided by the devices, the participants were instructed to not communicate verbally. The preliminary results showed that the awareness information made some of the actions performed by the participants ease, besides indicating that it is possible to keep the anonymity in collocated environment that uses mobile groupware despite of any kind of the eventual participants' reactions to awareness information.},
  keywords = {co-located environments; distributed teams; mobile groupware; computer-supported cooperative work},
  pages = {47--54},
  doi = {10.1109/SBSC.2010.15},
  year = {2010},
  abstract-original = {Certas atividades em reuniões presenciais exigem o anonimato dos participantes enquanto outras demandam publicidade. Este artigo investiga o problema de manter o anonimato dos participantes em ambientes colocalizados, que utilizam o groupware móvel. O groupware móvel permite realizar as atividades e também mantém anonimato. para investação, foi realizado um estudo de caso onde os participantes estão colocalizados; contudo, de modo a avaliar a influência da reação à percepção fornecidos pelos dispositivos móveis, os participantes envolvidos foram instruídos a não se comunicarem verbalmente. Os resultados obtidos mostraram que as informações de percepção, facilitaram algumas das ações realizadas pelos participantes, além de indicar que é possível manter o anonimato em ambientes colocalizados que utilizam groupware móvel, apesar das eventuais reações dos participantes às informações de percepção.},
  keywords-original = {ambientes colocalizados; equipes distribuídas; groupware móvel; trabalho cooperativo apoiado por computador},
  lang = {pt},
  title-original = {Investigando o Anonimato de Usuários num Ambiente Colocalizado utilizando um Groupware Móvel}
}

@INPROCEEDINGS{Costa.Souza_2010,
  author = {Jean Marcel Reis Costa and Cleidson Ronald Botelho Souza},
  title = {Analyzing the Scalability of Awareness Networks in a Distributed Software Development Project},
  crossref = {proceedings:sbsc:2010},
  abstract = {Awareness has been a very important concept in the CSCW field. Arguably, this concept is about the fact that an actor needs to monitor the work of his colleagues and, at the same time, inform them about his own work. This facilitates the coordination of collaborative activities. Despite important previous work on this topic, none directly addresses the number of actors that each actor should monitor and, similarly, the number of actors this same actor should inform their activities to. This set of actors is called the 'awareness network'. This paper presents an analysis of the scalability of awareness networks in the context of a large-scale distributed software development project. Our results can be used to inform the design of tools for collaborative software development.},
  keywords = {scalability; distributed software development},
  pages = {103--110},
  doi = {10.1109/SBSC.2010.22},
  year = {2010},
  abstract-original = {Ao longo dos anos muitos trabalhos sobre o conceito de awareness foram publicados. Diversas formas de representar este conceito, bem como definições divergentes ou complementares foram apresentadas. De um modo geral, a idéia de awareness se refere ao fato de que um ator precisa, ao mesmo tempo, estar ciente do trabalho de seus colegas e informar seus colegas sobre seu próprio trabalho. Esta percepção sobre o trabalho dos colegas facilita a coordenação de atividades colaborativas. Apesar das diferentes definições, nenhuma delas aborda diretamente o número de atores sobre os quais um ator precisa estar ciente e, de maneira similar, o número de atores para os quais este mesmo ator deve informar suas atividades. Baseado em nossos trabalhos anteriores, estes atores formam as chamadas redes de awareness. Esse artigo visa reduzir essa limitação dos trabalhos anteriores, apresentando dados sobre a escala destas redes de awareness. Estes dados são baseados em um estudo de caso com um projeto distribuído de desenvolvimento de software, o Jazz. Os resultados da análise permitirão entender melhor a escalabilidade das redes de awareness ao longo de um projeto e podem nortear futuras pesquisas nessa área.},
  keywords-original = {escalabilidade; desenvolvimento distribuído de software},
  lang = {pt},
  title-original = {Analisando a escalabilidade das redes de awareness de um projeto de software distribuído}
}

@INPROCEEDINGS{Freire.Figueiredo_2010,
  author = {Vinícius P. M. Freire and Daniel R. Figueiredo},
  title = {Ranking in Collaboration Networks Using a Relationship Intensity Metric},
  crossref = {proceedings:sbsc:2010},
  abstract = {Collaboration networks are social networks in which relationships represent some kind of professional collaboration. The study of collaboration networks can help identify members that are important or influential within a given community. This work is divided into two parts. The first part is a study of the topological properties of two collaboration networks: the global collaboration network and the Brazilian collaboration network of authors of scientific papers within the area of Computer Science. The second part presents a ranking metric for vertices based on the intensities of their relationships. Using the proposed metric and other more classical metrics, we rank the researchers in Brazil in Computer Science. The proposed metric was compared with subjective evaluation of researchers made by CNPq. The results show the effectiveness of the proposed metric in identifying influential researchers when compared to another metrics in the literature.},
  keywords = {coauthorship networks; intensity of relationship; ranking metric},
  pages = {71--78},
  doi = {10.1109/SBSC.2010.18},
  year = {2010},
  abstract-original = {Redes de colaboração são redes sociais nas quais os relacionamentos entre indivíduos representam algum tipo de colaboração profissional. O estudo de redes de colaboração pode ajudar a identificar indivíduos que sejam influentes ou importantes dentro de uma determinada comunidade. Este trabalho está dividido em duas partes. A primeira parte constitui um estudo das propriedades topológicas de duas redes de colaboração: a rede de colaboração mundial e a rede de colaboração brasileira de autores de artigos científicos da área de Ciência da Computação. A segunda parte apresenta uma métrica para ranqueamento de vértices baseada na intensidade de relacionamento. Utilizando a métrica proposta e outras métricas clássicas, fazemos um ranqueamento dos pesquisadores que atuam no Brasil na área de Ciência da Computação. A avaliação dos resultados foi feita através da comparação com a avaliação subjetiva de pesquisadores feita pelo CNPq. Os resultados evidenciam a eficácia da métrica em identificar indivíduos influentes quando comparada a outras métricas presentes na literatura.},
  keywords-original = {redes de colaboração; intensidade de relacionamento; métrica para ranqueamento},
  lang = {pt},
  title-original = {Ranqueamento em Redes de Colaboração Utilizando uma Métrica Baseada em Intensidade do Relacionamento}
}

@INPROCEEDINGS{Gadelha.etal_2010,
  author = {Bruno Gadelha and Elder Cirilo and Hugo Fuks and Carlos J. P. Lucena and Castro Jr, Alberto and Marco Aurélio Gerosa},
  title = {An Approach for Developing Component-based Groupware Product Lines Using Groupware Workbench},
  crossref = {proceedings:sbsc:2010},
  abstract = {The development of groupware product lines entails, beyond the detailed knowledge of the application domain, analysis of the collaboration that they should support. To attack this problem, this research uses the 3C Collaboration Model that underlies the RUP 3C-Groupware on domain analysis phase. For the implementation phase, this model is still being used, this time based on Groupware Workbench. This approach illustrates the use of the collaboration model at all stages of the product line development. It provides a systematic way for tailoring groupware, using the concept of software product lines.},
  keywords = {software product lines; component-based development; groupware},
  pages = {32--38},
  doi = {10.1109/SBSC.2010.13},
  year = {2010},
  abstract-original = {Desenvolvimento de linha de produtos de groupware implica, além do conhecimento detalhado do domínio da aplicação, na análise da colaboração que eles devem dar suporte. Para atacar esse problema, nesta pesquisa utiliza-se o Modelo 3C de Colaboração que embasa o RUP 3C-Groupware na etapa de análise de domínio. Para a etapa de implementação, este modelo continua sendo usado, desta vez com base no Groupware Workbench. Esta abordagem ilustra o uso do modelo de colaboração em todas as etapas do desenvolvimento da linha de produtos. Ela provê uma forma sistemática para o desenvolvimento de groupware adaptável, através do uso do conceito de linhas de produto de software.},
  keywords-original = {linhas de produto de software; desenvolvimento baseado em componentes; groupware},
  lang = {pt},
  title-original = {Uma Abordagem para o Desenvolvimento de Linhas de Produto de Groupware Baseados em Componentes Utilizando o Groupware Workbench}
}

@INPROCEEDINGS{Lima.etal_2010,
  author = {Marcio Passos Lima and José Maria N. David and Benedito Tourinho Dantas},
  title = {Risk Management and Context in a Collaborative Project Management Environment for Software Development},
  crossref = {proceedings:sbsc:2010},
  abstract = {Many events with uncertain results, named risks, can occur during software development process. These risks and their impacts can be determined from a set of context elements in which the software project is inserted, as well as the software life cycle. In a collaborative projects management environment, risks associated with the collaboration activities are related to the project risks. The Web-based Groupware on Project Management System (WGPMS) is an infrastructure that aims to support the collaborative project activities. This environment has a module (Risys) that provides the intelligent identification and the qualitative analysis of the project risks. However, it does not relate the project risks to those which are associated to the low collaboration rate. Moreover, it does not consider the involved context elements which influence the software development process considering the life cycle phases of the RUP model. The goal of this work is to present the modifications in the Risys in order to enhance the risk management in WGPMS. The proposed solution uses ontology for the context elements representation as well as for the RUP model phases. In addition, it uses taxonomy and a qualitative analysis of the risks. Some simulations which were done in order to evaluate the ontology are presented here.},
  keywords = {risk analysis; context; ontology; RUP model},
  pages = {95--102},
  doi = {10.1109/SBSC.2010.21},
  year = {2010},
  abstract-original = {Inúmeros eventos de resultados incertos, denominados riscos, podem ocorrer durante o processo de desenvolvimento de software. Os riscos, e os seus impactos, podem ser determinados a partir de um conjunto de elementos de contexto no qual o projeto está inserido, assim como, pela fase do ciclo de vida do software. Em um ambiente colaborativo de gestão de projetos, os riscos associados às atividades de colaboração se relacionam com os riscos de projeto. O Web-based Groupware on Project Management System (WGPMS) é uma infraestrutura cujo objetivo é apoiar as atividades colaborativas de projeto. Este ambiente possui um módulo (Risys) para prover a identificação inteligente e a análise qualitativa dos riscos de um projeto. Entretanto, ele não relaciona os riscos de projeto àqueles associados à ausência ou à baixa colaboração, nem tampouco considera a influência dos elementos de contexto envolvidos no desenvolvimento de software considerando-se as fases do ciclo de vida do modelo RUP. O objetivo deste trabalho é apresentar as modificações na ferramenta Risys para ampliar o tratamento de riscos no WGPMS. A solução proposta utiliza ontologias para a representação dos elementos de contexto de software, e das fases do modelo RUP e, finalmente, a taxonomia e análise qualitativa dos riscos. Algumas simulações realizadas para a avaliação das ontologias são também apresentadas.},
  keywords-original = {Análise de risco; contexto; ontologia; modelo RUP},
  lang = {pt},
  title-original = {Gerenciamento de riscos e contexto em ambientes colaborativos de gestão de projetos de desenvolvimento de software}
}

@INPROCEEDINGS{Maciel.etal_2010,
  author = {Rita Suzana P. Maciel and José Maria N. David Bruno C. Silva and Cristiana Pereira Bispo and Ítalo Ribeiro and Renato P. Conceição},
  title = {From Groupware Requirements to Services Design: Supporting the Development Process of a Pre-meeting Application},
  crossref = {proceedings:sbsc:2010},
  abstract = {In the groupware development process the generated code usually does not reflect adequately the functional requirements initially specified. This is related to the complexity of collaborative system domain, and the ever changing requirements according to the evolution of the involved activities. This paper describes an MDA process which was deployed in a SOA infrastructure (WGWSOA) in order to support the development of a pre-meeting application. Through this development process we aimed to enhance the linkage permanence between different models which are generated during the design of specific collaborative services in a middleware infrastructure.},
  keywords = {MDA; SOA; middleware; pre-meeting development; middleware services},
  pages = {25--31},
  doi = {10.1109/SBSC.2010.12},
  year = {2010},
  lang = {en}
}

@INPROCEEDINGS{Merlin.Hirata_2010,
  author = {Bruno Merlin and Celso Hirata},
  title = {Collaborative System Experiency in a Critical Activity Context: Air Traffic Control},
  crossref = {proceedings:sbsc:2010},
  abstract = {Collaborative systems are used in several application areas. But, in the context of critical activities, where human life may be involved, the acceptation of such a system substituting human-human coordination is more difficult. The user must delegate a part of his responsibilities to the system and must have a high level of trust in its. Moreover it is difficult to promote changes in an implanted system leading to an evolution of working methods. This article tackles an experience of a collaborative system development in the context of the French air traffic control. We observe that the main artifact of coordination (the paper strip) between air traffic controllers turned an obstacle to the modernization of the system and to a wider collaboration. We searched an alternative to substitute the strip paper and a process to gain the trust of the user in the new system. The article relates the project experience and highlight recommendation for the development of these systems in critical activity contexts.},
  keywords = {participative conception; multitier application; ethnological study; air traffic control},
  pages = {17--24},
  doi = {10.1109/SBSC.2010.11},
  year = {2010},
  abstract-original = {Sistemas colaborativos têm sido empregados cada vez mais e em diversas áreas de aplicação. Em áreas que têm atividades críticas onde existem riscos que podem causar impactos inaceitáveis tais como perdas de vidas humanas, a adoção de tais sistemas é mais difícil. Em geral, para o emprego desses sistemas, é imprescindível que o usuário tenha confiança de uso do sistema. Contudo, é extremamente difícil fazer com que ele aceite as mudanças, seja de novas funcionalidades do sistema, seja de métodos de trabalho a ele inerentes. Este artigo relata uma experiência de projeto de desenvolvimento de sistema colaborativo para o controle de tráfego aéreo francês. Observou-se que o principal artefato de coordenação entre usuários (controladores de tráfego aéreo), o strip de papel, tornou-se um obstáculo à modernização do sistema. Dessa forma, buscou-se uma alternativa para substituir tal artefato e ao mesmo tempo satisfazendo o requisito de confiança de uso de sistema por parte do usuário. O artigo relata a experiência de projeto e propõe recomendações de projeto no desenvolvimento desses sistemas.},
  keywords-original = {concepção participativa; aplicação multicamada; estudo etnológico; controle de tráfego aéreo},
  lang = {pt},
  title-original = {Experiência de projeto de sistemas colaborativos para atividades críticas: controle de tráfego aéreo}
}

@INPROCEEDINGS{MirandaMarques.etal_2010,
  author = {Aline de Miranda Marques and Mariano Pimentel and Sean Siqueira},
  title = {Functionalities for Blog Conversation: An Investigation about the Use of Quote and Reply},
  crossref = {proceedings:sbsc:2010},
  abstract = {The blog is featured as a communication system for dissemination of information and expression of opinions. Is the blog a system suitable for collaboration? The research presented in this paper investigates the use of citation and response to enable a conversation on the blog. From analysis of the discourse structuring and the possibilities of relationship among participants, were developed some research questions that guided the research on the citation functionality and response functionality. To investigate the research questions, we performed a case study explanatory using the blog as a support method for Project-based Collaborative Learning. Explanatory case study, citation functionality and response functionality were varied between the stages of the dynamics so that they could observe the influence of each functionality in the conversation among students. As a result of the study, we observed that the citation functionality was hardly used by bloggers because of usability problems and the lack of culture usage and the response functionality was used moderately. There is a preference among bloggers to use the response functionality to replicate the comments received from readers. It was not possible to infer in this research whether it's better to make available both features: the quote and the reply, only one or none (only the comment for a post).},
  keywords = {blogs; discourse structuring; relationship among participants; citation functionality; response functionality},
  pages = {9--16},
  doi = {10.1109/SBSC.2010.29},
  year = {2010},
  abstract-original = {O blog é caracterizado como um sistema de comunicação para difusão de informação e expressão de opiniões. Será o blog um sistema adequado para colaboração? Na pesquisa apresentada neste artigo é investigado o uso das funcionalidades de citação e resposta para possibilitar uma conversação no blog. A partir de análises sobre a estruturação do discurso no blog e as possibilidades de relação entre os participantes, foram elaboradas algumas questões de pesquisa que direcionaram a investigação sobre as funcionalidades de citação e resposta. Para investigar as questões de pesquisa, foi realizado um estudo de caso explanatório com o uso do blog como apoio ao método de Aprendizagem Colaborativa baseada em Projeto. No estudo de caso explanatório, as funcionalidades de citação e resposta foram variadas entre as etapas da dinâmica para que se pudesse observar a influência de cada funcionalidade na conversação entre os alunos. Como resultado do estudo, observou-se que a funcionalidade de Citação (Quote) praticamente não foi usada pelos blogueiros em função de problemas de usabilidade e por pouca cultura de uso e a funcionalidade de resposta foi usada moderadamente. Há uma preferência entre os blogueiros em usar a funcionalidade de resposta para replicar comentários recebidos dos leitores. Não foi possível, nessa pesquisa, inferir se é melhor disponibilizar ambas as funcionalidades de citação e de resposta, ou apenas uma delas ou nenhuma (apenas o comentário para postagem).},
  keywords-original = {blogs; estruturação do discurso; relação entre os participantes; funcionalidade de citação; funcionalidade de resposta},
  lang = {pt},
  title-original = {Funcionalidades para Conversação no Blog: uma Investigação sobre o uso de Citação e Resposta}
}

@INPROCEEDINGS{Nunes.Pimentel_2010,
  author = {Ricardo Rodrigues Nunes and Mariano Pimentel},
  title = {Question-unanswered: Research and Development of {InterVIU} System to Support Chat-based Interviews},
  crossref = {proceedings:sbsc:2010},
  abstract = {In the research presented in this paper, the use of computational systems for the interviews is investigated. Exploratory Case Studies had been carried through to identify the problems that occur when the technique interview is carried through by chat. Amongst the identified problems, question-without-reply it was the chosen problem to be investigated in this research. It was proposed solution list of questions: to isolate messages by interviewing other messages chat, becoming explicit to the respondent which messages still need to be answered. The InterVIU system was developed for interviews, and the solution was implemented through the mechanism area of questions. A study was carried through pilot to identify the functionality problems, of usability and bugs in the system. To evaluate the proposed solution, a study of confirmatory case was performed. In the session where the InterVIU was used, the respondent could answer all the questions, an indication of that the solution is adjusted. From the register's analysis of the interview session, the answers to a questionnaire and the participant's comments, it could be concluded that the list of questions is useful for monitoring the interview.},
  keywords = {interview systems; InterVIU system; chat based systems; CSCW},
  pages = {1--8},
  doi = {10.1109/SBSC.2010.10},
  year = {2010},
  abstract-original = {Na pesquisa apresentada nesse artigo, é investigado o uso de sistemas computacionais para a realização de entrevistas. Foram realizados estudos de caso exploratórios para identificar os problemas que ocorrem quando a técnica entrevista é realizada por bate-papo. Dentre os problemas identificados, pergunta-sem-resposta foi o problema escolhido para ser investigado nessa pesquisa. Foi proposta a solução ``lista de perguntas'': isolar as mensagens de entrevista das demais mensagens de bate-papo, tornando explícito para o entrevistado quais mensagens ainda precisam ser respondidas. Foi desenvolvido o sistema InterVIU para entrevistas, e a solução foi implementada através do mecanismo ``área de perguntas''. Foi realizado um estudo piloto para identificar os problemas de funcionalidade, de usabilidade e bugs no sistema. Para avaliar a solução proposta, foi realizado um estudo de caso confirmatório. Na sessão em que o InterVIU foi usado, o entrevistado conseguiu responder todas as perguntas, um indício de que a solução é adequada. A partir da análise do registro da sessão de entrevista, das respostas a um questionário e dos depoimentos dos participantes, pôde-se concluir que a lista de perguntas é útil para o acompanhamento da entrevista.},
  keywords-original = {sistemas para entrevista; sistema InterVIU; sistemas baseados no bate-papo; sistemas para colaboração},
  lang = {pt},
  title-original = {Pergunta-sem-resposta: Sistema InterVIU para a pesquisa e o desenvolvimento de bate-papo parar entrevista}
}

@INPROCEEDINGS{Rivolli.etal_2010,
  author = {Adriano Rívolli and Marcelo Paiva Guimarãe and Dilvan Abreu Moreira},
  title = {A Collaborative Strategy to Complement the Teaching and Learning of Programming Logic},
  crossref = {proceedings:sbsc:2010},
  abstract = {The teaching of logic programming is a challenge for computer science courses. In this regard, efforts have been made to develop strategies and tools that help the teaching and learning of related disciplines. In this paper, we propose a collaborative approach, based on challenges, to complement and support the learning of programming logic concepts. It aims to create an environment that is attractive and motivating from the student perspective with tools that allow teachers to monitor student progress. We also present a tool that implements this approach and related tests.},
  keywords = {collaborative learning; teaching and learning; programming logic},
  pages = {133--139},
  doi = {10.1109/SBSC.2010.26},
  year = {2010},
  keywords-original = {aprendizado colaborativo; ensino e aprendizagem; lógica de programação}
}

@INPROCEEDINGS{Sa.etal_2010,
  author = {Eveline J. V. Sá and Jeane S. F. Teixeira and Clovis Torres Fernandes},
  title = {Towards a Game Use Specification Pattern for Learning Activities},
  crossref = {proceedings:sbsc:2010},
  abstract = {Cooperative activities, when providing planned interaction among learners, can be used to engage and support meaningful learning. The use of games, besides making the learning experience a richer and more stimulating process, can supply the learner, with an abundance of challenging and ludic situations. When games and cooperation are combined within a learning activity, it is necessary to formalize the whole flow of the cooperative learning process, so that the suitable educational resources can be defined and appropriate actors and actions undertaken. In this paper we propose an extension of Cooperative Learning Flow Patterns (CLFP), assuming cooperation as a mediator of the interaction process, in order to formalize some aspects of cooperation related to the use of games in learning activities.},
  keywords = {educational games; cooperative learning; cooperative learning flow patterns; learning design},
  pages = {126--132},
  doi = {10.1109/SBSC.2010.25},
  year = {2010},
  lang = {pt},
  title-original = {Rumo a um Padrão para Especificação de Uso do Jogo em Atividades de Aprendizagem}
}

@INPROCEEDINGS{Silva.Garcia_2010,
  author = {Cintia Ramalho Caetano da Silva and Ana Cristina Bicharra Garcia},
  title = {The Experience of Film Production in Collaborative Virtual Environments},
  crossref = {proceedings:sbsc:2010},
  abstract = {This paper describes an experience of collaborative project development using Second Life (SL) as the interaction media. SL is a virtual environment in which people can interact with each other through avatars. The group task involved the elaboration, planning and production of 1-minute movies. The task was conducted within a graduate course during two months. Participants were graduate students without previous experience in Second Life and in cinema techniques. Analysis based on the 3C collaboration model permitted a better understanding of advantages, limitations and challenges for collaborative work in 3D environments. Our observations included group meetings for definition and elaboration of the screenplay, creation and characterization of the characters, setting and description of the scenes, filming, editing, sound recording and documentation.},
  keywords = {CSCW; 3D virtual environments; Second Life; collaborative work; films},
  pages = {55--62},
  doi = {10.1109/SBSC.2010.16},
  year = {2010},
  abstract-original = {Esse artigo descreve a experiência do desenvolvimento de um projeto colaborativo dentro do ambiente virtual Second Life (SL), um ambiente virtual no qual pessoas interagem através de avatares [1]. A tarefa analisada consistiu na elaboração de um filme (curta-metragem). Três grupos de 3-4 alunos de mestrado, sem conhecimento prévio sobre o ambiente Second Life e sem conhecimento sobre produção de filmes, deveriam elaborar um curta. Análises baseadas no modelo 3C de colaboração [2][7] permitiram entender melhor a atividade colaborativa em ambientes 3D, seus desafios, limitações e dificuldades. As reuniões cobriram toda a fase de projeto desde as reuniões para definição e elaboração do roteiro, criação e caracterização dos personagens, definição e descrição das cenas, filmagem, edição, gravação dos sons, intercalação de sons com as cenas ate a documentação do projeto.},
  keywords-original = {CSCW; ambientes virtuais 3D; Second Life; trabalho colaborativo; filmes},
  lang = {pt},
  title-original = {A experiência da Produção de Filmes em Ambientes Virtuais Colaborativos}
}

@INPROCEEDINGS{Silva.etal_2010,
  author = {Rodrigo Ferreira Silva and Raquel Oliveira Prates and Victor Josué Salles},
  title = {{SMART}: A Computational Tool for Supporting the Identification at Design Time of the Social Impact of Collaborative Systems},
  crossref = {proceedings:sbsc:2010},
  abstract = {In this paper, we present SMART, a computational tool based on Manas, that supports designers in identifying potential negative social impacts the collaborative system may have on its users. To do so, the designer describes the communicative model the system will provide among users and identifies potential problems that are then analyzed by the designer. Two evaluations of SMART were conducted and indicate that the benefits that may result from using this tool.},
  keywords = {collaborative system project; social impact; Manas; Semiotic Engineering},
  pages = {39--46},
  doi = {10.1109/SBSC.2010.14},
  year = {2010},
  abstract-original = {Apesar de conhecida a importância de aspectos sociais em sistemas colaborativos, poucas abordagens levam em consideração tais aspectos durante as fases de projeto deste tipo de sistema. Neste artigo, apresentamos a ferramenta SMART que instancia a arquitetura da Manas e apoia o projetista na consideração dos impactos sociais que o sistema colaborativo em desenvolvimento pode ter sobre seus usuários. Por fim, duas avaliações do SMART são conduzidas gerando indicadores positivos do seu uso.},
  keywords-original = {projeto de sistemas colaborativos; impactos sociais; Manas; Engenharia Semiótica},
  lang = {pt},
  title-original = {SMART: Uma ferramenta computacional para o apoio à identificação de problemas de impacto social durante o projeto de sistemas colaborativos}
}

@INPROCEEDINGS{Soares.etal_2010,
  author = {Marinalva Dias Soares and Rafael Santos and Nandamudi Vijaykumar and Luciano Dutra},
  title = {Citizen Science-based Labeling of Imprecisely Segmented Images: Case Study and Preliminary Results},
  crossref = {proceedings:sbsc:2010},
  abstract = {One of the most important objectives of remote sensing image processing is the identification of objects on an image. Automatic and correct object identification is hard to achieve, since the intermediate steps (including segmentation) may yield imprecise results. After segmentation, the image segments must be labeled, i.e., their classes must be identified. The approaches to this are either manual, requiring extensive and manual annotation by a trained user, which is by definition expensive, or automatic or semi-automatic but may incur in errors caused by the segmentation step and/or lack of high level knowledge used in segment labeling. We consider another approach: using volunteers and collective intelligence to label the regions accordingly to a minimum set of rules. The objective of this paper is to use the concepts of citizen science in labeling segments from satellite images for urban areas. This paper shows whether citizen science may improve the process of interpretation of scenes or labeling polygons (regions) extracted from urban satellite image through segmentation process and also presents some preliminary results.},
  keywords = {citizen science; image segmentation; image labeling; collective intelligence},
  pages = {87--94},
  doi = {10.1109/SBSC.2010.20},
  year = {2010},
  lang = {en}
}

