@INPROCEEDINGS{Merlin.Hirata_2010,
  author = {Bruno Merlin and Celso Hirata},
  title = {Collaborative System Experiency in a Critical Activity Context: Air Traffic Control},
  crossref = {proceedings:sbsc:2010},
  abstract = {Collaborative systems are used in several application areas. But, in the context of critical activities, where human life may be involved, the acceptation of such a system substituting human-human coordination is more difficult. The user must delegate a part of his responsibilities to the system and must have a high level of trust in its. Moreover it is difficult to promote changes in an implanted system leading to an evolution of working methods. This article tackles an experience of a collaborative system development in the context of the French air traffic control. We observe that the main artifact of coordination (the paper strip) between air traffic controllers turned an obstacle to the modernization of the system and to a wider collaboration. We searched an alternative to substitute the strip paper and a process to gain the trust of the user in the new system. The article relates the project experience and highlight recommendation for the development of these systems in critical activity contexts.},
  keywords = {participative conception; multitier application; ethnological study; air traffic control},
  pages = {17--24},
  doi = {10.1109/SBSC.2010.11},
  year = {2010},
  abstract-original = {Sistemas colaborativos tÍm sido empregados cada vez mais e em diversas ·reas de aplicaÁ„o. Em ·reas que tÍm atividades crÌticas onde existem riscos que podem causar impactos inaceit·veis tais como perdas de vidas humanas, a adoÁ„o de tais sistemas È mais difÌcil. Em geral, para o emprego desses sistemas, È imprescindÌvel que o usu·rio tenha confianÁa de uso do sistema. Contudo, È extremamente difÌcil fazer com que ele aceite as mudanÁas, seja de novas funcionalidades do sistema, seja de mÈtodos de trabalho a ele inerentes. Este artigo relata uma experiÍncia de projeto de desenvolvimento de sistema colaborativo para o controle de tr·fego aÈreo francÍs. Observou-se que o principal artefato de coordenaÁ„o entre usu·rios (controladores de tr·fego aÈreo), o strip de papel, tornou-se um obst·culo ‡ modernizaÁ„o do sistema. Dessa forma, buscou-se uma alternativa para substituir tal artefato e ao mesmo tempo satisfazendo o requisito de confianÁa de uso de sistema por parte do usu·rio. O artigo relata a experiÍncia de projeto e propıe recomendaÁıes de projeto no desenvolvimento desses sistemas.},
  keywords-original = {concepÁ„o participativa; aplicaÁ„o multicamada; estudo etnolÛgico; controle de tr·fego aÈreo},
  lang = {pt},
  title-original = {ExperiÍncia de projeto de sistemas colaborativos para atividades crÌticas: controle de tr·fego aÈreo}
}

@INPROCEEDINGS{MirandaMarques.etal_2010,
  author = {Aline de Miranda Marques and Mariano Pimentel and Sean Siqueira},
  title = {Functionalities for Blog Conversation: An Investigation about the Use of Quote and Reply},
  crossref = {proceedings:sbsc:2010},
  abstract = {The blog is featured as a communication system for dissemination of information and expression of opinions. Is the blog a system suitable for collaboration? The research presented in this paper investigates the use of citation and response to enable a conversation on the blog. From analysis of the discourse structuring and the possibilities of relationship among participants, were developed some research questions that guided the research on the citation functionality and response functionality. To investigate the research questions, we performed a case study explanatory using the blog as a support method for Project-based Collaborative Learning. Explanatory case study, citation functionality and response functionality were varied between the stages of the dynamics so that they could observe the influence of each functionality in the conversation among students. As a result of the study, we observed that the citation functionality was hardly used by bloggers because of usability problems and the lack of culture usage and the response functionality was used moderately. There is a preference among bloggers to use the response functionality to replicate the comments received from readers. It was not possible to infer in this research whether it's better to make available both features: the quote and the reply, only one or none (only the comment for a post).},
  keywords = {blogs; discourse structuring; relationship among participants; citation functionality; response functionality},
  pages = {9--16},
  doi = {10.1109/SBSC.2010.29},
  year = {2010},
  abstract-original = {O blog È caracterizado como um sistema de comunicaÁ„o para difus„o de informaÁ„o e express„o de opiniıes. Ser· o blog um sistema adequado para colaboraÁ„o? Na pesquisa apresentada neste artigo È investigado o uso das funcionalidades de citaÁ„o e resposta para possibilitar uma conversaÁ„o no blog. A partir de an·lises sobre a estruturaÁ„o do discurso no blog e as possibilidades de relaÁ„o entre os participantes, foram elaboradas algumas questıes de pesquisa que direcionaram a investigaÁ„o sobre as funcionalidades de citaÁ„o e resposta. Para investigar as questıes de pesquisa, foi realizado um estudo de caso explanatÛrio com o uso do blog como apoio ao mÈtodo de Aprendizagem Colaborativa baseada em Projeto. No estudo de caso explanatÛrio, as funcionalidades de citaÁ„o e resposta foram variadas entre as etapas da din‚mica para que se pudesse observar a influÍncia de cada funcionalidade na conversaÁ„o entre os alunos. Como resultado do estudo, observou-se que a funcionalidade de CitaÁ„o (Quote) praticamente n„o foi usada pelos blogueiros em funÁ„o de problemas de usabilidade e por pouca cultura de uso e a funcionalidade de resposta foi usada moderadamente. H· uma preferÍncia entre os blogueiros em usar a funcionalidade de resposta para replicar coment·rios recebidos dos leitores. N„o foi possÌvel, nessa pesquisa, inferir se È melhor disponibilizar ambas as funcionalidades de citaÁ„o e de resposta, ou apenas uma delas ou nenhuma (apenas o coment·rio para postagem).},
  keywords-original = {blogs; estruturaÁ„o do discurso; relaÁ„o entre os participantes; funcionalidade de citaÁ„o; funcionalidade de resposta},
  lang = {pt},
  title-original = {Funcionalidades para ConversaÁ„o no Blog: uma InvestigaÁ„o sobre o uso de CitaÁ„o e Resposta}
}

@INPROCEEDINGS{Nunes.Pimentel_2010,
  author = {Ricardo Rodrigues Nunes and Mariano Pimentel},
  title = {Question-unanswered: Research and Development of {InterVIU} System to Support Chat-based Interviews},
  crossref = {proceedings:sbsc:2010},
  abstract = {In the research presented in this paper, the use of computational systems for the interviews is investigated. Exploratory Case Studies had been carried through to identify the problems that occur when the technique interview is carried through by chat. Amongst the identified problems, question-without-reply it was the chosen problem to be investigated in this research. It was proposed solution list of questionsù: to isolate messages by interviewing other messages chat, becoming explicit to the respondent which messages still need to be answered. The InterVIU system was developed for interviews, and the solution was implemented through the mechanism area of questions. A study was carried through pilot to identify the functionality problems, of usability and bugs in the system. To evaluate the proposed solution, a study of confirmatory case was performed. In the session where the InterVIU was used, the respondent could answer all the questions, an indication of that the solution is adjusted. From the register's analysis of the interview session, the answers to a questionnaire and the participant's comments, it could be concluded that the list of questions is useful for monitoring the interview.},
  keywords = {interview systems; InterVIU system; chat based systems; CSCW},
  pages = {1--8},
  doi = {10.1109/SBSC.2010.10},
  year = {2010},
  abstract-original = {Na pesquisa apresentada nesse artigo, È investigado o uso de sistemas computacionais para a realizaÁ„o de entrevistas. Foram realizados estudos de caso exploratÛrios para identificar os problemas que ocorrem quando a tÈcnica entrevista È realizada por bate-papo. Dentre os problemas identificados, pergunta-sem-resposta foi o problema escolhido para ser investigado nessa pesquisa. Foi proposta a soluÁ„o ``lista de perguntas'': isolar as mensagens de entrevista das demais mensagens de bate-papo, tornando explÌcito para o entrevistado quais mensagens ainda precisam ser respondidas. Foi desenvolvido o sistema InterVIU para entrevistas, e a soluÁ„o foi implementada atravÈs do mecanismo ``·rea de perguntas''. Foi realizado um estudo piloto para identificar os problemas de funcionalidade, de usabilidade e bugs no sistema. Para avaliar a soluÁ„o proposta, foi realizado um estudo de caso confirmatÛrio. Na sess„o em que o InterVIU foi usado, o entrevistado conseguiu responder todas as perguntas, um indÌcio de que a soluÁ„o È adequada. A partir da an·lise do registro da sess„o de entrevista, das respostas a um question·rio e dos depoimentos dos participantes, pÙde-se concluir que a lista de perguntas È ˙til para o acompanhamento da entrevista.},
  keywords-original = {sistemas para entrevista; sistema InterVIU; sistemas baseados no bate-papo; sistemas para colaboraÁ„o},
  lang = {pt},
  title-original = {Pergunta-sem-resposta: Sistema InterVIU para a pesquisa e o desenvolvimento de bate-papo parar entrevista}
}

