  crossref = {proceedings:sbsc:2010},
  abstract = {Some activities in presential meetings require the anonymous participation while others demand publicity. This paper investigates the problem of keeping the anonymity of participants in collocated environments, which use mobile groupware. The mobile groupware both allows accomplishing the activities and keeps the anonymity. For the study, an experiment where participants are collocated was undertaken, however, in order to assess the influence of the reaction to awareness provided by the devices, the participants were instructed to not communicate verbally. The preliminary results showed that the awareness information made some of the actions performed by the participants ease, besides indicating that it is possible to keep the anonymity in collocated environment that uses mobile groupware despite of any kind of the eventual participants' reactions to awareness information.},
  keywords = {co-located environments; distributed teams; mobile groupware; computer-supported cooperative work},
  pages = {47--54},
  doi = {10.1109/SBSC.2010.15},
  year = {2010},
  abstract-original = {Certas atividades em reuniıes presenciais exigem o anonimato dos participantes enquanto outras demandam publicidade. Este artigo investiga o problema de manter o anonimato dos participantes em ambientes colocalizados, que utilizam o groupware mÛvel. O groupware mÛvel permite realizar as atividades e tambÈm mantÈm anonimato. para investaÁ„o, foi realizado um estudo de caso onde os participantes est„o colocalizados; contudo, de modo a avaliar a influÍncia da reaÁ„o ‡ percepÁ„o fornecidos pelos dispositivos mÛveis, os participantes envolvidos foram instruÌdos a n„o se comunicarem verbalmente. Os resultados obtidos mostraram que as informaÁıes de percepÁ„o, facilitaram algumas das aÁıes realizadas pelos participantes, alÈm de indicar que È possÌvel manter o anonimato em ambientes colocalizados que utilizam groupware mÛvel, apesar das eventuais reaÁıes dos participantes ‡s informaÁıes de percepÁ„o.},
  keywords-original = {ambientes colocalizados; equipes distribuÌdas; groupware mÛvel; trabalho cooperativo apoiado por computador},
  lang = {pt},
  title-original = {Investigando o Anonimato de Usu·rios num Ambiente Colocalizado utilizando um Groupware MÛvel}
}

@INPROCEEDINGS{Costa.Souza_2010,
  author = {Jean Marcel Reis Costa and Cleidson Ronald Botelho Souza},
  title = {Analyzing the Scalability of Awareness Networks in a Distributed Software Development Project},
  crossref = {proceedings:sbsc:2010},
  abstract = {Awareness has been a very important concept in the CSCW field. Arguably, this concept is about the fact that an actor needs to monitor the work of his colleagues and, at the same time, inform them about his own work. This facilitates the coordination of collaborative activities. Despite important previous work on this topic, none directly addresses the number of actors that each actor should monitor and, similarly, the number of actors this same actor should inform their activities to. This set of actors is called the 'awareness network'. This paper presents an analysis of the scalability of awareness networks in the context of a large-scale distributed software development project. Our results can be used to inform the design of tools for collaborative software development.},
  keywords = {scalability; distributed software development},
  pages = {103--110},
  doi = {10.1109/SBSC.2010.22},
  year = {2010},
  abstract-original = {Ao longo dos anos muitos trabalhos sobre o conceito de awareness foram publicados. Diversas formas de representar este conceito, bem como definiÁıes divergentes ou complementares foram apresentadas. De um modo geral, a idÈia de awareness se refere ao fato de que um ator precisa, ao mesmo tempo, estar ciente do trabalho de seus colegas e informar seus colegas sobre seu prÛprio trabalho. Esta percepÁ„o sobre o trabalho dos colegas facilita a coordenaÁ„o de atividades colaborativas. Apesar das diferentes definiÁıes, nenhuma delas aborda diretamente o n˙mero de atores sobre os quais um ator precisa estar ciente e, de maneira similar, o n˙mero de atores para os quais este mesmo ator deve informar suas atividades. Baseado em nossos trabalhos anteriores, estes atores formam as chamadas redes de awareness. Esse artigo visa reduzir essa limitaÁ„o dos trabalhos anteriores, apresentando dados sobre a escala destas redes de awareness. Estes dados s„o baseados em um estudo de caso com um projeto distribuÌdo de desenvolvimento de software, o Jazz. Os resultados da an·lise permitir„o entender melhor a escalabilidade das redes de awareness ao longo de um projeto e podem nortear futuras pesquisas nessa ·rea.},
  keywords-original = {escalabilidade; desenvolvimento distribuÌdo de software},
  lang = {pt},
  title-original = {Analisando a escalabilidade das redes de awareness de um projeto de software distribuÌdo}
}

@INPROCEEDINGS{Freire.Figueiredo_2010,
  author = {VinÌcius P. M. Freire and Daniel R. Figueiredo},
  title = {Ranking in Collaboration Networks Using a Relationship Intensity Metric},
  crossref = {proceedings:sbsc:2010},
  abstract = {Collaboration networks are social networks in which relationships represent some kind of professional collaboration. The study of collaboration networks can help identify members that are important or influential within a given community. This work is divided into two parts. The first part is a study of the topological properties of two collaboration networks: the global collaboration network and the Brazilian collaboration network of authors of scientific papers within the area of Computer Science. The second part presents a ranking metric for vertices based on the intensities of their relationships. Using the proposed metric and other more classical metrics, we rank the researchers in Brazil in Computer Science. The proposed metric was compared with subjective evaluation of researchers made by CNPq. The results show the effectiveness of the proposed metric in identifying influential researchers when compared to another metrics in the literature.},
  keywords = {coauthorship networks; intensity of relationship; ranking metric},
  pages = {71--78},
  doi = {10.1109/SBSC.2010.18},
  year = {2010},
  abstract-original = {Redes de colaboraÁ„o s„o redes sociais nas quais os relacionamentos entre indivÌduos representam algum tipo de colaboraÁ„o profissional. O estudo de redes de colaboraÁ„o pode ajudar a identificar indivÌduos que sejam influentes ou importantes dentro de uma determinada comunidade. Este trabalho est· dividido em duas partes. A primeira parte constitui um estudo das propriedades topolÛgicas de duas redes de colaboraÁ„o: a rede de colaboraÁ„o mundial e a rede de colaboraÁ„o brasileira de autores de artigos cientÌficos da ·rea de CiÍncia da ComputaÁ„o. A segunda parte apresenta uma mÈtrica para ranqueamento de vÈrtices baseada na intensidade de relacionamento. Utilizando a mÈtrica proposta e outras mÈtricas cl·ssicas, fazemos um ranqueamento dos pesquisadores que atuam no Brasil na ·rea de CiÍncia da ComputaÁ„o. A avaliaÁ„o dos resultados foi feita atravÈs da comparaÁ„o com a avaliaÁ„o subjetiva de pesquisadores feita pelo CNPq. Os resultados evidenciam a efic·cia da mÈtrica em identificar indivÌduos influentes quando comparada a outras mÈtricas presentes na literatura.},
  keywords-original = {redes de colaboraÁ„o; intensidade de relacionamento; mÈtrica para ranqueamento},
  lang = {pt},
  title-original = {Ranqueamento em Redes de ColaboraÁ„o Utilizando uma MÈtrica Baseada em Intensidade do Relacionamento}
}

@INPROCEEDINGS{Gadelha.etal_2010,
  author = {Bruno Gadelha and Elder Cirilo and Hugo Fuks and Carlos J. P. Lucena and Castro Jr, Alberto and Marco AurÈlio Gerosa},
