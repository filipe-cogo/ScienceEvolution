@INPROCEEDINGS{Lima.etal_2010,
  author = {Marcio Passos Lima and JosÈ Maria N. David and Benedito Tourinho Dantas},
  title = {Risk Management and Context in a Collaborative Project Management Environment for Software Development},
  crossref = {proceedings:sbsc:2010},
  abstract = {Many events with uncertain results, named risks, can occur during software development process. These risks and their impacts can be determined from a set of context elements in which the software project is inserted, as well as the software life cycle. In a collaborative projects management environment, risks associated with the collaboration activities are related to the project risks. The Web-based Groupware on Project Management System (WGPMS) is an infrastructure that aims to support the collaborative project activities. This environment has a module (Risys) that provides the intelligent identification and the qualitative analysis of the project risks. However, it does not relate the project risks to those which are associated to the low collaboration rate. Moreover, it does not consider the involved context elements which influence the software development process considering the life cycle phases of the RUP model. The goal of this work is to present the modifications in the Risys in order to enhance the risk management in WGPMS. The proposed solution uses ontology for the context elements representation as well as for the RUP model phases. In addition, it uses taxonomy and a qualitative analysis of the risks. Some simulations which were done in order to evaluate the ontology are presented here.},
  keywords = {risk analysis; context; ontology; RUP model},
  pages = {95--102},
  doi = {10.1109/SBSC.2010.21},
  year = {2010},
  abstract-original = {In˙meros eventos de resultados incertos, denominados riscos, podem ocorrer durante o processo de desenvolvimento de software. Os riscos, e os seus impactos, podem ser determinados a partir de um conjunto de elementos de contexto no qual o projeto est· inserido, assim como, pela fase do ciclo de vida do software. Em um ambiente colaborativo de gest„o de projetos, os riscos associados ‡s atividades de colaboraÁ„o se relacionam com os riscos de projeto. O Web-based Groupware on Project Management System (WGPMS) È uma infraestrutura cujo objetivo È apoiar as atividades colaborativas de projeto. Este ambiente possui um mÛdulo (Risys) para prover a identificaÁ„o inteligente e a an·lise qualitativa dos riscos de um projeto. Entretanto, ele n„o relaciona os riscos de projeto ‡queles associados ‡ ausÍncia ou ‡ baixa colaboraÁ„o, nem tampouco considera a influÍncia dos elementos de contexto envolvidos no desenvolvimento de software considerando-se as fases do ciclo de vida do modelo RUP. O objetivo deste trabalho È apresentar as modificaÁıes na ferramenta Risys para ampliar o tratamento de riscos no WGPMS. A soluÁ„o proposta utiliza ontologias para a representaÁ„o dos elementos de contexto de software, e das fases do modelo RUP e, finalmente, a taxonomia e an·lise qualitativa dos riscos. Algumas simulaÁıes realizadas para a avaliaÁ„o das ontologias s„o tambÈm apresentadas.},
  keywords-original = {An·lise de risco; contexto; ontologia; modelo RUP},
  lang = {pt},
  title-original = {Gerenciamento de riscos e contexto em ambientes colaborativos de gest„o de projetos de desenvolvimento de software}
}

