@INPROCEEDINGS{Barros.etal_2009,
  author = {Raphael Lima Belem Barros and Carina Frota Alves and Geber Lisboa Ramalho},
  title = {Investigating the Communication Process in Multidisciplinary Game
	Development Teams},
  year = {2009},
  pages = {61--69},
  abstract = {The game development process is a complex activity that requires a team composed by members with different backgrounds. There is a consensus regarding the importance of multidisciplinary teams in the game development community. However, the effective communication and coordination of work involving multidisciplinary teams is a challenge. This paper presents the results of a qualitative research conducted in a game developing company to investigate the main characteristics and difficulties involved in the communication process of multidisciplinary teams.},
  abstract-original = {O processo de desenvolvimento de um jogo e uma atividade complexa,
	que exige uma equipe desenvolvimento composta por individuos com
	diferentes formacões. Existe um consenso na comunidade de jogos sobre
	a importância de equipes multidisciplinares. No entanto, a efetiva
	comunicacao e coordenacao do trabalho entre membros de uma equipe
	multidisciplinar e um desafio. Este artigo apresenta os resultados
	de um estudo qualitativo realizado em uma empresa desenvolvedora
	de jogos com o objetivo de investigar as principais caracteristicas
	e dificuldades envolvidas no processo de comunicacao de equipes multidisciplinares.},
  crossref = {proceedings:sbsc:2009},
  doi = {10.1109/SBSC.2009.21},
  keywords = {communication; multidisciplinary teams; games; qualitative research; ethnography},
  keywords-original = {comunicacao; equipes multidisciplinares; jogos; pesquisa qualitativa;
	etnografia},
  lang = {pt},
  title-original = {Investigando o Processo de Comunicacao em Equipes Multidisciplinares
	de Jogos}
}

@INPROCEEDINGS{Benevenuto.etal_2011,
  author = {Fabricio Benevenuto and Diego Silveira and Thalisson Oliveira and Leonardo Bombonato and Reinaldo Fortes and Alvaro Pereira Jr},
  title = {Understanding the Brazilian Twittersphere},
  year = {2011},
  pages = {1--8},
  abstract = {Twitter has been constantly growing as an important system where users discuss about everything, expressing opinions, political view, sexual orientation, and even their mood like happiness or sadness. Social networks are pointed as places where users influence and are influenced by others, being a perfect environment for word-of-mouth marketing, advertisement, and political campaigns. In order to offer a better understand of the use of Twitter in Brazil, this work provides a wide characterization of Brazilian users in Twitter as well as a deep understand of the content posted by Brazilians in Twitter. We correlate Brazilian demographic data with geographic data from the Twitter users to show that some Brazilian states are underestimated in Twitter. Additionally, we characterize the different linguistic patterns adopted, we analyzed the most propagated URLs, and we identified the most influential Brazilian users in Twitter on each Brazilian region.},
  abstract-original = {O Twitter vem constantemente crescendo como um importante sistema
	onde usuarios discutem sobre tudo, expressando opiniões, visao politica,
	orientacao sexual e ate mesmo humor, como fecilidade ou tristeza.
	Redes sociais sao apontadas como locais onde usuarios influenciam
	e sao influenciados por outros sendo, portanto, ambientes perfeitos
	para a realizacao de marketing boca-a-boca, propagandas e campanhas
	politicas. Com o intuito de oferecer entendimento sobre o uso do
	Twitter no Brasil, este trabalho provê uma ampla caracterizacao dos
	usuarios brasileiros no Twitter e do conteudo postado por esses usuarios.
	nos correlacionamos dados demograficos brasileiros com dados da localizacao
	do Twitter para mostrar que alguns estados brasileiros estao subestimados
	nesse sistema. Alem disso, nos caracterizamos os direntes padrões
	linguisticos adotados, analisamos as URLs mais propagadas, e identificamos
	os usuarios brasileiros mais influentes no Twitter em cada regiao
	brasileira.},
  crossref = {proceedings:sbsc:2011},
  keywords = {Twitter; microblog; Web 2.0},
  keywords-original = {Twitter; microblog; web 2.0},
  lang = {pt},
  title-original = {Entendendo a Twitteresfera Brasileira}
}

@INPROCEEDINGS{Berkenbrock.etal_2010,
  author = {Carla Diacui Medeiros Berkenbrock and A. P. C. Silva and Celso Massaki Hirata and Clovis Torres Fernandes and Mauro C. Pichiliani},
  title = {Investigating Users Anonymity in a Collocated Mobile Groupware Environment},
  year = {2010},
  pages = {47--54},
  abstract = {Some activities in presential meetings require the anonymous participation while others demand publicity. This paper investigates the problem of keeping the anonymity of participantes in colocated environments, which use mobile groupware. The mobile groupware both allows accomplishing the activites and keeps the anonymity. For the study, an experiment where participants are colocated was undertaken, however, in order to assess the influence of the reaction to awareness provided by the devices, the participants were instructed to not communicate verbally. The preliminaty results showed that the awareness information made some of the actions performed by the participants ease, besides indicating that it is possible to keep the anonymity in colocated environment that uses mobile groupware despite of any kind of the eventual participants' reactions to awareness information.},
  abstract-original = {Certas atividades em reuniões presenciais exigem o anonimato dos participantes
	enquanto outras demandam publicidade. Este artigo investiga o problema
	de manter o anonimato dos participantes em ambientes colocalizados,
	que utilizam o groupware movel. O groupware movel permite realizar
	as atividades e tambem mantem anonimato. para investacao, foi realizado
	um estudo de caso onde os participantes estao colocalizados; contudo,
	de modo a avaliar a influência da reacao à percepcao fornecidos pelos
	dispositivos moveis, os participantes envolvidos foram instruidos
	a nao se comunicarem verbalmente. Os resultados obtidos mostraram
	que as informacões de percepcao, facilitaram algumas das acões realizadas
	pelos participantes, alem de indicar que e possivel manter o anonimato
	em ambientes colocalizados que utilizam groupware movel, apesar das
	eventuais reacões dos participantes às informacões de percepcao.},
  crossref = {proceedings:sbsc:2010},
  doi = {10.1109/SBSC.2010.15},
  keywords = {co-located environments; distributed teams; mobile groupware; computer-supported cooperative work},
  keywords-original = {ambientes colocalizados; equipes distribuidas; groupware movel; trabalho
	cooperativo apoiado por computador},
  lang = {pt},
  title-original = {Investigando o Anonimato de Usuarios num Ambiente Colocalizado utilizando
	um Groupware Movel}
}

@INPROCEEDINGS{Berkenbrock-Hirata2008,
  author = {Carla Diacui Medeiros Berkenbrock and Celso Massaki Hirata},
  title = {Implementation and analysis of usa of an cooperation edition application
	for mobile devices},
  year = {2008},
  pages = {99--110},
  abstract = {Supporting mobile cooperative work with synchronous applications that require consistency of data is a challenge due to the constraints imposed by both mobile devices and wireless network. The development of techniques for designing flexible cooperative systems that better fit the mobile users is required. However, both techniques and applications are still scarce and there are doubts over the effectiveness of such applications in the CSCW research community. In this article we developed a synchronous application that supports cooperative edition by mobile users. The usage of the application provides an analysis of how the limitations of mobile devices influence the success of synchronous mobile cooperative work.},
  abstract-original = {O suporte ao trabalho cooperativo movel com aplicacões sincronas que
	requerem consistência de dados e um desafio devido às limitacões
	impostas por dispositivos moveis e pela rede de comunicacao sem fio.
	Entao, e necessario o desenvolvimento de tecnicas para projetar sistemas
	de cooperativos flexiveis que se adaptem melhor a mobilidade dos
	usarios. Contudo, existe uma falta tanto de tecnicas como de aplicacões
	e, ainda, existem duvidas quanto à efetividade das aplicacões na
	comunidade de pesquisa de CSCW. Neste artigo foi desenvolvida uma
	aplicacao sincrona para possibilitar a edicao cooperativa a partir
	de dispositivos moveis. O uso da aplicacao proporciona uma analise
	de como as limitacões dos dispositivos moveis influenciam o sucesso
	do trabalho cooperativo movel sincrono.},
  crossref = {proceedings:sbsc:2008},
  doi = {10.1109/SBSC.2008.9},
  lang = {pt},
  title-original = {Implementacao e Analise de Uso de uma Aplicacao para Edicao Cooperativa
	em Dispositivos Moveis}
}

@INPROCEEDINGS{Berkenbrock.etal_2009,
  author = {Carla Diacui Medeiros Berkenbrock and Celso Massaki Hirata and Clovis Torres Fernandes and Mauro C. Pichiliani},
  title = {Usability Requirements for the Development and Evaluation of Mobile
	Groupware Systems},
  year = {2009},
  pages = {10--18},
  abstract = {Usability is an important factor affecting the user's productivity. However, evaluating groupware usability is a complex task, especially in a mobile environment. In this paper a study with eight requirements to explore usability in a mobile groupware environment is presented. A prototype application was developed followed by a series of evaluations to observe the potential of the requirements. Results show that these requirements should be considered during the development of a mobile groupware in order to help designers to identify usability weaknesses in a mobile groupware.},
  abstract-original = {A usabilidade e um fator importante que afeta a produtividade do usuario.
	No entanto, avaliar a usabilidade de um sistema de groupware e uma
	tarefa complexa, especialmente em um ambiente movel. Neste trabalho,
	apresenta-se um estudo com oito requisitos para explorar a usabilidade
	de ambientes de groupware movel. Adicionalmente, foi desenvolvida
	uma aplicacao prototipo e foram realizadas avaliacões desse prototipo
	para observar o potencial desses requisitos. Os resultados mostram
	que esses requisitos devem ser considerados durante o desenvolvimento
	do groupware movel, a fim de ajudar os projetistas a identificar
	pontos fracos relacionados com a usabilidade do groupware movel.},
  crossref = {proceedings:sbsc:2009},
  doi = {10.1109/SBSC.2009.10},
  keywords = {mobile groupware; usability requirements; groupware evaluating},
  keywords-original = {groupware movel; requisitos de usabilidade; avaliacao de groupware},
  lang = {pt},
  title-original = {Requisitos de Usabilidade para o Desenvolvimento e Avaliacao de Aplicacões
	Cooperativas Moveis}
}

@INPROCEEDINGS{Bezerra-Wainer2006,
  author = {Fabio Bezerra and Jacques Wainer},
  title = {Selecting Anomalous Traces from Workflow Event Logs},
  year = {2006},
  pages = {98--106},
  note = {Gerência e coordenacao de workflow; Outros},
  abstract = {This work shows a model to detect a set of anomalous traces in a log generated by a business process management system. The detection of an anomalous trace is based on the inclusion cost of a trace in a workflow model constructed by workflow mining based on rewriting rules. The inclusion cost is evaluated as follows: (i) one trace is removed from log; (ii) a workflow model is mined from a random subset of remaining traces of log; (iii) the removed trace is merged over model. The inclusion cost is the amount of modification of a model after the inclusion of trace on it. If a trace produces a modification on the model, it will be selected as an abnormal or anomalous trace, otherwise it is an instance of the mined model. This paper explains how the inclusion cost works and the proposed model to select the anomalous traces. Moreover, we comment the results of experiments and some limitations.},
  abstract-original = {Este trabalho apresenta um modelo de deteccao de traces anomalos gerados
	por um sistema gerenciador de processos. A deteccao e baseada no
	custo de inclusao de um trace sobre um modelo construido atraves
	de um algoritmo de mineracao de workflow que utiliza um conjunto
	de heuristicas. O calculo do custo de inclusao e realizado como segue:
	(i) um trace do logo e removido; (ii) um modelo de workflow baseado
	em um subconjunto dos traces restantes e descoberto; e (iii) o trace
	removido e adicionado sobre o modelo minerado. O custo de inclusao
	representa o tamanho da modificacao de um modelo apos a inclusao
	de um trace no mesmo. Se um trace modifica o modelo, entao ele sera
	selecionado como anomalo, senao indica uma instância do modelo. Este
	artigo explica o metodo proposto, alguns exemplos, bem como nosso
	avaliacao do metodo.},
  crossref = {proceedings:sbsc:2006},
  keywords = {Workflow Mining, Anomaly Detection, Information Security},
  lang = {en}
}

@INPROCEEDINGS{Bortoli-etal2006,
  author = {Eliane Maria Bortoli and Cesar Augusto Tacla and Fabricio Enembreck},
  title = {Context Awareness of Activities for Identification of Potential Communities},
  year = {2006},
  pages = {48--57},
  note = {Percepcao (awareness); Grupos e Comunidades Virtuais},
  abstract = {Employees, physically or geographically dispersed, of an organization may share a virtual environment of work. Interactions in real environments result from individuals having common points in their activities or by necessity of coordinating their actions among other reasons. In virtual environments human perception is limited, and it is necessary to introduce it by some mechanism. To perceive the activities of other individuals in virtual environments is important in the flow and naturalness of the work. In order to increase the perception of individuals that perform great part of their activities in networked computers, this work presents a computational model that allows to represent the context of their activities and to put them in correlation to identify potential communities of employees. The perception model allows the individuals to perceive others that perform activities whose contexts are similar. This work distinguishes from others because it takes into consideration the contents of the documents, i.e. the traces of an activity in order to build its context.},
  abstract-original = {Atraves das redes de computadores e possivel que colaboradores de
	uma organizacao, fisica ou geograficamente dispersos, compartilhem
	um mesmo ambiente de trabalho de forma virtual. Interacões ocorrem
	nesses ambientes porque individuos realizam atividades que possuem
	pontos de interseccao, tais como, relacões pessoais e assuntos de
	interesse. Nesse caso, a percepcao das atividades de outros individuos
	se torna essencial, pois o fluxo e naturalidade do trabalho sao dificultados
	em funcao da distância e da impessoalidade inerentes. A fim de aumentar
	a percepcao dos individuos que realizam grande parte de suas atividades
	em computadores interconectados, esse trabalho visa apresentar um
	modelo computacional que permite capturar e representar o contexto
	de atividade dos individuos e coloca-los em correlacao para identificar
	comunidades potenciais. O modelo de percepcao permite aos individuos
	perceberem outros que realizam ou realizaram atividades em contextos
	similares. Apresenta-se uma tecnica que se distingue das tecnicas
	normalmente empregadas em percepcao, pois a maioria delas nao leva
	em consideracao o conteudo pertencente ao contexto de trabalho dos
	individuos, considerando apenas a presenca/ausência dos individuos
	ou as atividades realizadas nesse contexto o que dificulta e torna
	imprecisa a identificacao de agrupamentos desses individuos.},
  crossref = {proceedings:sbsc:2006},
  keywords = {Awareness, Perception, Context of activity, Identification of communities},
  keywords-original = {Percepcao, Contexto de atividades, Identificacao de comunidades},
  lang = {pt},
  title-original = {Percepcao de Contextos de Atividade para Identificacao de Comunidades
	Potenciais}
}

