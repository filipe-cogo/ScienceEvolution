@INPROCEEDINGS{Camargo-etal2008,
  author = {Luis Theodoro O. Camargo and Danilo Braga Lima and Melise Maria Veiga Paula},
  title = {{NK-Sys}: a negotiation support system to facilitate the dissemination
	of knowledge},
  year = {2008},
  pages = {244--253},
  abstract = {On negotiation process, taking information about the counterpart and the external scenario may to make easy the improvement of results. The acquired experience during a negotiation can be important and maybe can become a powerful tool on further negotiations. Therefore, the allied negotiators' experience, when shared, can facilitate the decision-making during the negotiation. In this paper, we will present an environment to support a negotiation process based on a model of knowledge management. This environment is able to manage the existing knowledge on each negotiation and to create efficient ways of interaction among allied negotiators to exchange experiences and to disseminate the acquired knowledge.},
  abstract-original = {No processo de negociacao ter informacões sobre a contraparte e o
	cenario externo pode facilitar a obtencao de bons resultados. A experiência
	adquirida em uma negociacao pode ser importante e talvez venha a
	se tornar uma poderosa ferramenta em futuras negociacões. Portanto
	a experiência dos negociadores aliados, quando compartilhada, pode
	facilitar a tomada de decisao durante a negociacao. Neste trabalho
	sera apresentado um ambiente de apoio à negociacao baseado em um
	modelo de gestao do conhecimento, que devera ser capaz de gerenciar
	o conhecimento existente em cada negociacao e criar meios eficientes
	de interacao entre negociadores aliados para que eles troquem experiências
	e disseminem o conhecimento adquirido.},
  crossref = {proceedings:sbsc:2008},
  doi = {10.1109/SBSC.2008.11},
  lang = {pt},
  title-original = {NK-Sys: um Sistema de Suporte a Negociacao para Facilitar a Disseminacao
	do Conhecimento}
}

