@INPROCEEDINGS{Lemos-Souza2008,
  author = {Alline Lemos and Cleidson R. B. Souza},
  title = {Challenges for knowledge management on software development: results
	of an etnographic study},
  year = {2008},
  pages = {77--87},
  abstract = {Software development deals with large volums of knowledge once it joins people collaborating among themselves and working at the most diverse activies. If, on one hand, besides its huge proportion, the knowledge inherent to software engineering grows successively, on the other hand the companies faces several issues on identifying the content, its localization and properly using it. Within this context emerges the concept of Knowledge Engineering. This paper presents an etnographic study conducted in a real software development environment. The goal of this study is to suggest solutions suitable for the identified difficulties and, as a result, improve the quality to the development process already in place in the company.},
  abstract-original = {Desenvolvimento de software lida com grandes volumes de conhecimento
	uma vez que reune diversas pessoas colaborando entre si e trabalhando
	com as mais distintas atividades. Se de um lado, alem de possuir
	proporcões imensas, o conhecimento presente na area de ES cresce
	sucessivamente, de outro as empresas possuem problemas em identificar
	o conteudo, a localizacao e o uso deste conhecimento. Dentro deste
	contexto surge o conceito de Gerência de Conhecimento. Este artigo
	apresenta um estudo etnografico realizado em um ambiente real de
	desenvolvimento de software. O objetivo deste estudo e sugerir solucões
	adequadas às dificuldades identificadas e, assim, atribuir mais qualidade
	ao processo de desenvolvimento ja adotado pela empresa.},
  crossref = {proceedings:sbsc:2008},
  doi = {10.1109/SBSC.2008.36},
  lang = {pt},
  title-original = {Desafios da Gerência de Conhecimento no Desenvolvimento de Software:
	Resultados de um Estudo Etnografico}
}

@INPROCEEDINGS{Lima.etal_2010,
  author = {Marcio Passos Lima and Jose Maria N. David and Benedito Tourinho Dantas},
  title = {Risk Management and Context in a Collaborative Project Management
	Environment for Software Development},
  year = {2010},
  pages = {95--102},
  abstract = {Many events with uncertain results, named risks, can occur during software development process. These risks and their impacts can be determined from a set of context elements in which the software project is inserted, as well as the software life cycle. In a collaborative projects management environment, risks associated with the collaboration activities are related to the project risks. The Web-based Groupware on Project Management System (WGPMS) is an infrastructure that aims to support the collaborative project activities. This environment has a module (Risys) that provides the intelligent identification and the qualitative analysis of the project risks. However, it does not relate the project risks to those which are associated to the low collaboration rate. Moreover, it does not consider the involved context elements which influence the software development process considering the life cycle phases of the RUP model. The goal of this work is to present the modifications in the Risys in order to enhance the risk management in WGPMS. The proposed solution uses ontology for the context elements representation as well as for the RUP model phases. In addition, it uses taxonomy and a qualitative analysis of the risks. Some simulations which were done in order to evaluate the ontology are presented here.},
  abstract-original = {Inumeros eventos de resultados incertos, denominados riscos, podem
	ocorrer durante o processo de desenvolvimento de software. Os riscos,
	e os seus impactos, podem ser determinados a partir de um conjunto
	de elementos de contexto no qual o projeto esta inserido, assim como,
	pela fase do ciclo de vida do software. Em um ambiente colaborativo
	de gestao de projetos, os riscos associados às atividades de colaboracao
	se relacionam com os riscos de projeto. O Web-based Groupware on
	Project Management System (WGPMS) e uma infraestrutura cujo objetivo
	e apoiar as atividades colaborativas de projeto. Este ambiente possui
	um modulo (Risys) para prover a identificacao inteligente e a analise
	qualitativa dos riscos de um projeto. Entretanto, ele nao relaciona
	os riscos de projeto àqueles associados à ausência ou à baixa colaboracao,
	nem tampouco considera a influência dos elementos de contexto envolvidos
	no desenvolvimento de software considerando-se as fases do ciclo
	de vida do modelo RUP. O objetivo deste trabalho e apresentar as
	modificacões na ferramenta Risys para ampliar o tratamento de riscos
	no WGPMS. A solucao proposta utiliza ontologias para a representacao
	dos elementos de contexto de software, e das fases do modelo RUP
	e, finalmente, a taxonomia e analise qualitativa dos riscos. Algumas
	simulacões realizadas para a avaliacao das ontologias sao tambem
	apresentadas.},
  crossref = {proceedings:sbsc:2010},
  doi = {10.1109/SBSC.2010.21},
  keywords = {risk analysis; context; ontology; RUP model},
  keywords-original = {Analise de risco; contexto; ontologia; modelo RUP},
  lang = {pt},
  title-original = {Gerenciamento de riscos e contexto em ambientes colaborativos de gestao
	de projetos de desenvolvimento de software}
}

@INPROCEEDINGS{Linhares-etal2008,
  author = {Giovana B. R. Linhares and Marcos R. S. Borges and Pedro Antunes},
  title = {Negociacao-Colaboracao nas Revisões Tecnicas Formais de Especificacões
	Funcionais},
  booktitle = {Sistemas Colaborativos, 2008 Simpa³sio Brasileiro de},
  year = {2008},
  pages = {122--133},
  abstract = {In the most of today's organizations, tasks are performed in groups in which the negotiation is necessary to arrive at a result. During the search for solutions that are accepted by all, are carried out sessions of "brainstorm" and meetings involving groups, possibly located in different places. This work aims to increase the existent knowledge about the dynamics of the binomial "negotiation-cooperation," specifically during the formal technical reviews on functional specification of software. The structuring of this process and a support tool are propossed as computer support.},
  abstract-original = {Cada vez mais no dia-a-dia das organizacões, sao realizadas tarefas
	em grupo nas quais e necessaria a negociacao para se chegar a um
	resultado. Durante a busca de solucões que sejam aceitas por todos,
	sao realizadas sessões de ``brainstorm'' e reuniões envolvendo grupos
	de pessoas, possivelmente localizadas em lugares diferentes. Este
	trabalho visa aumentar o conhecimento existente acerca da dinâmica
	do binomio ``negociacao-colaboracao'', mais especificamente deflagrada
	durante as revisões tecnicas formais de especificacao funcionais
	de um software. A estruturacao do referido processo e uma ferramenta
	de apoio sao propostos como suporte computacional.},
  crossref = {proceedings:sbsc:2008},
  doi = {10.1109/SBSC.2008.24},
  lang = {pt},
  title-original = {Negociacao-Colaboracao nas Revisões Tecnicas Formais de Especificacões
	Funcionais}
}

