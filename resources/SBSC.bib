}

@INPROCEEDINGS{Costa.etal_2009,
  author = {Ricardo Araujo Costa and Edeilson Milhomem Silva and Rafael Ribeiro and Silvio R. L. Meira},
  title = {A Knowledge Management Process Using Social Networks},
  year = {2009},
  pages = {154--160},
  abstract = {This case study describes the effects of using a Web Based Social Network (WBSN) approach to Knowledge Management in a Brazilian software development organization. During this work it was proposed a Knowledge Management process, with some metrics related to its phases. These metrics have been monitored since January 2008 and have been analyzed in order to verify the efficiency of this approach. In order to give a better understanding of the concepts related to Social Networks and Knowledge Management, it is presented a brief introduction to each one of them, including an evaluation of existing Knowledge Management approaches.},
  abstract-original = {Este estudo de caso descreve os efeitos do uso de uma abordagem baseada
	em Redes Sociais Web para Gestao do Conhecimento por um instituto
	de inovacao Brasileiro. Durante este trabalho foi necessario propor
	um mapeamento de processo de Gestao do Conhecimento para utilizacao
	de Redes Sociais, com um conjunto de metricas associas a cada um
	de seus estagios. Estas metricas foram monitoradas de Janeiro a Dezembro
	de 2008 com o objetivo de verificar a eficiência desta abordagem.
	Para garantir um melhor entendimento dos conceitos associados a Redes
	Sociais e Gestao do Conhecimento, uma breve introducao a cada um
	destes e apresentada, incluindo a avaliacao de algumas abordagens
	existentes para a Gestao do Conhecimento.},
  crossref = {proceedings:sbsc:2009},
  doi = {10.1109/SBSC.2009.14},
  keywords = {corporate social networks; knowledge management; metrics},
  keywords-original = {Redes Sociais Corporativas; Gestao do Conhecimento; Metricas},
  lang = {pt},
  title-original = {Um Processo para Gestao do Conhecimento Organizacional atraves de
	Redes Sociais}
}

@INPROCEEDINGS{Cordeiro-etal2006,
  author = {Weverton Luis da Costa Cordeiro and Rafael Esteves and Breno Franca and Cleidson R. B. Souza},
