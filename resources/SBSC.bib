@INPROCEEDINGS{Carlos-Raposo2006,
  author = {Eduardo Telles Carlos and Alberto B. Raposo},
  title = {Changing the Collaboration Grade of a Tool for Desktop Sharing by
	Plugins},
  year = {2006},
  pages = {140--149},
  abstract = {This paper presents the experience of developing VDTool (Virtual Desktop Tool), a tool to support collaborative processes between two participants, providing information exchange by means of screen capturing and transmitting. The application appeared as a consequence of the necessity of simplifying an existing videoconferencing tool. On top of an initial version, plugins were developed in order to add new cooperation and coordination facilities to the application. The 3C collaboration model was used as an analysis tool in this development.},
  abstract-original = {Este artigo apresenta a experiência de desenvolvimento do VDTool (Virtual
	Desktop Tool), uma ferramenta para auxiliar processos colaborativos
	entre dois participantes, permitindo a troca de informacões via captura
	e envio de tela. A aplicacao surgiu da necessidade de simplificacao
	de uma ferramenta de videoconferência existente. A partir de uma
	versao inicial, foram desenvolvidos plugins para incluir novos recursos
	de cooperacao e coordenacao na aplicacao. O modelo de colaboracao
	3C serviu como mecanismo de analise para este desenvolvimento.},
  comment = {Sistemas colaborativos e estudos de caso; Outros},
  crossref = {proceedings:sbsc:2006},
  keywords = {Collaboration, 3C Collaboration Model, Plugins},
  keywords-original = {Colaboracao, Modelo de Colaboracao 3C, Plugins},
  lang = {pt},
  title-original = {Alterando o Grau de Colaboracao de uma Ferramenta de Compartilhamento
	de Desktop por Meio de Plugins}
}

@INPROCEEDINGS{Carneiro-etal2008,
  author = {Pedro Jorge Santana Carneiro and Ricardo Araujo Costa and Silvio R. L. Meira},
  title = {A tool to support knowlege management and automatic reading recommendation
	in software factories},
  year = {2008},
  pages = {276--286},
  abstract = {This paper presents the preliminary results of GReConARS, a system to manage and recommend knowledge automatically to software factory project professionals. The readings recommendations are resulted from information qualified as relevant by the project community to itself and are based on the word of mouth technique, aiming to reduce the time needed by new professionals to understand the context in which the project is inserted. Besides, this system promotes the continuing learning of professionals on the project through personalized recommendations, based on the interests shown by these professionals on their previous evaluations.},
  crossref = {proceedings:sbsc:2008},
  doi = {10.1109/SBSC.2008.15},
  title-original = {Uma Ferramenta para Realizacao de Gestao de Conhecimento e Recomentacao
	Automatica de Leituras em Fabricas de Software}
}

@INPROCEEDINGS{Carneiro.etal_2009,
  author = {Pedro Jorge Santana Carneiro and Ricardo Araujo Costa and Silvio R. L. Meira},
  title = {{MaRKSoNe}: A Tool for Supporting Knowledge Management in Software
	Projects},
  year = {2009},
  pages = {70--79},
  abstract = {Over the last decades, knowledge management has become one of the most significant factors of organizational success. However, as analyzed in the software factories literature, the adoption of knowledge management processes is not a common practice in this kind of organization. The factors are the most diverse, among is possible to cite the costs in preparing the necessary infrastructure and the recruitment of skilled professionals to carry out knowledge management activities. Besides, this paper presents MaRKSoNe, a system which the main objective is to automatically manage and recommend knowledge to software project professionals. The deployment of MaRKSoNe in a software factory indicated very positive and promising results, such as, a decrease of the necessary effort to perform knowledge management in software projects, and also a decrease of time needed to insert new professionals in the software project context.},
  abstract-original = {Nas ultimas decadas, a gestao do conhecimento tem se tornado um dos
	fatores mais significativos para determinar o sucesso organizacional.
	No entanto, conforme observado na literatura de fabricas de software,
	a adocao de processos de gestao de conhecimento nao e uma pratica
	comumente seguida por esse tipo de organizacao. Os fatores sao os
	mais diversos, entre os quais podem ser citados os custos para preparacao
	da infra-estrutura necessaria e a contratacao de profissionais especializados
	para esse fim. Dessa forma, o presente artigo apresenta o MaRKSoNe,
	um sistema cujo objetivo e gerir e recomendar conhecimentos automaticamente
	para profissionais em projetos de software. Os resultados da implantacao
	desse sistema numa fabrica de software indicaram pontos positivos
	e bastante promissores, como, por exemplo, a reducao do esforco necessario
	para realizar a gestao do conhecimento em projetos de software, e
	a diminuicao do tempo necessario para inserir novos colaboradores
	no contexto do projeto.},
  crossref = {proceedings:sbsc:2009},
  doi = {10.1109/SBSC.2009.15},
  keywords = {Software Factories; Knowledge Management; Recommender Systems; Collaborative Filtering},
  keywords-original = {Fabricas de Software; Gestao do Conhecimento; Sistemas de Recomendacao;
	Filtragem Colaborativa},
  lang = {pt},
  title-original = {MaRKSoNe: Uma Ferramenta para Suporte a Gestao de Conhecimento em
	Projetos de Software}
}

@INPROCEEDINGS{Castro-etal2008,
  author = {Thais Castro and Alberto Castro Jr and Hugo Fuks},
  title = {Learning to program in group},
  booktitle = {Sistemas Colaborativos, 2008 Simpa³sio Brasileiro de},
  year = {2008},
  pages = {45--54},
  abstract = {The technical literature in cognitive science informs that working in groups reaps more benefits than working alone. We are seeing a variety of innovative group programming methodologies like the agile methods. This work examines the findings of a pilot study carried out during the first academic semester of 2007. The subjects were 110 freshmen computing and engineering students taking their first programming course at the Federal University of Amazonas. Based on these findings, it is proposed a programming progression learning scheme, from individual to group programming. Such transition is necessary for students are not used to work in group. In order to evaluate such progression learning scheme a case study is outlined.},
  abstract-original = {A literatura tecnica em ciência cognitiva informa que o trabalho em
	grupo proporciona maiores beneficios que o trabalho individual. Ha
	inumeras metodologias inovadoras para programacao em grupo, como
	por exemplo, os metodos ageis. Este trabalho examina os resultados
	de um estudo piloto aplicado no primeiro semestre acadêmico de 2007.
	Os sujeitos foram 110 calouros de computacao e engenharia matriculados
	em seu primeiro curso de programacao. Baseado nestes resultados,
	um esquema de progressao de aprendizagem de programacao em grupo
	e proposto, o qual prevê uma transicao gradual da pratica individual
	para a programacao em grupo. Tal transicao e necessaria, pois os
	estudantes nao estao acostumados a trabalhar em grupo. A fim de avaliar
	tal esquema de progressao de aprendizagem, e proposto um estudo de
	caso.},
  crossref = {proceedings:sbsc:2008},
  doi = {10.1109/SBSC.2008.31},
  lang = {pt},
  title-original = {Aprendendo a Programar em Grupo}
}

@INPROCEEDINGS{Chaves.etal_2009,
  author = {Ana Paula Chaves and Elisa Hatsue Moriya Huzita and Willian Capato Donega and Vaninha Vieira},
  title = {Context-Based Notification Supporting Distributed Software Teams
	Management and Coordination},
  year = {2009},
  pages = {80--89},
  abstract = {Global Software Development introduced many competitive advantages, however, these advantages brought new challenges together, specially when we talk about communication issues and, consequently, collaborative work participants coordination and management. In this sense, awareness techniques and context management can be used to offer information to project participants, making them perceive the context where workspace actions are occurring. This paper presents DiSEN-Notifier, a notification manager that uses contextual data to send information to collaborative work participants within a distributed software engineering environment. DiSEN-Notifier uses event-based notification, and does not require users to request the information. It also identifies - based on context - who are the participants interested on a specific information keeping them aware of any change at the moment it occurs.},
  abstract-original = {Desenvolvimento Distribuido de Software trouxe diversas vantagens
	competitivas, entretanto, essas vantagens sao acompanhadas de novos
	desafios, especialmente quando se trata das dificuldades de comunicacao
	e, consequentemente, de gerência e coordenacao entre os individuos
	participantes do trabalho colaborativo. Nesse sentido, tecnicas de
	percepcao e gerenciamento de contexto tem sido utilizadas para oferecer
	aos individuos informacões que os tornem capazes de perceber o contexto
	das acões que ocorrem no ambiente de trabalho. Este artigo apresenta
	um gerenciador de notificacões de eventos, denominado DiSEN-Notifier,
	que utiliza informacões contextuais para enviar informacões para
	os participantes do trabalho colaborativo em um ambiente de desenvolvimento
	distribuido de software. O DiSEN-Notifier utiliza notificacões baseadas
	em eventos e envia mensagens automaticamente, sem exigir que os usuarios
	as solicitem. Alem disso, identifica, com base no contexto, quem
	sao os individuos interessados em uma determinada informacao, mantendo
	os usuarios cientes das mudancas no momento em que ocorrem.},
  crossref = {proceedings:sbsc:2009},
  doi = {10.1109/SBSC.2009.30},
  keywords = {notification; coordination; context awareness; global software development},
  keywords-original = {notificacao; coordenacao; percepcao contexto; desenvolvimento distribuido
	de software},
  lang = {pt},
  title-original = {Notificacao Baseada em Contexto como Apoio à Gerência e Coordenacao
	em Equipes de Software Distribuidas}
}

@INPROCEEDINGS{Chaves.etal_2011,
  author = {Ana Paula Chaves and Igor Steinmacher and Vaninha Vieira},
  title = {Social networks and collective intelligence applied to public transportation
	systems: A survey},
  year = {2011},
  pages = {16--23},
  abstract = {Road traffic in big cities is becoming increasingly chaotic. The use of public transportation is an alternative to improve this scenario, since it diminishes the number of private vehicles on the roads. However, to improve its quality is important to understand the problems people are facing when using this kind of transportation. This paper presents the results of a survey conducted with public transportation users which investigates how collaborative systems based on social networks and collective intelligence can support sharing information with the passengers. The results show that there is a scarcity of ways to obtain real-time information related to public transportation and that the use of social network applications and collective intelligence is an interesting way to share and obtain this kind of information.},
  crossref = {proceedings:sbsc:2011},
  keywords = {Intelligent Transportation System, collective intelligence, social network},
  lang = {en}
}

