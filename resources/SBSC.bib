  title-original = {Um Estudo Etnografico do Processo de Previsao de Tempo}
}

@INPROCEEDINGS{Dantas.etal_2009,
  author = {Benedito Tourinho Dantas and Jose Maria N. David and Apoena Jorge N. Avelar and Lucas Assis S. Ferreira and Lucas Miguez S. Jesus},
  title = {{Risys} -- A Tool to Support Risk Management in a Collaborative Project
	Management Environment},
  year = {2009},
  pages = {90--98},
  abstract = {Dealing with work groups is a challenge for organizations where projects are the main focus. During their activities if cooperation is not adequately coordinated and well supported it can provoke significant delays on the project or can put the final product quality at risk. The goal of this paper is to describe the risks control module, named Risys, to support the execution of project developed by the use of Web-based Groupware on Project Management System (WGPMS). This infrastructure is comprised of groupware applications which are based both on computational intelligence and Monte Carlo technique. Experiments which were already carried out reveal valuable results related to the implemented rules on Risys. However, additional case studies need to be carried out from the moment that new applications were integrated on WGPMS, as well as new rules that were added to the database system.},
  abstract-original = {Trabalhar colaborativamente e um desafio para as organizacões baseadas
	em projetos. Durante suas atividades se a cooperacao nao e adequadamente
	coordenada e apoiada pode provocar atrasos significativos no projeto
	ou comprometer a qualidade do produto final. O objetivo deste trabalho
	e descrever o modulo de controle de riscos, denominado Risys, na
	execucao de projetos desenvolvidos pela utilizacao do Web-based Groupware
	on Project Management System (WGPMS). Esta infra-estrutura utiliza
	ferramentas de apoio baseadas em inteligência computacional e na
	tecnica de Monte Carlo. Experimentos realizados mostraram-se satisfatorios
	em relacao às regras implementadas no Risys. Entretanto, novas avaliacões
	em ambiente de producao necessitam ser conduzidas a partir do momento
	em que novas aplicacões sejam integradas ao WGPMS, bem como novas
	regras forem adicionadas ao banco de dados.},
  crossref = {proceedings:sbsc:2009},
  doi = {10.1109/SBSC.2009.31},
  keywords = {collaboration; project management; groupware; risk analysis},
  keywords-original = {colaboracao; gerenciamento de projetos; groupware; analise de riscos},
  lang = {pt},
  title-original = {{Risys} -- Uma Ferramenta de Apoio à Gerência de Riscos em um Ambiente
	Colaborativo de Gestao de Projetos}
}

@INPROCEEDINGS{Dantas-eta2008,
  author = {Benedito Tourinho Dantas and Jose Maria N. David and Gustavo Maia Neto and Ricardo Lacerda Menezes and Ana Paula de Almeida Santos},
  title = {Uma Ferramenta Web de Apoio à Coordenacao de Projetos em um Ambiente
	Colaborativo},
  year = {2008},
  pages = {146--157},
  abstract = {Coordination activities of a group, which is involved in simultaneous or sequential project activities, need tool support aimed to continually evaluate both the participation and contribution rates. These coordination actions happen - at the same time - throughout different project phases (beginning, planning, execution, control and closing). In these phases, participations and contributions rates can be generated by the use of different groupware applications. Therefore, it becomes difficult for the coordinator to identify these rates and assign them to each group member. The goal of this paper is to present a rule-based tool aimed at supporting the coordination of projects which are developed in a collaborative environment. This tool is part of WGPMS (Web-based groupware on project management support system) project.},
  abstract-original = {A coordenacao de um grupo, envolvido nas diferentes atividades simultâneas
	ou seqüenciais de um projeto, necessita do apoio de ferramentas de
	acompanhamento que permitam avaliar continuamente a participacao
	e a contribuicao de cada membro. Essa acao de coordenar acontece
	-- paralelamente -- em diferentes fases de um projeto (inicio, planejamento,
	execucao, controle e encerramento). Nessas fases, participacões e
	contribuicões podem ser materializadas atraves do uso de diferentes
	aplicacões de groupware. Torna-se dificil, portanto, para o coordenador
	identificar os percentuais de participacao e de contribuicao e atribui-los
	a cada membro do grupo. O objetivo deste trabalho e apresentar uma
	ferramenta, baseada na utilizacao de regras, para apoiar a coordenacao
	de projetos desenvolvidos em um ambiente colaborativo. Tal ferramenta
	e um componente do projeto WGPMS (Web-based Groupware on Project
	Management Support System).},
  crossref = {proceedings:sbsc:2008},
  doi = {10.1109/SBSC.2008.19},
  lang = {pt},
  title-original = {Uma Ferramenta Web de Apoio à Coordenacao de Projetos em um Ambiente
	Colaborativo}
}

@INPROCEEDINGS{David.Maciel_2009,
  author = {Jose Maria N. David and Rita Suzana P. Maciel},
  title = {{WGWSOA} -- Implementing Collaboration Services in a Middleware Infrastructure},
  year = {2009},
  pages = {193--201},
  abstract = {Groupware applications are usually built without considering the need to interoperate with other already existing applications. WGWSOA (Web-based groupware Service-Oriented Architecture) is a service-oriented infrastructure, which was designed to support web-based distributed groupware development. To fulfill interoperability requirement it offers both common and specific middleware services which need to be readily interoperable. On this project, a collaboration services has been developed aimed to evaluate interoperability aspects. However, fulfilling groupware interoperability, while considering only data and procedures, is not enough in this context. This paper describes WGWSOA middleware infrastructure, as well as the results obtained throughout its service development. In addition, requirements related to semantic interoperability are discussed aiming to enhance distributed groupware applications development as well as their execution.},
  abstract-original = {Aplicacões de groupware sao freqüentemente construidas sem considerar
	a necessidade de interoperar com outras aplicacões ja existentes.
	A WGWSOA (Web-based Groupware Service-Oriented Architecture) e uma
	infraestrutura orientada a servicos, projetada para apoiar o desenvolvimento
	de groupware distribuido na web. Para tanto, ela oferece servicos
	comuns e especificos de middleware, que necessitam ser prontamente
	interoperaveis. Neste projeto, servicos de colaboracao têm sido desenvolvidos
	no sentido de avaliar aspectos de interoperabilidade. Entretanto,
	tratar a interoperabilidade em groupware considerando os dados e
	procedimentos nao e suficiente neste contexto. Este artigo descreve
	a infra-estrutura de middleware, bem como os resultados obtidos com
	o desenvolvimento desses servicos. Adicionalmente, necessidades relacionadas
	à interoperabilidade semântica sao discutidas buscando-se potencializar
	o desenvolvimento e a execucao de aplicacões de groupware distribuidas.},
  crossref = {proceedings:sbsc:2009},
  doi = {10.1109/SBSC.2009.20},
  keywords = {middleware; service-oriented; groupware; CSCW},
  keywords-original = {middleware; orientacao a servicos; groupware; CSCW},
  lang = {pt}
}

@INPROCEEDINGS{4700785,
  author = {Jose Maria N. David and Marcio G. P. Rosa and Flavia Santoro and Marcos R. S. Borges},
  title = {Evaluating the divergence risk and context loss in groupware},
  year = {2008},
  pages = {55--65},
  abstract = {Group participants can diverge regarding awareness information comprehension initially available in the shared workspace. In addition, such information can become irrelevant or insufficient throughout the interaction, resulting in a loss of context. The goal of this work is to analyze the risk factors related to the context loss as well as the context mismatch in groupware. In order to illustrate this, this paper attempts to clarify these concepts and presents case studies carried out aiming to evaluate how and why these risks occur.},
  abstract-original = {Participantes de um grupo podem divergir em relacao à compreensao
	das informacões de percepcao inicialmente disponibilizadas no espaco
	de trabalho compartilhado; ou entao, tais informacões podem se tornar
	irrelevantes ou insuficientes ao longo da interacao, resultando em
	uma perda de contexto. O objetivo deste trabalho e analisar os fatores
	de risco associados à perda e à divergência de contexto em groupware.
	Para tal, o presente artigo discute esses conceitos e apresenta estudos
	de casos para avaliar como e por que esses riscos ocorrem},
  crossref = {proceedings:sbsc:2008},
  doi = {10.1109/SBSC.2008.17},
  lang = {pt},
  title-original = {Avaliando o Risco da Divergência e da Perda de Contexto em Groupware}
}

@INPROCEEDINGS{Escalfoni-etal2008,
  author = {Rafael E. L. Escalfoni and Carlos A. S. Franco and Marcos R. S. Borges},
  title = {Supporting the collaborative development of ideas using {B2i}: bank
	of novel ideas},
  year = {2008},
  pages = {204--214},
  abstract = {The competitive forces that drive organizations' development have brought great interest to innovation, as the information content of products, processes, and means of production has become the great differentiator among companies. Technological progress has made the innovation process dependent on the interaction of interdisciplinary teams which can be geographically dispersed. The need for communication among the innovation group members makes collaborative tools useful to facilitate mutual understanding, creativity, and innovative work. This paper presents a collaborative tool that supports generating innovative ideas.},
  abstract-original = {As forcas competitivas que impulsionam o desenvolvimento das organizacões
	têm trazido grande interesse ao tema inovacao, pois o aumento do
	conteudo informacional dos produtos, processos e meios de producao
	tem se tornado o grande diferencial entre empresas. O avanco tecnologico
	tornou o processo de inovacao dependente da interacao de equipes
	interdisciplinares, que por vezes encontram-se separadas geograficamente.
	A necessidade de comunicacao entre os membros de grupos de inovacao
	faz das ferramentas colaborativas instrumentos uteis para facilitar
	o entendimento mutuo, a criatividade e o trabalho inovador. O presente
	artigo apresenta uma ferramenta colaborativa que apoia a geracao
	de ideias inovadoras.},
  crossref = {proceedings:sbsc:2008},
  doi = {10.1109/SBSC.2008.25},
  lang = {pt},
  title-original = {Apoiando o Desenvolvimento Colaborativo de Ideias com o B2i: Banco
	de Ideias Inovadoras}
}

@INPROCEEDINGS{Escalfoni.etal_2009,
  author = {Rafael E. L. Escalfoni and Denise P. N. Machado and Vanessa Braganholo and Marcos R. S. Borges},
  title = {A Collaborative Approach to Identify Innovative Features},
  year = {2009},
  pages = {169--177},
  abstract = {Innovation has been treated as an essential factor to the development of organizations and wealth generation. However, the inherent complexity of the process has shown a hard obstacle to the diffusion of innovation on enterprises. There is no magic formula to innovate; companies that are known to be innovative have different innovation processes. This is because innovation is intimately bound to the organizational culture. In this paper, we propose a method to identify patterns that influence the innovative environment. We do this through a collaborative dynamic to retrieve and analyze knowledge about innovative experiences.},
  abstract-original = {Ultimamente inovacao vem sendo tratada como um fator essencial para
	o desenvolvimento de organizacões e geracao de riquezas. Porem, a
	complexidade inerente ao processo tem se mostrado um duro obstaculo
	para a difusao de inovacões nas empresas. Nao existe uma formula
	magica para inovar; empresas reconhecidamente inovadoras possuem
	diferentes processos de inovacao. Isto porque inovacao esta intimamente
	ligada à cultura organizacional. Neste artigo propomos um metodo
	para a identificacao de padrões que influenciam o ambiente de inovacao
	atraves de uma dinâmica colaborativa para recuperacao e analise de
	conhecimento sobre experiências inovadoras.},
  crossref = {proceedings:sbsc:2009},
  doi = {10.1109/SBSC.2009.13},
  keywords = {innovation; organizational culture; knowledge retrieval; collaborative approach},
  keywords-original = {Inovacao; Cultura Organizacional; Recuperacao de Conhecimento; Dinâmica
	Colaborativa},
  lang = {pt},
  title-original = {Uma Abordagem Colaborativa para a Identificacao de Fatores que Influenciam
	a Inovacao}
}

@INPROCEEDINGS{Falbo-etal2008,
  author = {Ricardo Almeida Falbo and Bruno Nandolpho Machado and Victoria A. Carvalho},
  title = {Uma Infra-estrutura para Apoiar a Elaboracao Colaborativa de Artefatos
	de Software},
  year = {2008},
  pages = {158--168},
  abstract = {Software engineering projects are inherently collaborative and several general purpose communication and collaboration technologies have been adopted in software projects. However, collaboration in software engineering is, many times, artifact-based in the sense that developers collaborate to produce an artifact or a model of the system being built, and artifact-neutral technologies are not enough. This paper presents ColaboraODE, a framework based on the wideband Delphi technique that supports the collaborative elaboration of software artifacts. It was developed for the software engineering environment ODE.},
  crossref = {proceedings:sbsc:2008},
  doi = {10.1109/SBSC.2008.20},
  lang = {pt},
  title-original = {Uma Infra-estrutura para Apoiar a Elaboracao Colaborativa de Artefatos
	de Software}
}

@INPROCEEDINGS{Farias:2004,
  author = {Clever Farias},
  title = {A Metamodel to Cooperative Systems},
  year = {2004},
  abstract = {Cooperation models and theories have long been recognized as an important aid in the development of Computer Suported Cooperative Work (CSCW) systems. However, there is no consensus regarding the set of concepts and abstractions that should underlie such developments. Besides, common patterns in these models are hard to discern. This paper analyses a number of existing models and theories, and proposes a generic cooperative work metamodel based on the studies models.},
  crossref = {proceedings:wcscw:2004}
}

@INPROCEEDINGS{Ferreira.etal_2009,
  author = {Andre Felipe Engelbrecht Ferreira and Angela M. Nunes de Mendonca and Carlos Eduardo Ferrao de Azevedo and Marcio Reis Teixeira and George Alex F. Gomes},
  title = {An Experiment for Collective Tacit Knowledge Capture in Business
	Environment},
  year = {2009},
  pages = {135--143},
  abstract = {For a business organization to survive and compete in the global market, is essential that it can create its own learning. For this, it is necessary to capture the tacit knowledge that resides in people and outsource it to, then, combine it, thereby generate more knowledge. When it is distributed by a group, this task becomes even more complex. Using an approach based on the technique Elaboracao Dirigida with the support of computational tool EXpor, an experiment was conducted in a small business environment targeting to validate that technique in order to recall tacit knowledge about work processes. From the analysis of results we could see the efficacy of the approach in this context and identify the next steps and some opportunities for future work.},
  abstract-original = {Para que uma organizacao empresarial sobreviva e consiga competir
	no mercado globalizado, e essencial que a mesma possa gerar aprendizado
	internamente. Para isto, e necessario capturar o conhecimento que
	reside tacitamente nas pessoas e externaliza-lo, para, posteriormente,
	combina-lo, gerando assim mais conhecimento. Quando este esta distribuido
	por um grupo, esta tarefa torna-se mais complexa ainda. Utilizando
	uma abordagem baseada na tecnica de Elaboracao Dirigida com o apoio
	da ferramenta computacional EXpor, foi realizado um experimento em
	um ambiente empresarial de pequeno porte visando a validacao dessa
	tecnica para o fim de recuperar conhecimento tacito a respeito de
	processos de trabalho. A partir da analise dos resultados pode-se
	constatar a eficacia da abordagem nesse contexto e identificar os
	proximos passos e algumas oportunidades de trabalho futuras.},
  crossref = {proceedings:sbsc:2009},
  doi = {10.1109/SBSC.2009.16},
  keywords = {CSCW; Elaboracao Dirigida; knowledge management},
  keywords-original = {CSCW; elaboracao dirigida; gestao do conhecimento},
  lang = {pt},
  title-original = {Um Experimento para Captura Coletiva de Conhecimento Tacito em Ambiente
	Empresarial}
}

@INPROCEEDINGS{Ferreira.etal_2011,
  author = {Rafael Ferreira and Jean Melo and Patrick Brito and Evandro Costa and Rinaldo Lima and Fred Freitas},
  title = {Creating a Blog Recommendation System Through a Framework for Building
	Blog Crawlers},
  year = {2011},
  pages = {97--103},
  abstract = {Blogs have become interesting tools for knowledge generation and sharing, specially because there are more than 133 million blogs and hundreds of new ones are created every day. As a matter of fact, the activity on blogs doubles every two hundred days. Thus, several applications might use the daily information stored in blogosphere in order to provide valuable decisions. However, the blogs' dynamism hinders the manual information extraction from it, which demands the development of new computational and automated approaches. In this context this paper proposes framework to create blog crawlers. This framework provides services for preprocessing, indexing, content extraction, classification, and tag recommendation. In addition, we present a recommendation system (as case study) in order to demonstrate one potential application of blogs a recommendation system. It helps student interactions in educational forums. This research takes into account aspects of software engineering to evaluate the framework, as well as a qualitative analysis related to aspects of the developed application, such as the evolution impact.},
  crossref = {proceedings:sbsc:2011},
  keywords = {recommendation systems; blog crawler; framework},
  lang = {en}
}

@INPROCEEDINGS{Figueiredo.Garcia_2011,
  author = {Karen Silva Figueiredo and Ana Cristina Bicharra Garcia},
  title = {An investigation on ``trend topics'' and news discussion in the Twitter
	microblogging service},
  year = {2011},
  pages = {9--15},
  abstract = {Microblogging services like Twitter are a great opportunity of research to study patterns of social interaction, given that, every day, those systems reach thousands of users who share and spread information through the network. In this paper we present an investigation on the most commented topics on Twitter, called Trend Topics, in order to identify: the real-world events which these topics are discussing, the composition of the messages about these topics, and the relationship between these topics and the news from the online news medias. The analysis was performed on a sample of more than 500 000 tweets, 530 trend topics and more than 3 900 news collected during one week.},
  abstract-original = {Servicos de microblogging como o Twitter sao excelentes oportunidades
	para pesquisas de padrões sociais de interacao, tendo em vista que
	todos os dias estes sistemas alcancam milhares de usuarios que compartilham
	e divulgam informacões atraves da rede. O presente trabalho apresenta
	uma investigacao sobre os assuntos mais comentados no servico de
	microblogging Twitter, denominados ``Assusntos do Momento'', a fim
	de compreender do que se tratam tais assuntos, i.e. a quais eventos
	do mundo real estes assuntos estao relacionados, quais as caracteristicas
	das mensagens sobre estes assuntos e qual e a relacao entre estes
	assuntos e as noticias divulgadas online. A realizacao da analise
	foi executada em uma amostra de mais de 500 mil tweets, 530 ``Assuntos
	do Momento'' e mais de 3900 noticias coletados durante uma semana.},
  crossref = {proceedings:sbsc:2011},
  keywords = {Twitter; Microblogging; online social network; information diffusion; news diffusion; trend topics},
  keywords-original = {Twitter; Microblogging; Redes sociais online; Difusao de informacões;
	Difusao de noticias; Assunto do momento},
  lang = {pt},
  title-original = {Uma investigacao sobre os ``assuntos do momento'' e a discussao de
	noticias no servico de microbloggin Twitter}
}

@INPROCEEDINGS{SantosFilho-etal2008,
  author = {Jose Valentim Santos Filho and Roberta Lima Gomes and Aloysio Castro Pinto Pedroza and Jean-Pierre Courtiat},
  title = {The Agent-Based Architecture of {RECOLLVE}},
  year = {2008},
  pages = {134--145},
  abstract = {The world globalization process, the increasing demand for communication and information technologies create a demand for collaborative applications. Aiming at supporting communication, information exchange and collaboration among users geographically distants, many CSCW (computer supported cooperative work) systems like audio and video conference, shared editors, shared whiteboard and CVEs (collaborative virtual environments) were developed. Collaborative virtual environments represent an important category of CSCW systems that use 3D shared spaces in order to support collaborative activities. We find also many systems that integrate collaborative applications to satisfy specific needs of users. We present in this article the agent-based architecture of RECOLLVE, a CVE which focuses on representing a very large set of collaboration activities in a virtual scene, including their social aspects.},
  crossref = {proceedings:sbsc:2008},
  doi = {10.1109/SBSC.2008.32}
}

@INPROCEEDINGS{4700791,
  author = {Denise Filippo and Hugo Fuks and Carlos Lucena},
  title = {Notification-action: information and access to a learning environment
	using notifications as support for coordinating distance couse forums},
  year = {2008},
  pages = {111--121},
  abstract = {In this work, notifications to provide learners and mediators of an online course with awareness information regarding the unfolding of forums and other participantspsila activities are investigated. In an asynchronous setting, participants need to check the forum frequently to know if there are new messages and whether and when mediators and learners are working. In the absence of this information, participants cannot organize their activities according to the group and waste opportunities to interact with each other. This paper presents two action research cycles in the context of the Information Technology Applied to Education online course and of the AulaNet LMS environment. Notifications presented in popup windows evolved into ldquoaction notificationsrdquo as they enable direct access to services in the AulaNet web interface through links and buttons.},
  crossref = {proceedings:sbsc:2008},
  doi = {10.1109/SBSC.2008.21},
  lang = {pt},
  title-original = {Notificacao-acao: Informacao e Acesso ao Ambiente de Aprendizagem
	atraves de Notificacões para Suporte à Coordenacao de Foruns de Cursos
	a Distância}
}

@INPROCEEDINGS{Freddo.etal_2009,
  author = {Ademir Roberto Freddo and Cesar Augusto Tacla and Gilson Y. Sato and Emerson Cabrera Paraiso and Bruno Campagnolo and Milton P Ramos},
  title = {Supporting Small Teams in Cooperative Software Development with a
	Multi-agent Architecture},
  year = {2009},
  pages = {178--183},
  abstract = {The research on CSCW and groupware systems focus the activities of distributed teams involved in large projects by means of tools for communication and awareness. The activities of small collocated teams are often neglected. Analyzing preliminary requirements of small teams, it is possible to observe the need of tools to help the elaboration of project documentation. This paper presents a multi-agent system architecture to support software development in small collocated teams. The architecture proposed in this paper tackles the problem of elaborating documentation, by facilitating the elaboration of the Small Project Management Plan. Tools used in the software development are encapsulated by agents that extract and organize useful information for the elaboration of such a document.},
  abstract-original = {Geralmente, sistemas de groupware e CSCW buscam facilitar as atividades
	de equipes distribuidas geograficamente e envolvidas em projetos
	de grande porte por meio de ferramentas para comunicacao e percepcao.
	O suporte às atividades de equipes locais de pequeno porte e usualmente
	negligenciado. Analisando requisitos preliminares de pequenas equipes,
	e possivel observar a necessidade de ferramentas de apoio para a
	elaboracao da documentacao de projeto. Este artigo apresenta a arquitetura
	de um Sistema Multi-Agente para apoiar o desenvolvimento de software
	em pequenas equipes. A arquitetura aqui proposta procura tratar o
	problema da elaboracao da documentacao facilitando a elaboracao do
	Plano de Gestao de Projeto de Software. Nela, ferramentas usadas
	no desenvolvimento de software sao encapsuladas por agentes que extraem
	e organizam informacões uteis à elaboracao desse documento.},
  crossref = {proceedings:sbsc:2009},
  doi = {10.1109/SBSC.2009.18},
  keywords = {CSCW; software development; multi-agent systems; small teams},
  keywords-original = {CSCW; desenvolvimento colaborativo de software; sistemas multiagente;
	pequenas equipes},
  lang = {pt},
  title-original = {Uma Arquitetura Multiagente para o Suporte ao Desenvolvimento Colaborativo
	de Software em Pequenas Equipes}
}

@INPROCEEDINGS{Freire.Figueiredo_2010,
  author = {Vinicius P. M. Freire and Daniel R. Figueiredo},
  title = {Ranking in Collaboration Networks Using a Relationship Intensity
	Metric},
  year = {2010},
  pages = {71--78},
  abstract = {Collaboration networks are social networks in which relationships represent some kind of professional collaboration. The study of collaboration networks can help identify members that are important or influential within a given community. This work is divided into two parts. The first part is a study of the topological properties of two collaboration networks: the global collaboration network and the Brazilian collaboration network of authors of scientific papers within the area of Computer Science. The second part presents a ranking metric for vertices based on the intensities of their relationships. Using the proposed metric and other more classical metrics, we rank the researchers in Brazil in Computer Science. The proposed metric was compared with subjective evaluation of researchers made by CNPq. The results show the effectiveness of the proposed metric in identifying influential researchers when compared to another metrics in the literature.},
  abstract-original = {Redes de colaboracao sao redes sociais nas quais os relacionamentos
	entre individuos representam algum tipo de colaboracao profissional.
	O estudo de redes de colaboracao pode ajudar a identificar individuos
	que sejam influentes ou importantes dentro de uma determinada comunidade.
	Este trabalho esta dividido em duas partes. A primeira parte constitui
	um estudo das propriedades topologicas de duas redes de colaboracao:
	a rede de colaboracao mundial e a rede de colaboracao brasileira
	de autores de artigos cientificos da area de Ciência da Computacao.
	A segunda parte apresenta uma metrica para ranqueamento de vertices
	baseada na intensidade de relacionamento. Utilizando a metrica proposta
	e outras metricas classicas, fazemos um ranqueamento dos pesquisadores
	que atuam no Brasil na area de Ciência da Computacao. A avaliacao
	dos resultados foi feita atraves da comparacao com a avaliacao subjetiva
	de pesquisadores feita pelo CNPq. Os resultados evidenciam a eficacia
	da metrica em identificar individuos influentes quando comparada
	a outras metricas presentes na literatura.},
  crossref = {proceedings:sbsc:2010},
  doi = {10.1109/SBSC.2010.18},
  keywords = {coauthorship networks; intensity of relationship; ranking metric},
  keywords-original = {redes de colaboracao; intensidade de relacionamento; metrica para
	ranqueamento},
  lang = {pt},
  title-original = {Ranqueamento em Redes de Colaboracao Utilizando uma Metrica Baseada
	em Intensidade do Relacionamento}
}

@INPROCEEDINGS{Fuks-etal2004,
  author = {Hugo Fuks and Alberto B. Raposo and Marco Aurelio Gerosa and Mariano Pimentel and Carlos Lucena},
  title = {Supporting Coordination and Cooperation in a Tool for Asynchronous
	Textual Communication: A Case Study in {AulaNet} Environment},
  year = {2004},
  abstract = {Collaborative systems are especially prone to failure and should be flexible in order to be adapted to the group characteristics and to the work processes evolution. The new architecture of the AulaNet learning environment was developed using component-based techniques to provide the necessary flexibility. A case study regarding the forum service of the environment is presented to show how a tool can be adapted to accompany the evolution of the course dynamics.},
  abstract-original = {Sistemas colaborativos sao particularmente propicios a falhas e devem
	ser flexiveis para serem adaptados às caracteristicas do grupo e
	à evolucao dos processos de trabalho. A nova arquitetura do ambiente
	AulaNet foi construida baseada em componentes de forma a prover a
	flexibilidade necessaria. Para exemplificar a evolucao dos processos
	de trabalho e o suporte arquitetural dado, e apresentado um estudo
	de caso com o servico de forum do ambiente.},
  crossref = {proceedings:wcscw:2004},
  lang = {pt},
  title-original = {Suporte à Coordenacao e à Cooperacao em uma Ferramenta de Comunicacao
	Textual Assincrona: Um Estudo de Caso no Ambiente AulaNet}
}

@INPROCEEDINGS{Furtado.Andrade_2011,
  author = {Adabriand Furtado and Nazaereno Andrade},
  title = {Activists, passengers, occasionals, and specialists: user profile
	at building a {Q\&A} site},
  year = {2011},
  pages = {112--119},
  abstract = {Understanding the structure and dynamics of operating Question and Answer (Q&A) systems is essential for the development mechanisms that encourage and better leverage the content production of different user profiles. In this paper, we explore the patterns of user behavior according to metrics capturing motivation (amount of contribution) and ability (quality of the contributions). Our results reveal four main user profiles: activists, users who make a large number of contributions for a long period; passengers, those users with a short permanence and who make medium or low quality contributions; occasionals, users who stay for a long period, however sporadically contribute; and specialists, similar to occasionals users, but who are skilled in performing a kind of activity. By analysing the parcel of contribution of each group formed by these profiles, we observed that passengers and ocassionals collaborate with activists in the construction of the majority of contributions, and the lack of any of these profiles possibly would degrade the system performance. In regard of the specialists, we discovered that their representation in the total of contributions is small. This finding motivates the development of mechanisms to stimulate the participation of these users.},
  abstract-original = {Entender a estrutura e dinâmica de funcionamento de sistemas de Question
	and Answer (Q&A) e imprescindivel no desenvolvimento de mecanismos
	para incentivar e melhor aproveitar a producao de conteudo por parte
	dos usuarios. Neste artigo, exploramos os padrões de comportamento
	de usuarios em um site de Q&A de grande porte segundo metricas de
	motivacao (quantidade de contribuicões) e habilidade (qualidade das
	contribuicões) dos usuarios. Nossos resultados revelam quatro perfis
	principais: ativistas, usuarios que contribuem muito por um longo
	periodo; passageiros, usuarios com uma curta permanência e que fazem
	contribuicões de qualidade mediana ou baixa; ocasionais, usuarios
	que permanecem por um longo periodo, porem contribuindo esporadicamente;
	e especialistas: usuarios semelhantes aos ocasionais, mas que sao
	habeis na execucao de um tipo de atividade. Ao examinar a parcela
	de contribuicao dos grupos formados por esses perfis, observamos
	que passageiros e ocasionais colaboram com os ativistas na construcao
	da ampla maioria do corpo de contribuicões, e que a ausência de qualquer
	um destes perfis possivelmente degradaria o desempenho do sistema.
	Com respeito aos especialistas, identificamos que a sua representatividade
	no total de contribuicões e pequena. Esta descoberta motiva o desenvolvimento
	de mecanismos para incentivar a participacao desses usuarios.},
  crossref = {proceedings:sbsc:2011},
  keywords = {question and anwser community; user behavior; user profiles},
  keywords-original = {Comunidade de Pergunta e Resposta; comportamento de usuarios; perfis
	de usuarios},
  lang = {pt},
  title-original = {Ativistas, passageiros, ocasionais e especialistas: Perfis de usuario
	na construcao de um site de Q&A}
}

@INPROCEEDINGS{Gadelha.etal_2010,
  author = {Bruno Gadelha and Elder Cirilo and Hugo Fuks and Carlos Lucena and Alberto Castro Jr and Marco Aurelio Gerosa},
  title = {An Approach for Developing Component-based Groupware Product Lines
	Using Groupware Workbench},
  year = {2010},
  pages = {32--38},
  abstract = {The development of groupware product lines entails, beyond the detailed knowledge of the application domain, analysis of the collaboration that they should support. To attack this problem, this research uses the 3C Collaboration Model that underlies the RUP 3C-Groupware on domain analysis phase. For the implementation phase, this model is still being used, this time based on Groupware Workbench. This approach illustrates the use of the collaboration model at all stages of the product line development. It provides a systematic way for tailoring groupware, using the concept of software product lines.},
  abstract-original = {Desenvolvimento de linha de produtos de groupware implica, alem do
	conhecimento detalhado do dominio da aplicacao, na analise da colaboracao
	que eles devem dar suporte. Para atacar esse problema, nesta pesquisa
	utiliza-se o Modelo 3C de Colaboracao que embasa o RUP 3C-Groupware
	na etapa de analise de dominio. Para a etapa de implementacao, este
	modelo continua sendo usado, desta vez com base no Groupware Workbench.
	Esta abordagem ilustra o uso do modelo de colaboracao em todas as
	etapas do desenvolvimento da linha de produtos. Ela provê uma forma
	sistematica para o desenvolvimento de groupware adaptavel, atraves
	do uso do conceito de linhas de produto de software.},
