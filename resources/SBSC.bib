@INPROCEEDINGS{Lemos-Souza2008,
  author = {Alline Lemos and Cleidson R. B. Souza},
  title = {Challenges for knowledge management on software development: results of an etnographic study},
  crossref = {proceedings:sbsc:2008},
  abstract = {Software development deals with large volums of knowledge once it joins people collaborating among themselves and working at the most diverse activies. If, on one hand, besides its huge proportion, the knowledge inherent to software engineering grows successively, on the other hand the companies faces several issues on identifying the content, its localization and properly using it. Within this context emerges the concept of Knowledge Engineering. This paper presents an etnographic study conducted in a real software development environment. The goal of this study is to suggest solutions suitable for the identified difficulties and, as a result, improve the quality to the development process already in place in the company.},
  pages = {77--87},
  doi = {10.1109/SBSC.2008.36},
  year = {2008},
  abstract-original = {Desenvolvimento de software lida com grandes volumes de conhecimento uma vez que reúne diversas pessoas colaborando entre si e trabalhando com as mais distintas atividades. Se de um lado, além de possuir proporções imensas, o conhecimento presente na área de ES cresce sucessivamente, de outro as empresas possuem problemas em identificar o conteúdo, a localização e o uso deste conhecimento. Dentro deste contexto surge o conceito de Gerência de Conhecimento. Este artigo apresenta um estudo etnográfico realizado em um ambiente real de desenvolvimento de software. O objetivo deste estudo é sugerir soluções adequadas às dificuldades identificadas e, assim, atribuir mais qualidade ao processo de desenvolvimento já adotado pela empresa.},
  lang = {pt},
  title-original = {Desafios da Gerência de Conhecimento no Desenvolvimento de Software: Resultados de um Estudo Etnográfico}
}

@INPROCEEDINGS{Lima.etal_2010,
  author = {Marcio Passos Lima and José Maria N. David and Benedito Tourinho Dantas},
  title = {Risk Management and Context in a Collaborative Project Management Environment for Software Development},
  crossref = {proceedings:sbsc:2010},
  abstract = {Many events with uncertain results, named risks, can occur during software development process. These risks and their impacts can be determined from a set of context elements in which the software project is inserted, as well as the software life cycle. In a collaborative projects management environment, risks associated with the collaboration activities are related to the project risks. The Web-based Groupware on Project Management System (WGPMS) is an infrastructure that aims to support the collaborative project activities. This environment has a module (Risys) that provides the intelligent identification and the qualitative analysis of the project risks. However, it does not relate the project risks to those which are associated to the low collaboration rate. Moreover, it does not consider the involved context elements which influence the software development process considering the life cycle phases of the RUP model. The goal of this work is to present the modifications in the Risys in order to enhance the risk management in WGPMS. The proposed solution uses ontology for the context elements representation as well as for the RUP model phases. In addition, it uses taxonomy and a qualitative analysis of the risks. Some simulations which were done in order to evaluate the ontology are presented here.},
  keywords = {risk analysis; context; ontology; RUP model},
  pages = {95--102},
  doi = {10.1109/SBSC.2010.21},
  year = {2010},
  abstract-original = {Inúmeros eventos de resultados incertos, denominados riscos, podem ocorrer durante o processo de desenvolvimento de software. Os riscos, e os seus impactos, podem ser determinados a partir de um conjunto de elementos de contexto no qual o projeto está inserido, assim como, pela fase do ciclo de vida do software. Em um ambiente colaborativo de gestão de projetos, os riscos associados às atividades de colaboração se relacionam com os riscos de projeto. O Web-based Groupware on Project Management System (WGPMS) é uma infraestrutura cujo objetivo é apoiar as atividades colaborativas de projeto. Este ambiente possui um módulo (Risys) para prover a identificação inteligente e a análise qualitativa dos riscos de um projeto. Entretanto, ele não relaciona os riscos de projeto àqueles associados à ausência ou à baixa colaboração, nem tampouco considera a influência dos elementos de contexto envolvidos no desenvolvimento de software considerando-se as fases do ciclo de vida do modelo RUP. O objetivo deste trabalho é apresentar as modificações na ferramenta Risys para ampliar o tratamento de riscos no WGPMS. A solução proposta utiliza ontologias para a representação dos elementos de contexto de software, e das fases do modelo RUP e, finalmente, a taxonomia e análise qualitativa dos riscos. Algumas simulações realizadas para a avaliação das ontologias são também apresentadas.},
  keywords-original = {Análise de risco; contexto; ontologia; modelo RUP},
  lang = {pt},
  title-original = {Gerenciamento de riscos e contexto em ambientes colaborativos de gestão de projetos de desenvolvimento de software}
}

@INPROCEEDINGS{Linhares-etal2008,
  author = {Giovana B. R. Linhares and Marcos R. S. Borges and Pedro Antune},
  title = {Negotiation-cooperation for formal technical review of functional specifications},
  crossref = {proceedings:sbsc:2008},
  abstract = {In the most of today's organizations, tasks are performed in groups in which the negotiation is necessary to arrive at a result. During the search for solutions that are accepted by all, are carried out sessions of ``brainstorm'' and meetings involving groups, possibly located in different places. This work aims to increase the existent knowledge about the dynamics of the binomial ``negotiation-cooperation'', specifically during the formal technical reviews on functional specification of software. The structuring of this process and a support tool are propossed as computer support.},
  pages = {122--133},
  doi = {10.1109/SBSC.2008.24},
  year = {2008},
  abstract-original = {Cada vez mais no dia-a-dia das organizações, são realizadas tarefas em grupo nas quais é necessária a negociação para se chegar a um resultado. Durante a busca de soluções que sejam aceitas por todos, são realizadas sessões de ``brainstorm'' e reuniões envolvendo grupos de pessoas, possivelmente localizadas em lugares diferentes. Este trabalho visa aumentar o conhecimento existente acerca da dinâmica do binômio ``negociação-colaboração'', mais especificamente deflagrada durante as revisões técnicas formais de especificação funcionais de um software. A estruturação do referido processo e uma ferramenta de apoio são propostos como suporte computacional.},
  booktitle = {Sistemas Colaborativos, 2008 SimpÃ³sio Brasileiro de},
  lang = {pt},
  title-original = {Negociação-Colaboração nas Revisões Técnicas Formais de Especificações Funcionais}
}

@INPROCEEDINGS{Lopes-etal2004,
  author = {Marco Lopes and Marco Mangan and Claudia Werner},
  title = {{MAIS}: a mechanism to support awareness applied to Shared Software models},
