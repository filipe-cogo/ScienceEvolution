  title-original = {{K2Chat}: Uma Ferramenta de Bate-Papo com Suporte ao Registro e Indexação das Sessões}
}

@INPROCEEDINGS{Ugulino.Pimentel_2010,
  author = {Wallace Ugulino and Mariano Pimentel},
  title = {Method {Cyclus} to Collaboration Process Improvement},
  crossref = {proceedings:sbsc:2010},
  abstract = {This article presents the method Cyclus to collaboration process improvement, based on collaborative filtering and Action Research, and the Modus system, developed to support Cyclus applying. The method was developed along 2 years of research and was evaluated 2 times: in a pilot case study, and in an explanatory case study. This article communicates the results of the second study, the explanatory. From the results, was possible to confirm the research hypothesis investigated and was concluded that the method has a potential to collaboration process improvement, although the results are insufficient to say that is possible to find a good process through this method. It is argued the need to investigate if the Cyclus scale with 2, 3, or 4 values is more suitable than the current scale, with 5 values. Preliminary results give some clues that is possible to get a good approximation of the real quality of a process from 10 assessors, at least, which will be investigated deeply in future works.},
  keywords = {collaborative process; process improvement; PDCA; collaborative evaluation},
  pages = {111--117},
  doi = {10.1109/SBSC.2010.23},
  year = {2010},
  abstract-original = {Nesse artigo é apresentado o método Cyclus para a melhoria de processos de colaboração e o sistema Modus, desenvolvido para apoiar a aplicação do Cyclus. O método foi desenvolvido ao longo de 2 anos de pesquisa e foi avaliado em 2 momentos: num estudo de caso piloto e num estudo de caso explanatório. Nesse artigo, são comunicados os resultados do segundo estudo realizado, o explanatório. Dos resultados, confirmou-se a hipótese de pesquisa e obteve-se que o método tem potencial para melhoria de processos de colaboração. Levantou-se a necessidade de investigar se a escala do Cyclus com 2, 3 ou 4 valores é mais adequada que a atual, com 5 valores. Também foram obtidos indícios de que é possível obter uma boa estimativa da qualidade do processo a partir de 10 avaliadores, o que será objeto de mais investigações em trabalhos futuros.},
  keywords-original = {processo de colaboração; melhoria de processo; PDCA; avaliação colaborativa},
  lang = {pt},
  title-original = {Método Cyclus para melhoria de processos de colaboração}
}

@INPROCEEDINGS{Vega.etal_2009,
  author = {Katia Vega and Hugo Fuks and Gustavo Carvalho},
  title = {Training in Requirements by Collaboration: Branching Stories in Second Life},
  crossref = {proceedings:sbsc:2009},
  abstract = {Training by playing is believed to be an effective strategy for learning. Training games combine educational and technological techniques that help learners to get involved, collaborate and learn in a practical and interactive way. Collaboration is inherent to software requirements elicitation which involves customers, users and developers to achieve an overall goal. In this article, a game entitled TREG that simulates various activities in software requirements workshop is proposed. The trainee interacts with Non-Player Characters and according to the trainee's choice the game reenacts a specific scenario. The social simulation in the game is based on the branching stories genre. Each branching node is described using a scenario-based template. The game was prototyped in Second Life, a virtual world that gives the possibility to create an immersive collaborative educational experience.},
  keywords = {Educational game; Branching Stories; Requirements; Second Life},
  pages = {116--122},
  doi = {10.1109/SBSC.2009.11},
  year = {2009},
  lang = {en}
}

@INPROCEEDINGS{Vega.etal_2010,
