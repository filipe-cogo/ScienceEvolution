@INPROCEEDINGS{Andre2005,
  author = {Amaury Andre},
  title = {A planning application for workflow},
  year = {2005},
  note = {Gerência e coordenacao de workflow; Outros},
  abstract = {In this paper we present a new approach to the development of Workflow Systems based on planning techniques in Artificial Intelligence. This new approach enables the generation of processes consisting of ordered sequences of tasks to optimize its execution using a larger number of parallel streams and enabling the inclusion of uncertainty factors in predefined project. For this we use planning strategies supported in Artificial Intelligence based on algorithms Partial Order Planning (POP) and Conditional Planning.},
  abstract-original = {Neste artigo apresentamos uma nova abordagem para o desenvolvimento
	de Sistemas de Workflow baseada em tecnicas de planejamento em Inteligência
	Artificial. Nesta nova abordagem permitimos a geracao de processos
	constituidos por seqüências ordenadas de tarefas visando otimizar
	a sua execucao atraves do maior numero de fluxos paralelos e possibilitando
	a inclusao de fatores de indeterminacao predefinidos em projeto.
	Para isso utilizamos estrategias de planejamento apoiadas em Inteligência
	Artificial, baseadas em algoritmos de Planejamento de Ordem Parcial
	(POP) e Planejamento Condicional.},
  crossref = {proceedings:wcscw:2005},
  lang = {pt},
  title-original = {Uma Aplicacao de Planejamento em Workflow}
}

@INPROCEEDINGS{Araujo-etal2004,
  author = {Renata Mendes Araujo and Marcos R. S. Borges and Carla Dila Mendes},
  title = {Process Beans for Supporting Post Meeting Activities},
  year = {2004},
  abstract = {The lack of appropriate support to post-meeting activities may compromise the expected results of the decisions made in a meeting. Without an appropriate follow-up, decisions may get lost or be wrongly implemented. This paper discusses a proposal to support the planning, control and follow-up of decisions. The approach is based on the use of workflow systems for designing and performing the implementation procedures of meeting decisions. A set of process patterns common to decision implementations was defined and an application -- SUPRE -- was developed.},
  crossref = {proceedings:wcscw:2004},
  title-original = {Process Beans para o Apoio a Atividades de Pos-Reuniao}
}

@INPROCEEDINGS{Araujo-etal2006,
  author = {Renata Mendes Araujo and Flavia Santoro and Fernando Prata and Thalita Moraes},
  title = {Knowledge Management about Collaborative Systems Evaluation},
  year = {2006},
  pages = {78--86},
  abstract = {CSCW and Groupware research areas have been presenting many applications to support collaboration. Currently, one of the great challenges is in attesting how effective these proposals are in real situations. The CSCWLab Project presents a conceptual structure for collaborative systems evaluations planning. The base of this structure is an ontology that organizes the main concepts and elements, serving as a guide for researchers in planning and performance of such evaluations.},
  abstract-original = {As areas de pesquisa em CSCW e Groupware vêm apresentando diversas
	propostas e solucões de apoio à colaboracao. Atualmente, um dos grandes
	desafios esta em atestar o quanto estas propostas se mostram efetivas
	em situacões reais. Neste sentido, foi proposto o projeto CSCWLab,
	cujo objetivo principal e definir uma estrutura conceitual para o
	projeto de avaliacões de sistemas colaborativos. A base desta estrutura
	e uma ontologia, que organiza os principais conceitos e elementos
	de avaliacões de sistemas colaborativos, servindo como uma guia para
	pesquisadores no planejamento e execucao de avaliacões.},
  comment = {Avaliacao de sistemas colaborativos},
  crossref = {proceedings:sbsc:2006},
  keywords = {CSCW, groupware, evaluation, knowledge management, ontology},
  keywords-original = {CSCW, groupware, avaliacões, gestao de conhecimento, ontologia},
  lang = {pt},
  title-original = {Gestao de Conhecimento sobre Avaliacões de Sistemas Colaborativos}
}

@INPROCEEDINGS{Balestrin.etal_2011,
  author = {Gabriel Balestrin and Carla Diacui Medeiros Berkenbrock and Celso Massaki Hirata},
  title = {A tool for mobile collaboration to help the interaction in face-to-face
	lectures},
  year = {2011},
  pages = {76--82},
  abstract = {The advancement of mobile computing as well as the connectivity of mobile devices enable the development of new tools to support groups of people engaged in a common goal. In events such as conferences, congresses, and symposia, the participants engage in tasks such as listening, asking the turn to make questions, questioning in a disciplined and not efficient form. This article presents a tool to assist classroom lectures that occur at events such as conferences, congresses and symposia. The tool enables the creation of questions using mobile devices or personal computers. The results showed that the tool helps participants to conduct and support questions satisfactorily.},
  abstract-original = {O avanco e consolidacao da computacao movel juntamente com a conectividade
	dos dispositivos portateis permitem o desenvolvimento de novas ferramentas
	para apoiar grupos de pessoas engajadas em um objetivo comum. Em
	eventos como conferências, congressos e simposios, os participantes
	engajam em tarefas de escutar, solicitar a vez de fazer perguntas
	e perguntar, de uma maneira disciplina e nao eficiente. Este artigo
	apresenta uma ferramenta para auxiliar palestras presenciais que
	ocorrem em eventos como conferências, congressos e simposios. A ferramenta
	permite a elaboracao de perguntas utilizando dispositivos moveis
	ou computadores pessoais. Os resultados obtidos mostraram que a ferramenta
	auxilia os participantes a realizar e apoiar perguntas de maneira
	satisfatoria.},
  crossref = {proceedings:sbsc:2011},
  keywords = {co-located environments; computer-supported cooperative work; mobile groupware},
  keywords-original = {ambientes colocalizados; trabalho cooperativo apoiado por computador;
	groupware movel},
  lang = {pt},
  title-original = {Uma Ferramenta de Colaboracao Movel para Auxiliar a Interacao em Palestras
	Presenciais}
}

