  title-original = {Hipermídia Adaptativa para Aprendizado Colaborativo}
}

@INPROCEEDINGS{Barros.etal_2009,
  author = {Raphael Lima Belém Barros and Carina Frota Alves and Geber Lisboa Ramalho},
  title = {Investigating the Communication Process in Multidisciplinary Game Development Teams},
  crossref = {proceedings:sbsc:2009},
  abstract = {The game development process is a complex activity that requires a team composed by members with different backgrounds. There is a consensus regarding the importance of multidisciplinary teams in the game development community. However, the effective communication and coordination of work involving multidisciplinary teams is a challenge. This paper presents the results of a qualitative research conducted in a game developing company to investigate the main characteristics and difficulties involved in the communication process of multidisciplinary teams.},
  keywords = {communication; multidisciplinary teams; games; qualitative research; ethnography},
  pages = {61--69},
  doi = {10.1109/SBSC.2009.21},
  year = {2009},
  abstract-original = {O processo de desenvolvimento de um jogo é uma atividade complexa, que exige uma equipe desenvolvimento composta por indivíduos com diferentes formações. Existe um consenso na comunidade de jogos sobre a importância de equipes multidisciplinares. No entanto, a efetiva comunicação e coordenação do trabalho entre membros de uma equipe multidisciplinar é um desafio. Este artigo apresenta os resultados de um estudo qualitativo realizado em uma empresa desenvolvedora de jogos com o objetivo de investigar as principais características e dificuldades envolvidas no processo de comunicação de equipes multidisciplinares.},
  keywords-original = {comunicação; equipes multidisciplinares; jogos; pesquisa qualitativa; etnografia},
  lang = {pt},
  title-original = {Investigando o Processo de Comunicação em Equipes Multidisciplinares de Jogos}
}

@INPROCEEDINGS{Benevenuto.etal_2011,
  author = {Fabrícia Benevenuto and Diego Silveira and Thalisson Oliveira and Leonardo Bombonato and Reinaldo Fortes and Álvaro Pereira Jr},
  title = {Understanding the Brazilian Twittersphere},
  crossref = {proceedings:sbsc:2011},
  abstract = {Twitter has been constantly growing as an important system where users discuss about everything, expressing opinions, political view, sexual orientation, and even their mood like happiness or sadness. Social networks are pointed as places where users influence and are influenced by others, being a perfect environment for word-of-mouth marketing, advertisement, and political campaigns. In order to offer a better understand of the use of Twitter in Brazil, this work provides a wide characterization of Brazilian users in Twitter as well as a deep understand of the content posted by Brazilians in Twitter. We correlate Brazilian demographic data with geographic data from the Twitter users to show that some Brazilian states are underestimated in Twitter. Additionally, we characterize the different linguistic patterns adopted, we analyzed the most propagated URLs, and we identified the most influential Brazilian users in Twitter on each Brazilian region.},
  keywords = {Twitter; microblog; Web 2.0},
  pages = {1--8},
  year = {2011},
  abstract-original = {O Twitter vem constantemente crescendo como um importante sistema onde usuários discutem sobre tudo, expressando opiniões, visão política, orientação sexual e até mesmo humor, como fecilidade ou tristeza. Redes sociais são apontadas como locais onde usuários influenciam e são influenciados por outros sendo, portanto, ambientes perfeitos para a realização de marketing boca-a-boca, propagandas e campanhas políticas. Com o intuito de oferecer entendimento sobre o uso do Twitter no Brasil, este trabalho provê uma ampla caracterização dos usuários brasileiros no Twitter e do conteúdo postado por esses usuários. nós correlacionamos dados demográficos brasileiros com dados da localização do Twitter para mostrar que alguns estados brasileiros estão subestimados nesse sistema. Além disso, nós caracterizamos os direntes padrões linguísticos adotados, analisamos as URLs mais propagadas, e identificamos os usuários brasileiros mais influentes no Twitter em cada região brasileira.},
  keywords-original = {Twitter; microblog; web 2.0},
  lang = {pt},
  title-original = {Entendendo a Twitteresfera Brasileira}
}

@INPROCEEDINGS{Berkenbrock-Hirata2008,
  author = {Carla Diacui Medeiros Berkenbrock and Celso Massaki Hirata},
  title = {Implementation and analysis of usa of an cooperation edition application for mobile devices},
  crossref = {proceedings:sbsc:2008},
  abstract = {Supporting mobile cooperative work with synchronous applications that require consistency of data is a challenge due to the constraints imposed by both mobile devices and wireless network. The development of techniques for designing flexible cooperative systems that better fit the mobile users is required. However, both techniques and applications are still scarce and there are doubts over the effectiveness of such applications in the CSCW research community. In this article we developed a synchronous application that supports cooperative edition by mobile users. The usage of the application provides an analysis of how the limitations of mobile devices influence the success of synchronous mobile cooperative work.},
  pages = {99--110},
  doi = {10.1109/SBSC.2008.9},
  year = {2008},
  abstract-original = {O suporte ao trabalho cooperativo móvel com aplicações síncronas que requerem consistência de dados é um desafio devido às limitações impostas por dispositivos móveis e pela rede de comunicação sem fio. Então, é necessário o desenvolvimento de técnicas para projetar sistemas de cooperativos flexíveis que se adaptem melhor a mobilidade dos usários. Contudo, existe uma falta tanto de técnicas como de aplicações e, ainda, existem dúvidas quanto à efetividade das aplicações na comunidade de pesquisa de CSCW. Neste artigo foi desenvolvida uma aplicação síncrona para possibilitar a edição cooperativa a partir de dispositivos móveis. O uso da aplicação proporciona uma análise de como as limitações dos dispositivos móveis influenciam o sucesso do trabalho cooperativo móvel síncrono.},
  lang = {pt},
  title-original = {Implementaçã e Análise de Uso de uma Aplicação para Edição Cooperativa em Dispositivos Móveis}
}

@INPROCEEDINGS{Berkenbrock.etal_2009,
  author = {Carla Diacui Medeiros Berkenbrock and Celso Massaki Hirata and Clovis Torres Fernandes and Mauro Carlos Pichiliani},
  title = {Usability Requirements for the Development and Evaluation of Mobile Groupware Systems},
  crossref = {proceedings:sbsc:2009},
  abstract = {Usability is an important factor affecting the user's productivity. However, evaluating groupware usability is a complex task, especially in a mobile environment. In this paper a study with eight requirements to explore usability in a mobile groupware environment is presented. A prototype application was developed followed by a series of evaluations to observe the potential of the requirements. Results show that these requirements should be considered during the development of a mobile groupware in order to help designers to identify usability weaknesses in a mobile groupware.},
  keywords = {mobile groupware; usability requirements; groupware evaluating},
  pages = {10--18},
  doi = {10.1109/SBSC.2009.10},
  year = {2009},
  abstract-original = {A usabilidade é um fator importante que afeta a produtividade do usuário. No entanto, avaliar a usabilidade de um sistema de groupware é uma tarefa complexa, especialmente em um ambiente móvel. Neste trabalho, apresenta-se um estudo com oito requisitos para explorar a usabilidade de ambientes de groupware móvel. Adicionalmente, foi desenvolvida uma aplicação protótipo e foram realizadas avaliações desse protótipo para observar o potencial desses requisitos. Os resultados mostram que esses requisitos devem ser considerados durante o desenvolvimento do groupware móvel, a fim de ajudar os projetistas a identificar pontos fracos relacionados com a usabilidade do groupware móvel.},
  keywords-original = {groupware móvel; requisitos de usabilidade; avaliação de groupware},
  lang = {pt},
  title-original = {Requisitos de Usabilidade para o Desenvolvimento e Avaliação de Aplicações Cooperativas Móveis}
}

@INPROCEEDINGS{Berkenbrock.etal_2010,
  author = {Berkenbrock, C. D. M. and Silva, A. P. C. and Hirata, C. M. and Fernandes, C. T. and Pichiliani, M. C.},
  title = {Investigating Users Anonymity in a Collocated Mobile Groupware Environment},
  crossref = {proceedings:sbsc:2010},
  abstract = {Some activities in presential meetings require the anonymous participation while others demand publicity. This paper investigates the problem of keeping the anonymity of participantes in colocated environments, which use mobile groupware. The mobile groupware both allows accomplishing the activites and keeps the anonymity. For the study, an experiment where participants are colocated was undertaken, however, in order to assess the influence of the reaction to awareness provided by the devices, the participants were instructed to not communicate verbally. The preliminaty results showed that the awareness information made some of the actions performed by the participants ease, besides indicating that it is possible to keep the anonymity in colocated environment that uses mobile groupware despite of any kind of the eventual participants' reactions to awareness information.},
  keywords = {co-located environments; distributed teams; mobile groupware; computer-supported cooperative work},
  pages = {47--54},
  doi = {10.1109/SBSC.2010.15},
  year = {2010},
  abstract-original = {Certas atividades em reuniões presenciais exigem o anonimato dos participantes enquanto outras demandam publicidade. Este artigo investiga o problema de manter o anonimato dos participantes em ambientes colocalizados, que utilizam o groupware móvel. O groupware móvel permite realizar as atividades e também mantém anonimato. para investação, foi realizado um estudo de caso onde os participantes estão colocalizados; contudo, de modo a avaliar a influência da reação à percepção fornecidos pelos dispositivos móveis, os participantes envolvidos foram instruídos a não se comunicarem verbalmente. Os resultados obtidos mostraram que as informações de percepção, facilitaram algumas das ações realizadas pelos participantes, além de indicar que é possível manter o anonimato em ambientes colocalizados que utilizam groupware móvel, apesar das eventuais reações dos participantes às informações de percepção.},
  keywords-original = {ambientes colocalizados; equipes distribuídas; groupware móvel; trabalho cooperativo apoiado por computador},
  lang = {pt},
  title-original = {Investigando o Anonimato de Usuários num Ambiente Colocalizado utilizando um Groupware Móvel}
}

@INPROCEEDINGS{Bezerra-Wainer2006,
  author = {Fábio Bezerra and Jacques Wainer},
  title = {Selecting Anomalous Traces from Workflow Event Logs},
  crossref = {proceedings:sbsc:2006},
  abstract = {This work shows a model to detect a set of anomalous traces in a log generated by a business process management system. The detection of an anomalous trace is based on the inclusion cost of a trace in a workflow model constructed by workflow mining based on rewriting rules. The inclusion cost is evaluated as follows: (i) one trace is removed from log; (ii) a workflow model is mined from a random subset of remaining traces of log; (iii) the removed trace is merged over model. The inclusion cost is the amount of modification of a model after the inclusion of trace on it. If a trace produces a modification on the model, it will be selected as an abnormal or anomalous trace, otherwise it is an instance of the mined model. This paper explains how the inclusion cost works and the proposed model to select the anomalous traces. Moreover, we comment the results of experiments and some limitations.},
  keywords = {Workflow Mining, Anomaly Detection, Information Security},
  pages = {98--106},
  year = {2006},
  note = {Gerência e coordenação de workflow; Outros},
  abstract-original = {Este trabalho apresenta um modelo de detecção de traces anômalos gerados por um sistema gerenciador de processos. A detecção é baseada no custo de inclusão de um trace sobre um modelo construído através de um algoritmo de mineração de workflow que utiliza um conjunto de heurísticas. O cálculo do custo de inclusão é realizado como segue: (i) um trace do logo é removido; (ii) um modelo de workflow baseado em um subconjunto dos traces restantes é descoberto; e (iii) o trace removido é adicionado sobre o modelo minerado. O custo de inclusão representa o tamanho da modificação de um modelo após a inclusão de um trace no mesmo. Se um trace modifica o modelo, então ele será selecionado como anômalo, senão indica uma instância do modelo. Este artigo explica o método proposto, alguns exemplos, bem como nosso avaliação do método.},
  lang = {en}
}

@INPROCEEDINGS{Bortoli-etal2006,
  author = {Eliane Maria Bortoli and Cesar Augusto Tacla and Fabrício Enembreck},
  title = {Context Awareness of Activities for Identification of Potential Communities},
  crossref = {proceedings:sbsc:2006},
  abstract = {Employees, physically or geographically dispersed, of an organization may share a virtual environment of work. Interactions in real environments result from individuals having common points in their activities or by necessity of coordinating their actions among other reasons. In virtual environments human perception is limited, and it is necessary to introduce it by some mechanism. To perceive the activities of other individuals in virtual environments is important in the flow and naturalness of the work. In order to increase the perception of individuals that perform great part of their activities in networked computers, this work presents a computational model that allows to represent the context of their activities and to put them in correlation to identify potential communities of employees. The perception model allows the individuals to perceive others that perform activities whose contexts are similar. This work distinguishes from others because it takes into consideration the contents of the documents, i.e. the traces of an activity in order to build its context.},
  keywords = {Awareness, Perception, Context of activity, Identification of communities},
  pages = {48--57},
  year = {2006},
  note = {Percepção (awareness); Grupos e Comunidades Virtuais},
  abstract-original = {Através das redes de computadores é possível que colaboradores de uma organização, física ou geograficamente dispersos, compartilhem um mesmo ambiente de trabalho de forma virtual. Interações ocorrem nesses ambientes porque indivíduos realizam atividades que possuem pontos de intersecção, tais como, relações pessoais e assuntos de interesse. Nesse caso, a percepção das atividades de outros indivíduos se torna essencial, pois o fluxo e naturalidade do trabalho são dificultados em função da distância e da impessoalidade inerentes. A fim de aumentar a percepção dos indivíduos que realizam grande parte de suas atividades em computadores interconectados, esse trabalho visa apresentar um modelo computacional que permite capturar e representar o contexto de atividade dos indivíduos e colocá-los em correlação para identificar comunidades potenciais. O modelo de percepção permite aos indivíduos perceberem outros que realizam ou realizaram atividades em contextos similares. Apresenta-se uma técnica que se distingue das técnicas normalmente empregadas em percepção, pois a maioria delas não leva em consideração o conteúdo pertencente ao contexto de trabalho dos indivíduos, considerando apenas a presença/ausência dos indivíduos ou as atividades realizadas nesse contexto o que dificulta e torna imprecisa a identificação de agrupamentos desses indivíduos.},
  keywords-original = {Percepção, Contexto de atividades, Identificação de comunidades},
  lang = {pt},
  title-original = {Percepção de Contextos de Atividade para Identificação de Comunidades Potenciais}
}

