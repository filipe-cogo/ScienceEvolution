@INPROCEEDINGS{Carneiro.etal_2009,
  author = {Pedro Jorge Santana Carneiro and Ricardo Araújo Costa and Silvio Romero Lemos Lemos Meira},
  title = {{MaRKSoNe}: A Tool for Supporting Knowledge Management in Software Projects},
  crossref = {proceedings:sbsc:2009},
  abstract = {Over the last decades, knowledge management has become one of the most significant factors of organizational success. However, as analyzed in the software factories literature, the adoption of knowledge management processes is not a common practice in this kind of organization. The factors are the most diverse, among is possible to cite the costs in preparing the necessary infrastructure and the recruitment of skilled professionals to carry out knowledge management activities. Besides, this paper presents MaRKSoNe, a system which the main objective is to automatically manage and recommend knowledge to software project professionals. The deployment of MaRKSoNe in a software factory indicated very positive and promising results, such as, a decrease of the necessary effort to perform knowledge management in software projects, and also a decrease of time needed to insert new professionals in the software project context.},
  keywords = {Software Factories; Knowledge Management; Recommender Systems; Collaborative Filtering},
  pages = {70--79},
  doi = {10.1109/SBSC.2009.15},
  year = {2009},
  abstract-original = {Nas últimas décadas, a gestão do conhecimento tem se tornado um dos fatores mais significativos para determinar o sucesso organizacional. No entanto, conforme observado na literatura de fábricas de software, a adoção de processos de gestão de conhecimento não é uma prática comumente seguida por esse tipo de organização. Os fatores são os mais diversos, entre os quais podem ser citados os custos para preparação da infra-estrutura necessária e a contratação de profissionais especializados para esse fim. Dessa forma, o presente artigo apresenta o MaRKSoNe, um sistema cujo objetivo é gerir e recomendar conhecimentos automaticamente para profissionais em projetos de software. Os resultados da implantação desse sistema numa fábrica de software indicaram pontos positivos e bastante promissores, como, por exemplo, a redução do esforço necessário para realizar a gestão do conhecimento em projetos de software, e a diminuição do tempo necessário para inserir novos colaboradores no contexto do projeto.},
  keywords-original = {Fábricas de Software; Gestão do Conhecimento; Sistemas de Recomendação; Filtragem Colaborativa},
  lang = {pt},
  title-original = {MaRKSoNe: Uma Ferramenta para Suporte a Gestão de Conhecimento em Projetos de Software}
}

@INPROCEEDINGS{Castro-etal2008,
  author = {Thais Castro and Alberto Castro and Hugo Fuks},
  title = {Learning to program in group},
  crossref = {proceedings:sbsc:2008},
  abstract = {The technical literature in cognitive science informs that working in groups reaps more benefits than working alone. We are seeing a variety of innovative group programming methodologies like the agile methods. This work examines the findings of a pilot study carried out during the first academic semester of 2007. The subjects were 110 freshmen computing and engineering students taking their first programming course at the Federal University of Amazonas. Based on these findings, it is proposed a programming progression learning scheme, from individual to group programming. Such transition is necessary for students are not used to work in group. In order to evaluate such progression learning scheme a case study is outlined.},
  pages = {45--54},
  doi = {10.1109/SBSC.2008.31},
  year = {2008},
  abstract-original = {A literatura técnica em ciência cognitiva informa que o trabalho em grupo proporciona maiores benefícios que o trabalho individual. Há inúmeras metodologias inovadoras para programação em grupo, como por exemplo, os métodos ágeis. Este trabalho examina os resultados de um estudo piloto aplicado no primeiro semestre acadêmico de 2007. Os sujeitos foram 110 calouros de computação e engenharia matriculados em seu primeiro curso de programação. Baseado nestes resultados, um esquema de progressão de aprendizagem de programação em grupo é proposto, o qual prevê uma transição gradual da prática individual para a programação em grupo. Tal transição é necessária, pois os estudantes não estão acostumados a trabalhar em grupo. A fim de avaliar tal esquema de progressão de aprendizagem, é proposto um estudo de caso.},
  booktitle = {Sistemas Colaborativos, 2008 SimpÃ³sio Brasileiro de},
  lang = {pt},
  title-original = {Aprendendo a Programar em Grupo}
}

@INPROCEEDINGS{Chaves.etal_2009,
  author = {Ana Paula Chaves and Eliza Hatsue Moriya Huzita and Willian Capato Donegá and Vaninha Vieira},
  title = {Context-Based Notification Supporting Distributed Software Teams Management and Coordination},
  crossref = {proceedings:sbsc:2009},
  abstract = {Global Software Development introduced many competitive advantages, however, these advantages brought new challenges together, specially when we talk about communication issues and, consequently, collaborative work participants coordination and management. In this sense, awareness techniques and context management can be used to offer information to project participants, making them perceive the context where workspace actions are occurring. This paper presents DiSEN-Notifier, a notification manager that uses contextual data to send information to collaborative work participants within a distributed software engineering environment. DiSEN-Notifier uses event-based notification, and does not require users to request the information. It also identifies - based on context - who are the participants interested on a specific information keeping them aware of any change at the moment it occurs.},
  keywords = {notification; coordination; context awareness; global software development},
  pages = {80--89},
  doi = {10.1109/SBSC.2009.30},
  year = {2009},
  abstract-original = {Desenvolvimento Distribuído de Software trouxe diversas vantagens competitivas, entretanto, essas vantagens são acompanhadas de novos desafios, especialmente quando se trata das dificuldades de comunicação e, consequentemente, de gerência e coordenação entre os indivíduos participantes do trabalho colaborativo. Nesse sentido, técnicas de percepção e gerenciamento de contexto tem sido utilizadas para oferecer aos indivíduos informações que os tornem capazes de perceber o contexto das ações que ocorrem no ambiente de trabalho. Este artigo apresenta um gerenciador de notificações de eventos, denominado DiSEN-Notifier, que utiliza informações contextuais para enviar informações para os participantes do trabalho colaborativo em um ambiente de desenvolvimento distribuído de software. O DiSEN-Notifier utiliza notificações baseadas em eventos e envia mensagens automaticamente, sem exigir que os usuários as solicitem. Além disso, identifica, com base no contexto, quem são os indivíduos interessados em uma determinada informação, mantendo os usuários cientes das mudanças no momento em que ocorrem.},
  keywords-original = {notificação; coordenação; percepção contexto; desenvolvimento distribuído de software},
  lang = {pt},
  title-original = {Notificação Baseada em Contexto como Apoio à Gerência e Coordenação em Equipes de Software Distribuídas}
}

@INPROCEEDINGS{Chaves.etal_2011,
  author = {Ana Paula Chaves and Igor Steinmacher and Vaninha Vieira},
  title = {Social networks and collective intelligence applied to public transportation systems: A survey},
  crossref = {proceedings:sbsc:2011},
  abstract = {Road traffic in big cities is becoming increasingly chaotic. The use of public transportation is an alternative to improve this scenario, since it diminishes the number of private vehicles on the roads. However, to improve its quality is important to understand the problems people are facing when using this kind of transportation. This paper presents the results of a survey conducted with public transportation users which investigates how collaborative systems based on social networks and collective intelligence can support sharing information with the passengers. The results show that there is a scarcity of ways to obtain real-time information related to public transportation and that the use of social network applications and collective intelligence is an interesting way to share and obtain this kind of information.},
  keywords = {Intelligent Transportation System, collective intelligence, social network},
  pages = {16--23},
  year = {2011},
  lang = {en}
}

@INPROCEEDINGS{Cinelli2005,
  author = {Gustavo Cinelli},
  title = {Monitoring forum sessions using {Faucon} tool},
  crossref = {proceedings:wcscw:2005},
  abstract = {This paper proposes a methodology for planning and applying forum sessions. The stydy presents Faucon, a tool developed based on the studied methodology, adding graphical features to analyze the results from teachers' point of view. Next features to be developed in the tools are also presented.},
  year = {2005},
  note = {Monitoramento e análise de interações de grupo; Aprendizagem colaborativa apoiada por computador},
  abstract-original = {Este artigo tem como propósito apresentar uma metodologia para planejamento e aplicação de sessões de fórum. O trabalho também apresenta a Faucon, ferramenta para fórum desenvolvida a partir da metodologia estudada, acrescentando características gráficas para uma análise dos resultados por parte do docente. Os próximos passos no desenvolvimento da ferramenta também é apresentado.},
  lang = {pt},
  title-original = {Acompanhamento de sessões de fórum através da ferramenta Faucon}
}

@INPROCEEDINGS{Coelho-Raposo2005,
  author = {André L. V. Coelho and Alberto B. Raposo},
  title = {Dealing with imprecision in temporal interdependencies between collaborative tasks: A fuzzy perspective},
  crossref = {proceedings:wcscw:2005},
  abstract = {In this paper, we advocate that the use of concepts from Soft Computing theory, in particular from fuzzy systems, can be quite useful in the modeling and coordination of collaborative activities. The tolerance of imprecision, uncertainty and approximation, which is the core of such technology, may provide a more subjective model for such activities, closer to human reasoning. We introduce a fuzzy-based approach to deal with temporal interdependencies between collaborative tasks, aiming to provide a step further toward the flexibility of coordination mechanisms in CSCW systems.},
  pages = {791--800},
  year = {2005},
  note = {Ambientes colaborativos adaptativos; Gerência e coordenação de workflow}
}

@INPROCEEDINGS{Costa-etal2008b,
  author = {Jean M. R. Costa and Rafael M. Feitosa and Cleidson R. B. de Souza},
  title = {{RaisAware}: a support tool for collaborative software engineering based upon dependency analysis},
  crossref = {proceedings:sbsc:2008},
  abstract = {This paper presents RaisAware, a collaborative software development tool. RaisAware is one of the few tools aimed to support the long known relationship between software architecture and coordination of work. Our design is based on dependency analysis of software development artifacts and software developers' activities. We describe the theoretical and analytical motivations behind this work, detail the design and implementation of RaisAware, and provide recommendations for future work in this direction.},
  pages = {254--264},
  doi = {10.1109/SBSC.2008.34},
  year = {2008},
  abstract-original = {Esse artigo apresenta a ferramenta RaisAware, uma ferramenta de auxílio ao desenvolvimento colaborativo de software. RaisAware é uma das poucas ferramentas que explora o relacionamento há muito conhecido entre a arquitetura do software e coordenação do trabalho de desenvolvimento de software. O projeto da ferramenta é baseado na análise de dependências entre os artefatos produzidos no desenvolvimento de software e entre as atividades dos desenvolvedores. As motivações teóricas e analíticas por trás desse trabalho são apresentadas, assim como detalhes do projeto e implementação da RaisAware. O artigo conclui com recomendações para trabalhos futuros.},
  lang = {pt},
  title-original = {RaisAware: Uma Ferramenta de Auxílio à Engenharia de Software Colaborativa Baseada em Análises de Dependências}
}

@INPROCEEDINGS{Costa.Souza_2010,
  author = {Jean Marcel Reis Costa and Cleidson Ronald Botelho Souza},
  title = {Analyzing the Scalability of Awareness Networks in a Distributed Software Development Project},
  crossref = {proceedings:sbsc:2010},
  abstract = {Awareness has been a very important concept in the CSCW field. Arguably, this concept is about the fact that an actor needs to monitor the work of his colleagues and, at the same time, inform them about his own work. This facilitates the coordination of collaborative activities. Despite important previous work on this topic, none directly addresses the number of actors that each actor should monitor and, similarly, the number of actors this same actor should inform their activities to. This set of actors is called the 'awareness network'. This paper presents an analysis of the scalability of awareness networks in the context of a large-scale distributed software development project. Our results can be used to inform the design of tools for collaborative software development.},
  keywords = {scalability; distributed software development},
  pages = {103--110},
  doi = {10.1109/SBSC.2010.22},
  year = {2010},
  abstract-original = {Ao longo dos anos muitos trabalhos sobre o conceito de awareness foram publicados. Diversas formas de representar este conceito, bem como definições divergentes ou complementares foram apresentadas. De um modo geral, a idéia de awareness se refere ao fato de que um ator precisa, ao mesmo tempo, estar ciente do trabalho de seus colegas e informar seus colegas sobre seu próprio trabalho. Esta percepção sobre o trabalho dos colegas facilita a coordenação de atividades colaborativas. Apesar das diferentes definições, nenhuma delas aborda diretamente o número de atores sobre os quais um ator precisa estar ciente e, de maneira similar, o número de atores para os quais este mesmo ator deve informar suas atividades. Baseado em nossos trabalhos anteriores, estes atores formam as chamadas redes de awareness. Esse artigo visa reduzir essa limitação dos trabalhos anteriores, apresentando dados sobre a escala destas redes de awareness. Estes dados são baseados em um estudo de caso com um projeto distribuído de desenvolvimento de software, o Jazz. Os resultados da análise permitirão entender melhor a escalabilidade das redes de awareness ao longo de um projeto e podem nortear futuras pesquisas nessa área.},
  keywords-original = {escalabilidade; desenvolvimento distribuído de software},
  lang = {pt},
  title-original = {Analisando a escalabilidade das redes de awareness de um projeto de software distribuído}
}

@INPROCEEDINGS{Costa.etal_2009,
  author = {Costa, R.A. and Meira, S.R.L. and Silva, E.M. and Ribeiro, R.A.},
  title = {A Knowledge Management Process Using Social Networks},
  crossref = {proceedings:sbsc:2009},
  abstract = {This case study describes the effects of using a Web Based Social Network (WBSN) approach to Knowledge Management in a Brazilian software development organization. During this work it was proposed a Knowledge Management process, with some metrics related to its phases. These metrics have been monitored since January 2008 and have been analyzed in order to verify the efficiency of this approach. In order to give a better understanding of the concepts related to Social Networks and Knowledge Management, it is presented a brief introduction to each one of them, including an evaluation of existing Knowledge Management approaches.},
  keywords = {corporate social networks; knowledge management; metrics},
  pages = {154--160},
  doi = {10.1109/SBSC.2009.14},
  year = {2009},
  abstract-original = {Este estudo de caso descreve os efeitos do uso de uma abordagem baseada em Redes Sociais Web para Gestão do Conhecimento por um instituto de inovação Brasileiro. Durante este trabalho foi necessário propor um mapeamento de processo de Gestão do Conhecimento para utilização de Redes Sociais, com um conjunto de métricas associas a cada um de seus estágios. Estas métricas foram monitoradas de Janeiro a Dezembro de 2008 com o objetivo de verificar a eficiência desta abordagem. Para garantir um melhor entendimento dos conceitos associados a Redes Sociais e Gestão do Conhecimento, uma breve introdução a cada um destes é apresentada, incluindo a avaliação de algumas abordagens existentes para a Gestão do Conhecimento.},
  keywords-original = {Redes Sociais Corporativas; Gestão do Conhecimento; Métricas},
  lang = {pt},
  title-original = {Um Processo para Gestão do Conhecimento Organizacional através de Redes Sociais}
}

@INPROCEEDINGS{Costa-etal2008,
  author = {Ricardo Costa and Robson Oliveira and Edeilson Silva and Silvio Meira},
  title = {{A.M.I.G.O.S}: a platform for knowledge management using social networks},
  crossref = {proceedings:sbsc:2008},
  abstract = {Companies are looking for strategies to support members' communication and collaboration, which would help them to create, manage and share knowledge inside the organization. This work presents the a.m.i.g.o.s platform, which provides social networks features to support knowledge management. It shows how the use of social networks can help companies overcame this challenge by exchanging information through relationships between its members, and how a.m.i.g.o.s has being able to improve communication and maintenance of organization knowledge in a Brazilian Research and Innovation Institute.},
  pages = {192--203},
  doi = {10.1109/SBSC.2008.26},
  year = {2008},
  abstract-original = {As organizações vêm procurando mecanismos para facilitar a comunicação e colaboração entre seus membros. Estes mecanismos têm por objetivo auxiliar na criação, gestão e compartilhamento do conhecimento dentro da organização. Este trabalho apresenta a plataforma a.m.i.g.o.s, que provê funcionalidades de redes sociais para apoiar a gestão do conhecimento. É apresentado ainda como o uso de redes sociais pode ajudar empresas a superar o desafio da troca de informações através dos relacionamentos entre os membros da organização, e como o uso do a.m.i.g.o.s vem auxiliando na comunicação e gestão do conhecimento organizacional em um instituto de pesquisa e inovação no Brasil.},
  lang = {pt},
  title-original = {{A.M.I.G.O.S}: Uma plataforma para GestÃ£o de Conhecimento através de Redes Sociais}
}

@INPROCEEDINGS{Cordeiro-etal2006,
  author = {Weverton Luis da Costa Cordeiro and Rafael Esteves and Breno França and Cleidson de Souza},
  title = {An ethnographical study on the process of weather forecasting},
  crossref = {proceedings:sbsc:2006},
  abstract = {This paper presents the results of a field study applied to weather forecasting using an ethnographic approach. Our goal was to achieve an understanding of the collaborative aspects that employees use to get their work done. Through the analysis of the collected data, we suggest requirements for a software system to be developed to help these actors work together.},
