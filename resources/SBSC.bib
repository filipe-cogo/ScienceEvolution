  title = {Awareness of Trends in {e-Democratic} Discussions},
  crossref = {proceedings:sbsc:2010},
  abstract = {This article presents a proposal to the visualization of tendencies in democratic discussions with social networks. In this discussion context, it is hard to follow the discussion and to have awareness of others' opinion, due to the volume of messages that are produced and the number of participants. This work proposes a process of social network analysis of discussions and presents a preliminary specification of a system to support it.},
  keywords = {eletronic democracy; transparency; collaboration; discussion; social networks; awareness; Information and Communications Technology (ICT); forum},
  pages = {79--86},
  doi = {10.1109/SBSC.2010.19},
  year = {2010},
  abstract-original = {Neste artigo é apresentada uma proposta para a visualização de tendências em discussões democráticas através de redes sociais. Neste tipo de discussão, é difícil o acompanhamento e a percepção de tendências de opiniões dado o volume de mensagens produzidas. Neste é proposto um processo de análise de redes sociais de discussão e apresentada uma proposta de fórum de discussão para melhorar a extração das tendências da discussão.},
  keywords-original = {Democracia Eletrônica; Transparência; Colaboração; Discussão; Redes Sociais; Percepção; Tecnologias de Informação e Comunicação (TIC); Fórum},
  lang = {pt},
  title-original = {Percepção de tendências em Discussões Democráticas}
}

