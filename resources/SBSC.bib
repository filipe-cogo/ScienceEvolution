@INPROCEEDINGS{Toledo-etal2008,
  author = {Guilherme David Garcia Toledo and Diego Lima Bastos and Jose Maria N. David},
  title = {Supporting the interoperability for coordination activities in a
	groupware infrastructure},
  year = {2008},
  pages = {34--44},
  abstract = {Aiming to support the complexity of distributed group activities, different collaborative applications are usually developed in heterogeneous platforms. This complexity is related to the diversity of requirements that need to be fulfilled by groupware. Among them interoperability is a primary attribute to support the development of coordination services. In this context, interoperability absence is a key challenge considering that it prevents several tools to be used when supporting the same activity. The goal of this paper is to present an interoperability solution for coordination services in distributed groupware.},
  abstract-original = {Com o objetivo de apoiar a complexidade das atividades de grupos distribuidos
	aplicacões colaborativas distintas sao construidas freqüentemente
	em plataformas heterogêneas. Tal fato se deve à diversidade de requisitos
	que precisam ser atendidos por groupware. Dentre esses requisitos
	a interoperabilidade e um atributo essencial para apoiar o desenvolvimento
	de servicos de coordenacao. Neste contexto, a ausência da interoperabilidade
	se caracteriza como um problema na medida em que impede a utilizacao
	de ferramentas diversas para apoiar uma mesma atividade. O objetivo
	deste artigo e apresentar uma solucao de interoperabilidade para
	servicos de coordenacao em groupware distribuido.},
  crossref = {proceedings:sbsc:2008},
  doi = {10.1109/SBSC.2008.16},
  lang = {pt},
  title-original = {Apoiando a Interoperabilidade entre as Atividades de Coordenacao em
	uma Infra-estrutura de Groupware}
}

@INPROCEEDINGS{Tramontina-Wainer2005,
  author = {Gregorio Tramontina and Jacques Wainer},
  title = {Statistically Analyzing the Performance of Scheduling Techniques
	in Sequences of Workflow Activities},
  year = {2005},
  note = {Gerência e coordenacao de workflow},
  abstract = {Using scheduling techniques to reorder work in workflow systems can improve the performance of the business processes enacted by these systems. But this research area is still under-explored. This paper presents preliminary results on applying scheduling techniques to workflow systems. It studies the performance of scheduling techniques in five scenarios composed of sequences of workflow activities using simulation. The scenarios are dynamic and have uncertainties on the processing times of the cases in each of their activities. These uncertainties are handled by the guess and solve approach, which consists of making a guess on these processing times and solving the resulting deterministic problem with a suitable technique. The techniques results are compared to those obtained by the FIFO rule and they show that it is a good practice to use other techniques than FIFO (the most used ordering policy on today's workflows) and that the guess and solve is a feasible approach at least when its error is bound to 30%.},
  crossref = {proceedings:wcscw:2005}
}

@INPROCEEDINGS{Trindade.etal_2009,
  author = {Cleyton C. Trindade and Yuri A. M. Barbosa and Alan K. O. Moraes and Jones O. Albuquerque and Silvio R. L. Meira},
  title = {An Expert Recommender System to Distributed Software Development:
	Requirements, Project and Preliminary Results},
  year = {2009},
  pages = {161--168},
  abstract = {In distributed software development, geographical and temporal distances turn communication inefficient and affect the various team's perceptions levels - proximity, activity, awareness, process and perspective. The low level of perception turns the task of expert location hard and not being able to quickly locate the experts in the source code during the implementation makes the project slower, consequently delaying its schedule. This paper proposes Presley, a tool to reduce these delays through identification and recommendation of experts in some areas of the source code using the project communication, decreasing the waiting time for help. We also present preliminary results which show the practical potential of our approach.},
  abstract-original = {No desenvolvimento distribuido de software, as distâncias geografica
	e temporal geram deficiências na comunicacao e nos diversos niveis
	de percepcao -- proximidade, atividade, presenca, processo e perspectiva
	-- da equipe. O enfraquecimento das percepcões dificulta o reconhecimento
	rapido das pessoas capacitadas a ajudar outros desenvolvedores com
	problemas no momento da codificacao, tornando a execucao do projeto
	mais lenta, conseqüentemente provocando atrasos no cronograma. A
	ferramenta Presley objetiva diminuir estes atrasos atraves da identificacao
	e recomendacao dos desenvolvedores especialistas em determinadas
	porcões do codigo-fonte, reduzindo o tempo de busca e de espera por
	ajuda. O trabalho apresenta resultados preliminares que demonstram
	o potencial pratico da ferramenta.},
  crossref = {proceedings:sbsc:2009},
  doi = {10.1109/SBSC.2009.29},
  keywords = {distributed software development; expert recommender system; knowledge management},
  keywords-original = {desenvolvimento distribuido de software; sistema de recomendacao de
	especialista; gerenciamento do conhecimento},
  lang = {pt},
  title-original = {Um Sistema de Recomendacao de Especialistas para Desenvolvimento Distribuido
	de Software: Requisitos, Projeto e Resultados Preliminares}
}

@INPROCEEDINGS{Ugolino-etal2008,
  author = {Wallace Ugulino and Joao Carlos Goncalves and Ricardo Rodrigues Nunes and Flavia Santoro},
  title = {{K2Chat}: a chat tool with support for logging and indexing of sessions},
  year = {2008},
  pages = {235--243},
  abstract = {Chat tools have been used by a wide range of companies as a communication channel with customers and for the promotion of products and services. Workgroups often use textual chats to communicate in the workplace. Such interactions are rich in knowledge transfer and have been under used in organizational memory. The K2Chat, a textual chat groupware, has been developed to structure the conversation by classifying and relating messages and highlighting keywords for indexation.},
  crossref = {proceedings:sbsc:2008},
  doi = {10.1109/SBSC.2008.12},
  lang = {pt},
  title-original = {{K2Chat}: Uma Ferramenta de Bate-Papo com Suporte ao Registro e Indexacao
	das Sessões}
}

@INPROCEEDINGS{Ugulino.Pimentel_2010,
  author = {Wallace Ugulino and Mariano Pimentel},
  title = {Method {Cyclus} to Collaboration Process Improvement},
  year = {2010},
  pages = {111--117},
  abstract = {This article presents the method Cyclus to collaboration process improvement, based on collaborative filtering and Action Research, and the Modus system, developed to support Cyclus applying. The method was developed along 2 years of research and was evaluated 2 times: in a pilot case study, and in an explanatory case study. This article communicates the results of the second study, the explanatory. From the results, was possible to confirm the research hypothesis investigated and was concluded that the method has a potential to collaboration process improvement, although the results are insufficient to say that is possible to find a good process through this method. It is argued the need to investigate if the Cyclus scale with 2, 3, or 4 values is more suitable than the current scale, with 5 values. Preliminary results give some clues that is possible to get a good approximation of the real quality of a process from 10 assessors, at least, which will be investigated deeply in future works.},
  abstract-original = {Nesse artigo e apresentado o metodo Cyclus para a melhoria de processos
	de colaboracao e o sistema Modus, desenvolvido para apoiar a aplicacao
	do Cyclus. O metodo foi desenvolvido ao longo de 2 anos de pesquisa
	e foi avaliado em 2 momentos: num estudo de caso piloto e num estudo
	de caso explanatorio. Nesse artigo, sao comunicados os resultados
	do segundo estudo realizado, o explanatorio. Dos resultados, confirmou-se
	a hipotese de pesquisa e obteve-se que o metodo tem potencial para
	melhoria de processos de colaboracao. Levantou-se a necessidade de
	investigar se a escala do Cyclus com 2, 3 ou 4 valores e mais adequada
	que a atual, com 5 valores. Tambem foram obtidos indicios de que
	e possivel obter uma boa estimativa da qualidade do processo a partir
	de 10 avaliadores, o que sera objeto de mais investigacões em trabalhos
	futuros.},
  crossref = {proceedings:sbsc:2010},
  doi = {10.1109/SBSC.2010.23},
  keywords = {collaborative process; process improvement; PDCA; collaborative evaluation},
  keywords-original = {processo de colaboracao; melhoria de processo; PDCA; avaliacao colaborativa},
  lang = {pt},
  title-original = {Metodo Cyclus para melhoria de processos de colaboracao}
}

@INPROCEEDINGS{Vega.etal_2009,
  author = {Katia Vega and Hugo Fuks and Gustavo Carvalho},
  title = {Training in Requirements by Collaboration: Branching Stories in Second
	Life},
  year = {2009},
  pages = {116--122},
  abstract = {Training by playing is believed to be an effective strategy for learning. Training games combine educational and technological techniques that help learners to get involved, collaborate and learn in a practical and interactive way. Collaboration is inherent to software requirements elicitation which involves customers, users and developers to achieve an overall goal. In this article, a game entitled TREG that simulates various activities in software requirements workshop is proposed. The trainee interacts with Non-Player Characters and according to the trainee's choice the game reenacts a specific scenario. The social simulation in the game is based on the branching stories genre. Each branching node is described using a scenario-based template. The game was prototyped in Second Life, a virtual world that gives the possibility to create an immersive collaborative educational experience.},
  crossref = {proceedings:sbsc:2009},
  doi = {10.1109/SBSC.2009.11},
  keywords = {Educational game; Branching Stories; Requirements; Second Life},
  lang = {en}
}

@INPROCEEDINGS{Vega.etal_2010,
  author = {Katia Vega and Andreia Regina Pereira and Gustavo Carvalho and Hugo Fuks},
  title = {{TREG} Usability Tests: Evaluating a Training Game in Second Life},
  year = {2010},
  pages = {63--70},
  abstract = {TREG is a training game which simulates various activities in software requirements workshop technique based on the book ``Requirements by Collaboration''. It was developed in Second Life, a virtual world that gives the possibility to create an immersive collaborative educational experience. This study evaluated TREG using the usability metrics for games: interface, game mechanisms and game play. The purpose of this paper is to present our process and results of the usability tests for evaluating the user experience in the game.},
  abstract-original = {TREG e um jogo que simula atividades de treinamento em Engenharia
	de Requisitos. Especificamente, na tecnica de Workshops baseada no
	livro ``Requirements by Collaboration''. Este jogo foi desenvolvido
	no Second Life, um mundo virtual que possibilita criar uma experiência
	imersiva de ensino colaborativo. Este estudo avaliou TREG a partir
	das seguintes categorias de usabilidade para jogos: interface, mecanismos
	de jogo e jogabilidade. O objetivo deste trabalho e apresentar o
	processo e os resultados dos testes de usabilidade para avaliar a
	experiência do usuario no jogo.},
  crossref = {proceedings:sbsc:2010},
