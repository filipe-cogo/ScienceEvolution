@INPROCEEDINGS{Barros.etal_2009,
  author = {Raphael Lima Belém Barros and Carina Frota Alves and Geber Lisboa Ramalho},
  title = {Investigating the Communication Process in Multidisciplinary Game Development Teams},
  crossref = {proceedings:sbsc:2009},
  abstract = {The game development process is a complex activity that requires a team composed by members with different backgrounds. There is a consensus regarding the importance of multidisciplinary teams in the game development community. However, the effective communication and coordination of work involving multidisciplinary teams is a challenge. This paper presents the results of a qualitative research conducted in a game developing company to investigate the main characteristics and difficulties involved in the communication process of multidisciplinary teams.},
  keywords = {communication; multidisciplinary teams; games; qualitative research; ethnography},
  pages = {61--69},
  doi = {10.1109/SBSC.2009.21},
  year = {2009},
  abstract-original = {O processo de desenvolvimento de um jogo é uma atividade complexa, que exige uma equipe desenvolvimento composta por indivíduos com diferentes formações. Existe um consenso na comunidade de jogos sobre a importância de equipes multidisciplinares. No entanto, a efetiva comunicação e coordenação do trabalho entre membros de uma equipe multidisciplinar é um desafio. Este artigo apresenta os resultados de um estudo qualitativo realizado em uma empresa desenvolvedora de jogos com o objetivo de investigar as principais características e dificuldades envolvidas no processo de comunicação de equipes multidisciplinares.},
  keywords-original = {comunicação; equipes multidisciplinares; jogos; pesquisa qualitativa; etnografia},
  lang = {pt},
  title-original = {Investigando o Processo de Comunicação em Equipes Multidisciplinares de Jogos}
}

@INPROCEEDINGS{Berkenbrock.etal_2009,
  author = {Carla Diacui Medeiros Berkenbrock and Celso Massaki Hirata and Clovis Torres Fernandes and Mauro Carlos Pichiliani},
  title = {Usability Requirements for the Development and Evaluation of Mobile Groupware Systems},
  crossref = {proceedings:sbsc:2009},
  abstract = {Usability is an important factor affecting the user's productivity. However, evaluating groupware usability is a complex task, especially in a mobile environment. In this paper a study with eight requirements to explore usability in a mobile groupware environment is presented. A prototype application was developed followed by a series of evaluations to observe the potential of the requirements. Results show that these requirements should be considered during the development of a mobile groupware in order to help designers to identify usability weaknesses in a mobile groupware.},
  keywords = {mobile groupware; usability requirements; groupware evaluating},
  pages = {10--18},
  doi = {10.1109/SBSC.2009.10},
  year = {2009},
  abstract-original = {A usabilidade é um fator importante que afeta a produtividade do usuário. No entanto, avaliar a usabilidade de um sistema de groupware é uma tarefa complexa, especialmente em um ambiente móvel. Neste trabalho, apresenta-se um estudo com oito requisitos para explorar a usabilidade de ambientes de groupware móvel. Adicionalmente, foi desenvolvida uma aplicação protótipo e foram realizadas avaliações desse protótipo para observar o potencial desses requisitos. Os resultados mostram que esses requisitos devem ser considerados durante o desenvolvimento do groupware móvel, a fim de ajudar os projetistas a identificar pontos fracos relacionados com a usabilidade do groupware móvel.},
  keywords-original = {groupware móvel; requisitos de usabilidade; avaliação de groupware},
  lang = {pt},
  title-original = {Requisitos de Usabilidade para o Desenvolvimento e Avaliação de Aplicações Cooperativas Móveis}
}

@INPROCEEDINGS{Carneiro.etal_2009,
  author = {Pedro Jorge Santana Carneiro and Ricardo Araújo Costa and Silvio Romero Lemos Lemos Meira},
  title = {{MaRKSoNe}: A Tool for Supporting Knowledge Management in Software Projects},
  crossref = {proceedings:sbsc:2009},
  abstract = {Over the last decades, knowledge management has become one of the most significant factors of organizational success. However, as analyzed in the software factories literature, the adoption of knowledge management processes is not a common practice in this kind of organization. The factors are the most diverse, among is possible to cite the costs in preparing the necessary infrastructure and the recruitment of skilled professionals to carry out knowledge management activities. Besides, this paper presents MaRKSoNe, a system which the main objective is to automatically manage and recommend knowledge to software project professionals. The deployment of MaRKSoNe in a software factory indicated very positive and promising results, such as, a decrease of the necessary effort to perform knowledge management in software projects, and also a decrease of time needed to insert new professionals in the software project context.},
  keywords = {Software Factories; Knowledge Management; Recommender Systems; Collaborative Filtering},
  pages = {70--79},
  doi = {10.1109/SBSC.2009.15},
  year = {2009},
  abstract-original = {Nas últimas décadas, a gestão do conhecimento tem se tornado um dos fatores mais significativos para determinar o sucesso organizacional. No entanto, conforme observado na literatura de fábricas de software, a adoção de processos de gestão de conhecimento não é uma prática comumente seguida por esse tipo de organização. Os fatores são os mais diversos, entre os quais podem ser citados os custos para preparação da infra-estrutura necessária e a contratação de profissionais especializados para esse fim. Dessa forma, o presente artigo apresenta o MaRKSoNe, um sistema cujo objetivo é gerir e recomendar conhecimentos automaticamente para profissionais em projetos de software. Os resultados da implantação desse sistema numa fábrica de software indicaram pontos positivos e bastante promissores, como, por exemplo, a redução do esforço necessário para realizar a gestão do conhecimento em projetos de software, e a diminuição do tempo necessário para inserir novos colaboradores no contexto do projeto.},
  keywords-original = {Fábricas de Software; Gestão do Conhecimento; Sistemas de Recomendação; Filtragem Colaborativa},
  lang = {pt},
  title-original = {MaRKSoNe: Uma Ferramenta para Suporte a Gestão de Conhecimento em Projetos de Software}
}

@INPROCEEDINGS{Chaves.etal_2009,
  author = {Ana Paula Chaves and Eliza Hatsue Moriya Huzita and Willian Capato Donegá and Vaninha Vieira},
  title = {Context-Based Notification Supporting Distributed Software Teams Management and Coordination},
  crossref = {proceedings:sbsc:2009},
  abstract = {Global Software Development introduced many competitive advantages, however, these advantages brought new challenges together, especially when we talk about communication issues and, consequently, collaborative work participants coordination and management. In this sense, awareness techniques and context management can be used to offer information to project participants, making them perceive the context where workspace actions are occurring. This paper presents DiSEN-Notifier, a notification manager that uses contextual data to send information to collaborative work participants within a distributed software engineering environment. DiSEN-Notifier uses event-based notification, and does not require users to request the information. It also identifies - based on context - who are the participants interested on a specific information keeping them aware of any change at the moment it occurs.},
  keywords = {notification; coordination; context awareness; global software development},
  pages = {80--89},
  doi = {10.1109/SBSC.2009.30},
  year = {2009},
  abstract-original = {Desenvolvimento Distribuído de Software trouxe diversas vantagens competitivas, entretanto, essas vantagens são acompanhadas de novos desafios, especialmente quando se trata das dificuldades de comunicação e, consequentemente, de gerência e coordenação entre os indivíduos participantes do trabalho colaborativo. Nesse sentido, técnicas de percepção e gerenciamento de contexto tem sido utilizadas para oferecer aos indivíduos informações que os tornem capazes de perceber o contexto das ações que ocorrem no ambiente de trabalho. Este artigo apresenta um gerenciador de notificações de eventos, denominado DiSEN-Notifier, que utiliza informações contextuais para enviar informações para os participantes do trabalho colaborativo em um ambiente de desenvolvimento distribuído de software. O DiSEN-Notifier utiliza notificações baseadas em eventos e envia mensagens automaticamente, sem exigir que os usuários as solicitem. Além disso, identifica, com base no contexto, quem são os indivíduos interessados em uma determinada informação, mantendo os usuários cientes das mudanças no momento em que ocorrem.},
  keywords-original = {notificação; coordenação; percepção contexto; desenvolvimento distribuído de software},
  lang = {pt},
  title-original = {Notificação Baseada em Contexto como Apoio à Gerência e Coordenação em Equipes de Software Distribuídas}
}

@INPROCEEDINGS{Costa.etal_2009,
  author = {Costa, R.A. and Meira, S.R.L. and Silva, E.M. and Ribeiro, R.A.},
  title = {A Knowledge Management Process Using Social Networks},
  crossref = {proceedings:sbsc:2009},
  abstract = {This case study describes the effects of using a Web Based Social Network (WBSN) approach to Knowledge Management in a Brazilian software development organization. During this work it was proposed a Knowledge Management process, with some metrics related to its phases. These metrics have been monitored since January 2008 and have been analyzed in order to verify the efficiency of this approach. In order to give a better understanding of the concepts related to Social Networks and Knowledge Management, it is presented a brief introduction to each one of them, including an evaluation of existing Knowledge Management approaches.},
  keywords = {corporate social networks; knowledge management; metrics},
  pages = {154--160},
  doi = {10.1109/SBSC.2009.14},
  year = {2009},
  abstract-original = {Este estudo de caso descreve os efeitos do uso de uma abordagem baseada em Redes Sociais Web para Gestão do Conhecimento por um instituto de inovação Brasileiro. Durante este trabalho foi necessário propor um mapeamento de processo de Gestão do Conhecimento para utilização de Redes Sociais, com um conjunto de métricas associas a cada um de seus estágios. Estas métricas foram monitoradas de Janeiro a Dezembro de 2008 com o objetivo de verificar a eficiência desta abordagem. Para garantir um melhor entendimento dos conceitos associados a Redes Sociais e Gestão do Conhecimento, uma breve introdução a cada um destes é apresentada, incluindo a avaliação de algumas abordagens existentes para a Gestão do Conhecimento.},
  keywords-original = {Redes Sociais Corporativas; Gestão do Conhecimento; Métricas},
  lang = {pt},
  title-original = {Um Processo para Gestão do Conhecimento Organizacional através de Redes Sociais}
}

@INPROCEEDINGS{Dantas.etal_2009,
  author = {Benedito Tourinho Dantas and José Maria N. David and Apoena Jorge N. Avelar and Lucas Assis S. Ferreira and Lucas Miguez S. Jesus},
  title = {{Risys} -- A Tool to Support Risk Management in a Collaborative Project Management Environment},
  crossref = {proceedings:sbsc:2009},
  abstract = {Dealing with work groups is a challenge for organizations where projects are the main focus. During their activities if cooperation is not adequately coordinated and well supported it can provoke significant delays on the project or can put the final product quality at risk. The goal of this paper is to describe the risks control module, named Risys, to support the execution of project developed by the use of Web-based Groupware on Project Management System (WGPMS). This infrastructure is comprised of groupware applications which are based both on computational intelligence and Monte Carlo technique. Experiments which were already carried out reveal valuable results related to the implemented rules on Risys. However, additional case studies need to be carried out from the moment that new applications were integrated on WGPMS, as well as new rules that were added to the database system.},
  keywords = {collaboration; project management; groupware; risk analysis},
  pages = {90--98},
  doi = {10.1109/SBSC.2009.31},
  year = {2009},
  abstract-original = {Trabalhar colaborativamente é um desafio para as organizações baseadas em projetos. Durante suas atividades se a cooperação não é adequadamente coordenada e apoiada pode provocar atrasos significativos no projeto ou comprometer a qualidade do produto final. O objetivo deste trabalho é descrever o módulo de controle de riscos, denominado Risys, na execução de projetos desenvolvidos pela utilização do Web-based Groupware on Project Management System (WGPMS). Esta infra-estrutura utiliza ferramentas de apoio baseadas em inteligência computacional e na técnica de Monte Carlo. Experimentos realizados mostraram-se satisfatórios em relação às regras implementadas no Risys. Entretanto, novas avaliações em ambiente de produção necessitam ser conduzidas a partir do momento em que novas aplicações sejam integradas ao WGPMS, bem como novas regras forem adicionadas ao banco de dados.},
  keywords-original = {colaboração; gerenciamento de projetos; groupware; análise de riscos},
  lang = {pt},
  title-original = {{Risys} -- Uma Ferramenta de Apoio à Gerência de Riscos em um Ambiente Colaborativo de Gestão de Projetos}
}

@INPROCEEDINGS{David.Maciel_2009,
  author = {José Maria N. David and Rita Suzana P. Maciel},
  title = {{WGWSOA} -- Implementing Collaboration Services in a Middleware Infrastructure},
  crossref = {proceedings:sbsc:2009},
  abstract = {Groupware applications are usually built without considering the need to interoperate with other already existing applications. WGWSOA (Web-based groupware Service-Oriented Architecture) is a service-oriented infrastructure, which was designed to support web-based distributed groupware development. To fulfill interoperability requirement it offers both common and specific middleware services which need to be readily interoperable. On this project, a collaboration services has been developed aimed to evaluate interoperability aspects. However, fulfilling groupware interoperability, while considering only data and procedures, is not enough in this context. This paper describes WGWSOA middleware infrastructure, as well as the results obtained throughout its service development. In addition, requirements related to semantic interoperability are discussed aiming to enhance distributed groupware applications development as well as their execution.},
  keywords = {middleware; service-oriented; groupware; CSCW},
  pages = {193--201},
  doi = {10.1109/SBSC.2009.20},
  year = {2009},
  abstract-original = {Aplicações de groupware são freqüentemente construídas sem considerar a necessidade de interoperar com outras aplicações já existentes. A WGWSOA (Web-based Groupware Service-Oriented Architecture) é uma infraestrutura orientada a serviços, projetada para apoiar o desenvolvimento de groupware distribuído na web. Para tanto, ela oferece serviços comuns e específicos de middleware, que necessitam ser prontamente interoperáveis. Neste projeto, serviços de colaboração têm sido desenvolvidos no sentido de avaliar aspectos de interoperabilidade. Entretanto, tratar a interoperabilidade em groupware considerando os dados e procedimentos não é suficiente neste contexto. Este artigo descreve a infra-estrutura de middleware, bem como os resultados obtidos com o desenvolvimento desses serviços. Adicionalmente, necessidades relacionadas à interoperabilidade semântica são discutidas buscando-se potencializar o desenvolvimento e a execução de aplicações de groupware distribuídas.},
  keywords-original = {middleware; orientação a serviços; groupware; CSCW},
  lang = {pt}
}

@INPROCEEDINGS{Escalfoni.etal_2009,
  author = {Rafael E. L. Escalfoni and Denise P. N. Machado and Vanessa Braganholo and Marcos R. S. Borges},
  title = {A Collaborative Approach to Identify Innovative Features},
  crossref = {proceedings:sbsc:2009},
  abstract = {Innovation has been treated as an essential factor to the development of organizations and wealth generation. However, the inherent complexity of the process has shown a hard obstacle to the diffusion of innovation on enterprises. There is no magic formula to innovate; companies that are known to be innovative have different innovation processes. This is because innovation is intimately bound to the organizational culture. In this paper, we propose a method to identify patterns that influence the innovative environment. We do this through a collaborative dynamic to retrieve and analyze knowledge about innovative experiences.},
  keywords = {innovation; organizational culture; knowledge retrieval; collaborative approach},
  pages = {169--177},
  doi = {10.1109/SBSC.2009.13},
  year = {2009},
  abstract-original = {Ultimamente inovação vem sendo tratada como um fator essencial para o desenvolvimento de organizações e geração de riquezas. Porém, a complexidade inerente ao processo tem se mostrado um duro obstáculo para a difusão de inovações nas empresas. Não existe uma fórmula mágica para inovar; empresas reconhecidamente inovadoras possuem diferentes processos de inovação. Isto porque inovação está intimamente ligada à cultura organizacional. Neste artigo propomos um método para a identificação de padrões que influenciam o ambiente de inovação através de uma dinâmica colaborativa para recuperação e análise de conhecimento sobre experiências inovadoras.},
  keywords-original = {Inovação; Cultura Organizacional; Recuperação de Conhecimento; Dinâmica Colaborativa},
  lang = {pt},
  title-original = {Uma Abordagem Colaborativa para a Identificação de Fatores que Influenciam a Inovação}
}

@INPROCEEDINGS{Ferreira.etal_2009,
  author = {Andre Felipe Engelbrecht Ferreira and Angela M. Nunes de Mendonça and Carlos Eduardo Ferrão de Azevedo and Márcio Reis Teixeira and George Alex F. Gomes},
  title = {An Experiment for Collective Tacit Knowledge Capture in Business Environment},
  crossref = {proceedings:sbsc:2009},
  abstract = {For a business organization to survive and compete in the global market, is essential that it can create its own learning. For this, it is necessary to capture the tacit knowledge that resides in people and outsource it to, then, combine it, thereby generate more knowledge. When it is distributed by a group, this task becomes even more complex. Using an approach based on the technique Elaboração Dirigida with the support of computational tool EXpor, an experiment was conducted in a small business environment targeting to validate that technique in order to recall tacit knowledge about work processes. From the analysis of results we could see the efficacy of the approach in this context and identify the next steps and some opportunities for future work.},
  keywords = {CSCW; Elaboração Dirigida; knowledge management},
  pages = {135--143},
  doi = {10.1109/SBSC.2009.16},
  year = {2009},
  abstract-original = {Para que uma organização empresarial sobreviva e consiga competir no mercado globalizado, é essencial que a mesma possa gerar aprendizado internamente. Para isto, é necessário capturar o conhecimento que reside tacitamente nas pessoas e externalizá-lo, para, posteriormente, combiná-lo, gerando assim mais conhecimento. Quando este está distribuído por um grupo, esta tarefa torna-se mais complexa ainda. Utilizando uma abordagem baseada na técnica de Elaboração Dirigida com o apoio da ferramenta computacional EXpor, foi realizado um experimento em um ambiente empresarial de pequeno porte visando a validação dessa técnica para o fim de recuperar conhecimento tácito a respeito de processos de trabalho. A partir da análise dos resultados pôde-se constatar a eficácia da abordagem nesse contexto e identificar os próximos passos e algumas oportunidades de trabalho futuras.},
  keywords-original = {CSCW; elaboração dirigida; gestão do conhecimento},
  lang = {pt},
  title-original = {Um Experimento para Captura Coletiva de Conhecimento Tácito em Ambiente Empresarial}
}

@INPROCEEDINGS{Freddo.etal_2009,
  author = {Ademir Roberto Freddo and Cesar A. Tacla and Gilson Y. Sato and Emerson Cabrera Paraiso and Bruno Campagnolo and Milton P Ramos},
  title = {Supporting Small Teams in Cooperative Software Development with a Multi-agent Architecture},
  crossref = {proceedings:sbsc:2009},
  abstract = {The research on CSCW and groupware systems focus the activities of distributed teams involved in large projects by means of tools for communication and awareness. The activities of small collocated teams are often neglected. Analyzing preliminary requirements of small teams, it is possible to observe the need of tools to help the elaboration of project documentation. This paper presents a multi-agent system architecture to support software development in small collocated teams. The architecture proposed in this paper tackles the problem of elaborating documentation, by facilitating the elaboration of the Small Project Management Plan. Tools used in the software development are encapsulated by agents that extract and organize useful information for the elaboration of such a document.},
  keywords = {CSCW; software development; multi-agent systems; small teams},
  pages = {178--183},
  doi = {10.1109/SBSC.2009.18},
  year = {2009},
  abstract-original = {Geralmente, sistemas de groupware e CSCW buscam facilitar as atividades de equipes distribuídas geograficamente e envolvidas em projetos de grande porte por meio de ferramentas para comunicação e percepção. O suporte às atividades de equipes locais de pequeno porte é usualmente negligenciado. Analisando requisitos preliminares de pequenas equipes, é possível observar a necessidade de ferramentas de apoio para a elaboração da documentação de projeto. Este artigo apresenta a arquitetura de um Sistema Multi-Agente para apoiar o desenvolvimento de software em pequenas equipes. A arquitetura aqui proposta procura tratar o problema da elaboração da documentação facilitando a elaboração do Plano de Gestão de Projeto de Software. Nela, ferramentas usadas no desenvolvimento de software são encapsuladas por agentes que extraem e organizam informações úteis à elaboração desse documento.},
  keywords-original = {CSCW; desenvolvimento colaborativo de software; sistemas multiagente; pequenas equipes},
  lang = {pt},
  title-original = {Uma Arquitetura Multiagente para o Suporte ao Desenvolvimento Colaborativo de Software em Pequenas Equipes}
}

@INPROCEEDINGS{Jatoba.etal_2009,
  author = {Alessandro Jatoba and Neno Albernaz and Samantha Vrabl and Vanessa Braganholo},
  title = {Wiki for Visual Impaired People: Exploring New Possibilities of Collaboration},
  crossref = {proceedings:sbsc:2009},
  abstract = {The Internet usage has been growing significantly over the years. Following this trend, collaborative learning tools such as Wikis are becoming increasingly popular. The rise does not respect any social, age, ethnic barriers or those imposed by physical disabilities, including visual. This work presents possibilities for collaboration and challenges to be overcome by visual impaired people interacting with a Wiki environment called DVWiki. Based on a controlled experiment conducted with a group of users, the paper outlines an analysis and conclusions with regards to the tool by considering its collaborative features.},
  keywords = {accessibility; collaboration; visual impairment; usability; web 2.0; wiki},
  pages = {202--209},
  doi = {10.1109/SBSC.2009.22},
  year = {2009},
  abstract-original = {O uso da Internet cresce de forma intensa a cada ano e, paralelamente ao crescimento do uso da Web, as ferramentas de colstrução coletiva de conhecimento, como as Wikis, tornam-se cada vez mais populares. Tal expansão atravessa barreiras sociais, étnicas ou etárias, não sendo diferente com as impostas pelas deficiências físicas, entre elas, a visual. Esse trabalho apresenta as possibilidades de colaboração e os respectivos desafios a serem superados pelos deficientes visuais no uso de um ambiente Wiki denominada DVWiki. A partir de um experimento controlado realizado com um grupo de usuários, apresentamos uma análise e algumas conclusões a respeito da ferramenta, considerando seus aspectos colaborativos.},
  keywords-original = {acessibilidade; colaboração; deficiência visual; usabilidade; web 2.0; wiki},
  lang = {pt},
  title-original = {Wiki para Deficientes Visuais: Explorando Novas Possibilidades de Colaboração}
}

@INPROCEEDINGS{Machado.Falbo_2009,
  author = {Bruno Nandolpho Machado and Ricardo Almeida Falbo},
  title = {Automated Support for Collaborative Estimation},
  crossref = {proceedings:sbsc:2009},
  abstract = {Estimation is a decision making activity that can influence the success or failure of a project. Due to the complexity and the high number of variables involved, it is very important to provide automated support for project managers perform this task. Moreover, it is recommended that it is performed by experienced people, and that the project manager works collaboratively with other people that can contribute to an improvement of the estimates, such as developers and other project managers. This paper presents EstimaODE a CASE tool that supports collaborative estimation.},
  keywords = {Collaboration; Estimation},
  pages = {19--29},
  doi = {10.1109/SBSC.2009.19},
  year = {2009},
  abstract-original = {Estimar é uma atividade de tomada de decisão, que pode ter influência direta no sucesso ou fracasso de um projeto. Devido à complexidade e ao grande número de variáveis envolvidas, é importante prover apoio automatizado para os gerentes de projeto realizarem estimativas. Além disso, é recomendável que essa atividade seja executada por pessoas experientes e que o gerente de projeto colabore com outras pessoas que possam contribuir para a melhoria do resultado obtido, dentre eles desenvolvedores e outros gerentes de projeto da organização. Este artigo apresenta EstimaODE, uma ferramenta de apoio à elaboração colaborativa de estimativas.},
  keywords-original = {Colaboração; estimativas},
  lang = {pt},
  title-original = {Apoio Automatizado à Realização Colaborativa de Estimativas}
}

@INPROCEEDINGS{Marques.etal_2009,
  author = {Aline Miranda Marques and Mariano Pimentel and Sean Siqueira},
  title = {Communication Blog: Discourse Structuring and Relationship among Participants},
  crossref = {proceedings:sbsc:2009},
  abstract = {In the last decade, blogs became popular and consolidated themselves as important communication system. The research presented in this paper contributes to the creation of knowledge regarding the characteristics and potential of blogs as mechanisms of communication and interaction. The communication possibilities in blogs are analyzed according to two perspectives: discourse structuring and the relationships among participants. In Blogs, a peculiar discourse structure is used: the Star Graph structure, which requires a centralized organization of messages resulting on a focused discussion. The following relationships are established among the participants: One-to-All, in which the author publishes the post, and All-to-One, in which readers comment on the author's post. These two forms of communication are author-centered. The All-to-All relationship, provided indirectly through links among blogs and also through the use of a mechanism to respond to a comment, allows interaction among all participants but weakens the centralized organization of messages. As a result of this research, a discourse structure that enables an All-to-All relationship while maintaining the centralized structure is proposed: the Links-Enriched Centralized Organization. This proposal allows tracking quotations, thus providing a better understanding of the conversation while keeping the focus on the post.},
  keywords = {blogs; discourse structuring; relationship among participants},
  pages = {30--35},
  doi = {10.1109/SBSC.2009.25},
  year = {2009},
  abstract-original = {Nesta última década, o blog se popularizou e se consolidou como um importante sistema de comunicação. A pesquisa apresentada neste artigo contribui para a geração de conhecimento sobre as características e o potencial do blog como meio de comunicação e interação. As possibilidades de comunicação em blog são analisadas em função de duas perspectivas: estruturação do discurso e relação entre os participantes. No blog é usada uma estruturação peculiar do discurso, a estrutura Grafo Estrela, que impõe a organização centralizada de mensagens que resulta numa discussão focada. São estabelecidas as seguintes relações entre os participantes: Um-Todos, quando o autor publica a postagem; e Todos-Um, quando os vários leitores comentam a postagem do autor. Estas duas formas de comunicação são centradas no autor. A relação Todos-Todos, que possibilita a interação entre todos os participantes, é estabelecida indiretamente através das ligações entre blogs, e também através do uso de um mecanismo para responder um comentário que, contudo, descaracteriza a organização centralizada de mensagens. Como resultado desta pesquisa, é proposta uma estruturação do discurso que possibilita a relação Todos-Todos e mantém a estruturação centralizada: a Organização Centralizada Enriquecida com Ligações.},
  keywords-original = {blogs; estruturação do discurso; relação entre os participantes.},
  lang = {pt},
  title-original = {Comunicação em Blog: Estruturação do Discurso e Relação entre os Participantes}
}

@INPROCEEDINGS{Mattos.etal_2009,
  author = {Bernardo A. M. Mattos and Raquel L. Santos and Raquel O. Prates},
  title = {Investigating the Applicability of the Semiotic Inspection Method to Collaborative Systems},
  crossref = {proceedings:sbsc:2009},
  abstract = {Evaluating collaborative systems is still an open issue being investigated by the HCI and CSCW communities. One of the various relevant aspects to be considered in the evaluation is the quality of the interaction. In that direction there have been proposed methods that adapt or extend consolidated single-user usability evaluation methods. However, these methods have not yet been widely used and consolidated. In this paper we investigate the applicability of an inspection method based on the Semiotic Engineering theory for HCI - the Semiotic Inspection Method (SIM) - to collaborative systems. One of the motivations of this investigation is that, in theory the method does not require adaptations to be applied to collaborative systems. The results confirm that the method can be directly applied to collaborative systems, identifying relevant interaction problems.},
  keywords = {Semiotic Engineering; Evaluation; CSCW; Collaborative Systems; Semiotic Inspection Method; SIM; Communicability},
  pages = {53--60},
  doi = {10.1109/SBSC.2009.28},
  year = {2009},
  abstract-original = {Ainda que a importância e a necessidade de avaliar as condições específicas de sistemas colaborativos sejam conhecidas, atualmente não há métodos consolidados para a avaliação de tais sistemas. Há somente propostas para estender ou adaptar métodos de avaliação de usabilidade para sistemas mono-usuário para ambientes de grupo. Neste trabalho, investigamos a aplicabilidade de um método de inspeção fundamentado na Engenharia Semiótica, o Método de Inspeção Semiótica (MIS), para a avaliação de sistemas colaborativos, sem que ele precisasse sofrer adaptações. Os resultados obtidos contribuem para a pesquisa em avaliação de sistemas colaborativos em IHC e CSCW.},
  keywords-original = {Engenharia Semiótica; Avaliação; Sistemas Colaborativos; Método de Inspeção Semiótica; MIS; Comunicabilidade},
  lang = {pt},
  title-original = {Investigando a Aplicabilidade do Método de Inspeção Semiótica a Sistemas Colaborativos}
}

@INPROCEEDINGS{Merlin.Souza_2009,
  author = {Bruno Merlin and Cleidson Souza},
  title = {Implicit Social Bookmarking to Improve Web Searches},
  crossref = {proceedings:sbsc:2009},
  abstract = {Social bookmarking is a popular way to share and publish bookmarks. The growth of the social bookmarking community is creating a parallel resource for web searches. In this paper we present an approach, called implicit social bookmarking, that creates a bridge between search in social bookmarks and classical web searches initiated in a search engine. Our approach allows a user to implicitly both contribute to a social bookmarking system and benefit from other user searches, therefore improving web searches. This paper details our approach, presents a prototype implementation alongside a first evaluation of the concept.},
  keywords = {Social bookmarking; collaborative filtering; tagging},
  pages = {36--43},
  doi = {10.1109/SBSC.2009.8},
  year = {2009},
  lang = {pt}
}

@INPROCEEDINGS{Merlo.etal_2009,
  author = {Lucas Alberto Scotta Merlo and Marques Filho, Fernando Antonio and Roberta Lima Gomes},
  title = {Collaborative Edition Support of Interactive Digital {TV} Programs},
  crossref = {proceedings:sbsc:2009},
  abstract = {Due to the multiprogramming support and to the creation of new TV channels, the Brazilian Digital Television System will allow the strengthening of several actors such as community stations, as well as independent content producers. Expecting the establishment of a collaborative network between these actors, it is important to support the collaborative development of interactive content for Digital TV. In order to provide this support, this paper proposes a collaborative environment for the development and edition of NCL documents, NCL being the declarative language adopted by Brazilian Digital TV middleware. This paper focus on the definition of concurrency control and consistency mechanisms to be applied in such collaborative edition environment, considering the specific features related to the NCL language.},
  keywords = {CSCW; Collaborative Editors; Ginga-NCL; Groupware; Digital TV},
  pages = {106--115},
  doi = {10.1109/SBSC.2009.23},
  year = {2009},
  abstract-original = {Com o suporte à multiprogramação e a previsão de criação de novos canais, a TV Digital permitirá o fortalecimento de vários atores como emissoras comunitárias, assim como produtores independentes. Prevendo-se um modelo de redes colaborativas entre esses atores, torna-se importante que o desenvolvimento de conteúdo interativo para TV Digital possa ser executado de forma colaborativa. Tendo em vista atender a essa necessidade, este artigo propõe um ambiente colaborativo para o desenvolvimento e a edição de documentos NCL, linguagem declarativa adotada pelo middleware do Sistema Brasileiro de TV Digital. O foco desta proposta é a definição de mecanismos de controle de concorrência e consistência considerando-se as características específicas da linguagem NCL.},
  keywords-original = {CSCW; Editores Colaborativos; Ginga-NCL; Groupware; TV Digital},
  lang = {pt},
  title-original = {Suporte à Edição Colaborativa de Documentos Interativos para TV Digital}
}

@INPROCEEDINGS{Nino.etal_2009,
  author = {Cassia Nino and Jorge Barbosa and Sérgio Cresto C. S. Pinto and Débora Barbosa},
  title = {Enhancing Collaboration in a Scenario of Ubiquitous Computing},
  crossref = {proceedings:sbsc:2009},
  abstract = {Collaboration between people has the communication as element key. However this interaction needs a process of searching for collaborators, as well as the determination of what communication channel can be used by the participants, and these are the essential steps of a collaboration. These two steps can be increased when they are embedded in a ubiquitous computing scenario. In this kind of scenario, new possibilities of collaboration are open and the context awareness can increase the selection of peers and communication channels. But solutions that take advantage of these possibilities have not yet been fully exploited. This paper presents MaPS, a framework for collaborative applications that uses context awareness to optimize the initial steps of a collaboration.},
  keywords = {collaboration; peer selection; context awareness},
  pages = {44--52},
  doi = {10.1109/SBSC.2009.24},
  year = {2009},
  abstract-original = {A colaboração entre pessoas tem como elemento chave a comunicação. Mas para que haja esta interação, um processo de busca por colaboradores é necessário, assim como a determinação do canal de comunicação a ser utilizado pelos participantes, e estes são os passos primordiais de uma colaboração. Estas duas etapas podem ser incrementadas quando estão imbuídas em um cenário de computação ubíqua. Neste tipo de cenário, novas possibilidades de colaboração são abertas e características como a ciência do contexto podem incrementar a seleção de pares e canais de comunicação. Contudo, soluções que tirem proveito destas possibilidades ainda não foram completamente exploradas. Este artigo apresenta o MaPS, um framework direcionado para aplicações colaborativas que faz uso da ciência do contexto para otimizar os passos iniciais de uma colaboração.},
  keywords-original = {colaboração; seleção de pares; ciência do contexto},
  lang = {pt},
  title-original = {Incrementando a Colaboração em um Cenário Ubíquo}
}

@INPROCEEDINGS{Pereira.etal_2009,
  author = {Andréia Pereira and Katia Vega and Alberto Raposo and Hugo Fuks and Viviane David and Denise Filippo},
  title = {Immersive Collaborative Storytelling: {Time2Play} in {Second Life}},
  crossref = {proceedings:sbsc:2009},
  abstract = {This paper presents a collaborative educational game, Time2Play, developed in the 3D virtual environment of Second Life, which enables the creation and enact stories collaboratively, contributing to a new form of expression between the different languages used in education. This game is designed to enable children aged 9 to 12 years to express their creativity and imagination to ``create enacting'' a story in groups. Thus, the Time2Play becomes a resource to be used in school activities whose purpose is to carry out collaborative projects in which participants are able to act in different roles as creator of the story, director, set designer, costume designer, actor, narrator and spectator. In this paper we present a case study that investigates how the 3 dimensions of collaboration -- communication, coordination and cooperation -- are performed by groups of children during play Time2Play.},
  keywords = {Storytelling; Collaboration; Immersive Virtual Environments; Second Life},
  pages = {99--105},
  doi = {10.1109/SBSC.2009.26},
  year = {2009},
  abstract-original = {Este trabalho apresenta um jogo educacional colaborativo, Time2Play, desenvolvido no ambiente virtual 3D do Second Life, que possibilita a criação e encenação de histórias colaborativamente, contribuindo assim com uma nova forma de expressão entre as diferentes linguagens utilizadas na Educação. Este jogo foi projetado para possibilitar que crianças na faixa etária de 9 a 12 anos expressem sua criatividade e imaginação para ``criar encenando'' uma história em grupo. Desta forma, o Time2Play torna-se um recurso a ser utilizado em atividades escolares cujo objetivo seja a realização de projetos colaborativos nos quais os participantes têm a possibilidade de atuar nos diferentes papéis de criador da história, diretor, cenógrafo, figurinista, ator, narrador e espectador. Neste artigo é apresentado um estudo de caso que investiga como as 3 dimensões da colaboração -- comunicação, coordenação e cooperação -- são realizadas por grupos de crianças durante o jogo Time2Play.},
  keywords-original = {Storytelling; Colaboração; Ambientes Virtuais Imersivos; Second Life},
  lang = {pt},
  title-original = {Storytelling Imersivo Colaborativo: Time2Play no Second Life}
}

@INPROCEEDINGS{Pichiliani.Hirata_2009,
  author = {Mauro C. Pichiliani and Celso M. Hirata},
  title = {A Digital Ink Sketch-Based Application for Collaborative Design and Kinematic Simulation},
  crossref = {proceedings:sbsc:2009},
  abstract = {Sketching is an important task in early design. In general, designers begin their work by sketching their ideas because of the freedom and productivity that hand drawing provides. Nowadays there are many computer interfaces that allow sketching directly onto the computer. However, few sketching applications combine recognition of elements, modeling, simulation, and automated verification with collaborative features in order to promote simultaneous and remote group work. This paper presents a discussion on how to promote collaborative sketching and kinematic simulation for digital ink applications. In order to support the discussion, we built a prototype by modifying an existing digital ink application. The proposed prototype allows users located in geographically distributed sites to cooperate by sketching, exploring, simulating, and developing their ideas interactively. Potential applications of our prototype include collaborative design and simulation of mechanical engineering machines, rapid prototype of ideas, animation, education, and recreational usage.},
  keywords = {Digital ink; design; collaboration; simulation},
  pages = {1--9},
  doi = {10.1109/SBSC.2009.9},
  year = {2009},
  lang = {en}
}

@INPROCEEDINGS{Pinto.etal_2009,
  author = {Licia Cassia Nascimento Pinto and Flávia Maria Santoro and Tiago Nicola Veloso},
  title = {An Argumentation Model to Support Free Software Virtual Communities},
  crossref = {proceedings:sbsc:2009},
  abstract = {The free software virtual communities use the forums to discuss their problems and generate knowledge, but the lack of a proper structure of this kind of interaction may hinder the participants to find what they want and to understand the discussion points. This paper describes an argument model proposed to organize discussions and facilitate access to knowledge generated in this context.},
  keywords = {free software; free software virtual communities; knowledge management, forum},
  pages = {144--153},
  doi = {10.1109/SBSC.2009.17},
  year = {2009},
  abstract-original = {As comunidades virtuais de software livre utilizam os fóruns para discutir seus problemas e gerar conhecimento, mas a falta de uma estrutura adequada neste tipo de interação pode prejudicar os participantes a encontrar o que eles desejam e para entender os pontos da discussão. Este artigo descreve um modelo de argumentação proposto para organizar as discussões e facilitar o acesso ao conhecimento gerado nesse contexto.},
  keywords-original = {software livre; comunidades virtuais de software livre; gestão do conhecimento; fórum},
  lang = {pt},
  title-original = {Um Modelo de Argumentação para apoiar as Comunidades Virtuais de Software Livre}
}

@INPROCEEDINGS{Silva.etal_2009,
  author = {Edeilson M. Silva and Eduardo Ribas Pinto and Ricardo A. Costa and Lucas R. B. Schmitz and Silvio R. L. Meira},
  title = {Recommending Domain Experts in a Social Network},
  crossref = {proceedings:sbsc:2009},
  abstract = {This paper presents the expert recommender system, called SWEETS, in its version 2.0, and its implementation in the environment A.M.I.G.O.S., a web based social network (WBSN). This environment is used as a communication and cooperation tool among employees from C.E.S.A.R. - a Brazilian innovative institute in software products. SWEETS uses folksonomy's emergent ontology to spread the employees' tacit knowledge throughout the company and thus an interaction improvement will be developed among them. By this, the communication and cooperation among the C.E.S.A.R. employees tend to significant improvements.},
  keywords = {recommender systems; knowledge management; social network; ontology},
  pages = {184--192},
  doi = {10.1109/SBSC.2009.27},
  year = {2009},
  abstract-original = {O presente trabalho apresenta o sistema SWEETS 2.0 e a sua implantação no A.M.I.G.O.S., uma rede social baseada na web (Web Based Social Network -- WBSN) usada como ferramenta de comunicação e cooperação dos colaboradores do C.E.S.A.R. -- um Instituto de Inovação de Produtos de Software do Recife. O SWEETS é baseado em ontologia emergente de folksonomy para a disseminação do conhecimento tático dos colaboradores e, a partir disso, proporcionar uma maior interação entre eles, -- explorando assim com maior eficácia os seus relacionamentos. Diante disso, a comunicação e a cooperação no C.E.S.A.R. tendem a expressivas melhorias.},
  keywords-original = {sistemas de recomendação; gestão de conhecimento; redes sociais; ontologia},
  lang = {pt},
  title-original = {Utilizando Redes Sociais e Folksonomy para Localizar Especialistas de Domínio}
}

@INPROCEEDINGS{Silva.etal_2009a,
  author = {Thais R. M. Braga Silva and Linnyer B. Ruiz and Antonio A. F. Loureiro},
  title = {Conflict Resolution in Collective Ubiquitous Context-Aware Applications},
  crossref = {proceedings:sbsc:2009},
  abstract = {The context-aware computing is a research field that defines systems capable of adapting their behavior according to any relevant information about entities of interest. The ubiquitous computing is closely related to the use of contexts, since it aims to provide personalized, transparent and on-demand services. Ubiquitous systems are frequently shared among multiple users, which may lead to conflicts that occur due to individual profiles divergences and/or environment resources incompatibility. In such situations it is interesting to detect and solve those conflicts, considering what is better for the group but also being fair enough with each individual demand, whenever possible. This work presents the important concepts on the collective ubiquitous context-aware applications field. Furthermore, it proposes a novel methodology for conflicts detection and resolution that considers the trade-off between quality of services and resources consumption. A case study based on a collective tourist guide was implemented as a proof-of-study to the proposed methodology.},
  keywords = {Context-awareness in collaborative systems; Ubiquitous Computing; Adaptive Collaborative Environments},
  pages = {123--134},
  doi = {10.1109/SBSC.2009.12},
  year = {2009},
  abstract-original = {A computação ciente de contexto é uma área de pesquisa que define sistemas computacionais capazes de adaptar seu comportamento de acordo com informações relevantes sobre entidades de interesse. O uso de contextos é importante para a computação ubíqua, a qual pode ser definida como computação onipresente. Sistemas ubíquos normalmente operam de forma transparente, oferecem serviços personalizados e são frequentemente compartilhados por múltiplos usuários. Conflitos podem ocorrer durante a realização de adaptações devido à diferenças entre os perfis dos usuários. Em tais situações, é interessante realizar a detecção e o tratamento dos conflitos ocorridos, considerando o que for melhor para o grupo, mas ainda sendo justo com cada indivíduo, sempre que possível. Esse trabalho apresenta uma discussão sobre sistemas ubíquos coletivos e cientes de contexto, e propõe uma metodologia para tratar conflitos coletivos que considera o compromisso entre qualidade de serviço e consumo de recursos. Um estudo de caso baseado em um guia turístico coletivo foi implementado como uma prova de conceito para a metodologia proposta.},
  keywords-original = {contexto e awareness em sistemas colaborativos; computação ubíqua; ambientes colaborativos adaptativos},
  lang = {pt},
  title-original = {Tratamento de Conflitos em Aplicaçõe Ubíquas Coletivas e Cientes de Contexto}
}

@INPROCEEDINGS{Trindade.etal_2009,
  author = {Cleyton C. Trindade and Yuri A. M. Barbosa and Alan K. O. Moraes and Jones O. Albuquerque and Silvio R. L. Meira},
  title = {An Expert Recommender System to Distributed Software Development: Requirements, Project and Preliminary Results},
  crossref = {proceedings:sbsc:2009},
  abstract = {In distributed software development, geographical and temporal distances turn communication inefficient and affect the various team's perceptions levels - proximity, activity, awareness, process and perspective. The low level of perception turns the task of expert location hard and not being able to quickly locate the experts in the source code during the implementation makes the project slower, consequently delaying its schedule. This paper proposes Presley, a tool to reduce these delays through identification and recommendation of experts in some areas of the source code using the project communication, decreasing the waiting time for help. We also present preliminary results which show the practical potential of our approach.},
  keywords = {distributed software development; expert recommender system; knowledge management},
  pages = {161--168},
  doi = {10.1109/SBSC.2009.29},
  year = {2009},
  abstract-original = {No desenvolvimento distribuído de software, as distâncias geográfica e temporal geram deficiências na comunicação e nos diversos níveis de percepção -- proximidade, atividade, presença, processo e perspectiva -- da equipe. O enfraquecimento das percepções dificulta o reconhecimento rápido das pessoas capacitadas a ajudar outros desenvolvedores com problemas no momento da codificação, tornando a execução do projeto mais lenta, conseqüentemente provocando atrasos no cronograma. A ferramenta Presley objetiva diminuir estes atrasos através da identificação e recomendação dos desenvolvedores especialistas em determinadas porções do código-fonte, reduzindo o tempo de busca e de espera por ajuda. O trabalho apresenta resultados preliminares que demonstram o potencial prático da ferramenta.},
  keywords-original = {desenvolvimento distribuído de software; sistema de recomendação de especialista; gerenciamento do conhecimento},
  lang = {pt},
  title-original = {Um Sistema de Recomendação de Especialistas para Desenvolvimento Distribuído de Software: Requisitos, Projeto e Resultados Preliminares}
}

@INPROCEEDINGS{Vega.etal_2009,
  author = {Katia Vega and Hugo Fuks and Gustavo Carvalho},
  title = {Training in Requirements by Collaboration: Branching Stories in Second Life},
  crossref = {proceedings:sbsc:2009},
  abstract = {Training by playing is believed to be an effective strategy for learning. Training games combine educational and technological techniques that help learners to get involved, collaborate and learn in a practical and interactive way. Collaboration is inherent to software requirements elicitation which involves customers, users and developers to achieve an overall goal. In this article, a game entitled TREG that simulates various activities in software requirements workshop is proposed. The trainee interacts with Non-Player Characters and according to the trainee's choice the game reenacts a specific scenario. The social simulation in the game is based on the branching stories genre. Each branching node is described using a scenario-based template. The game was prototyped in Second Life, a virtual world that gives the possibility to create an immersive collaborative educational experience.},
  keywords = {Educational game; Branching Stories; Requirements; Second Life},
  pages = {116--122},
  doi = {10.1109/SBSC.2009.11},
  year = {2009},
  lang = {en}
}

