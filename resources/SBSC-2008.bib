@INPROCEEDINGS{Barboza-etal2008,
  author = {Alessandra Ponte Lisboa Barboza and Claudia Lage Rebello Motta and Flavia Maria Santoro},
  title = {Adaptive Hypermedia for Collaborative Learning },
  crossref = {proceedings:sbsc:2008},
  abstract = {Research on Education has pointed to collaborative learning, with interaction among students who work together with a common goal. Nevertheless, even working in groups, individual characteristics should be considered in a learning environment. Thus, a scenario integrating adaptive hypermedia and computer-supported collaborative learning is configured. This paper presents CoAdapt, which allows teachers to define collaborative activities while they create educational hypermedia, and explores adaptive techniques to support the performance of them. Case studies were carried out to evaluate the proposal.},
  pages = {88--98},
  doi = {10.1109/SBSC.2008.23},
  year = {2008},
  lang = {pt},
  title-original = {Hipermídia Adaptativa para Aprendizado Colaborativo}
}

@INPROCEEDINGS{Berkenbrock-Hirata2008,
  author = {Carla Diacui Medeiros Berkenbrock and Celso Massaki Hirata},
  title = {Implementation and analysis of use of an cooperation edition application for mobile devices},
  crossref = {proceedings:sbsc:2008},
  abstract = {Supporting mobile cooperative work with synchronous applications that require consistency of data is a challenge due to the constraints imposed by both mobile devices and wireless network. The development of techniques for designing flexible cooperative systems that better fit the mobile users is required. However, both techniques and applications are still scarce and there are doubts over the effectiveness of such applications in the CSCW research community. In this article we developed a synchronous application that supports cooperative edition by mobile users. The usage of the application provides an analysis of how the limitations of mobile devices influence the success of synchronous mobile cooperative work.},
  pages = {99--110},
  doi = {10.1109/SBSC.2008.9},
  year = {2008},
  abstract-original = {O suporte ao trabalho cooperativo móvel com aplicações síncronas que requerem consistência de dados é um desafio devido às limitações impostas por dispositivos móveis e pela rede de comunicação sem fio. Então, é necessário o desenvolvimento de técnicas para projetar sistemas de cooperativos flexíveis que se adaptem melhor a mobilidade dos usários. Contudo, existe uma falta tanto de técnicas como de aplicações e, ainda, existem dúvidas quanto à efetividade das aplicações na comunidade de pesquisa de CSCW. Neste artigo foi desenvolvida uma aplicação síncrona para possibilitar a edição cooperativa a partir de dispositivos móveis. O uso da aplicação proporciona uma análise de como as limitações dos dispositivos móveis influenciam o sucesso do trabalho cooperativo móvel síncrono.},
  lang = {pt},
  title-original = {Implementaçã e Análise de Uso de uma Aplicação para Edição Cooperativa em Dispositivos Móveis}
}

@INPROCEEDINGS{Camargo-etal2008,
  author = {Luís Theodoro O. Camargo and Danilo Braga Lima and Melise Maria V. Paula},
  title = {{NK-Sys}: a negotiation support system to facilitate the dissemination of knowledge},
  crossref = {proceedings:sbsc:2008},
  abstract = {On negotiation process, taking information about the counterpart and the external scenario may to make easy the improvement of results. The acquired experience during a negotiation can be important and maybe can become a powerful tool on further negotiations. Therefore, the allied negotiators' experience, when shared, can facilitate the decision-making during the negotiation. In this paper, we will present an environment to support a negotiation process based on a model of knowledge management. This environment is able to manage the existing knowledge on each negotiation and to create efficient ways of interaction among allied negotiators to exchange experiences and to disseminate the acquired knowledge.},
  pages = {244--253},
  doi = {10.1109/SBSC.2008.11},
  year = {2008},
  abstract-original = {No processo de negociação ter informações sobre a contraparte e o cenário externo pode facilitar a obtenção de bons resultados. A experiência adquirida em uma negociação pode ser importante e talvez venha a se tornar uma poderosa ferramenta em futuras negociações. Portanto a experiência dos negociadores aliados, quando compartilhada, pode facilitar a tomada de decisão durante a negociação. Neste trabalho será apresentado um ambiente de apoio à negociação baseado em um modelo de gestão do conhecimento, que deverá ser capaz de gerenciar o conhecimento existente em cada negociação e criar meios eficientes de interação entre negociadores aliados para que eles troquem experiências e disseminem o conhecimento adquirido.},
  lang = {pt},
  title-original = {NK-Sys: um Sistema de Suporte a Negociação para Facilitar a Disseminação do Conhecimento}
}

@INPROCEEDINGS{Carneiro-etal2008,
  author = {Pedro J. S. Carneiro and Ricardo Araújo Costa and Silvio R. L. Meira},
  title = {A tool to support knowledge management and automatic reading recommendation in software factories},
  crossref = {proceedings:sbsc:2008},
  abstract = {This paper presents the preliminary results of GReConARS, a system to manage and recommend knowledge automatically to software factory project professionals. The readings recommendations are resulted from information qualified as relevant by the project community to itself and are based on the word of mouth technique, aiming to reduce the time needed by new professionals to understand the context in which the project is inserted. Besides, this system promotes the continuing learning of professionals on the project through personalized recommendations, based on the interests shown by these professionals on their previous evaluations.},
  pages = {276--286},
  doi = {10.1109/SBSC.2008.15},
  year = {2008},
  title-original = {Uma Ferramenta para Realização de Gestão de Conhecimento e Recomentação Automática de Leituras em Fábricas de Software}
}

@INPROCEEDINGS{Castro-etal2008,
  author = {Thais Castro and Alberto Castro and Hugo Fuks},
  title = {Learning to program in group},
  crossref = {proceedings:sbsc:2008},
  abstract = {The technical literature in cognitive science informs that working in groups reaps more benefits than working alone. We are seeing a variety of innovative group programming methodologies like the agile methods. This work examines the findings of a pilot study carried out during the first academic semester of 2007. The subjects were 110 freshmen computing and engineering students taking their first programming course at the Federal University of Amazonas. Based on these findings, it is proposed a programming progression learning scheme, from individual to group programming. Such transition is necessary for students are not used to work in group. In order to evaluate such progression learning scheme a case study is outlined.},
  pages = {45--54},
  doi = {10.1109/SBSC.2008.31},
  year = {2008},
  abstract-original = {A literatura técnica em ciência cognitiva informa que o trabalho em grupo proporciona maiores benefícios que o trabalho individual. Há inúmeras metodologias inovadoras para programação em grupo, como por exemplo, os métodos ágeis. Este trabalho examina os resultados de um estudo piloto aplicado no primeiro semestre acadêmico de 2007. Os sujeitos foram 110 calouros de computação e engenharia matriculados em seu primeiro curso de programação. Baseado nestes resultados, um esquema de progressão de aprendizagem de programação em grupo é proposto, o qual prevê uma transição gradual da prática individual para a programação em grupo. Tal transição é necessária, pois os estudantes não estão acostumados a trabalhar em grupo. A fim de avaliar tal esquema de progressão de aprendizagem, é proposto um estudo de caso.},
  booktitle = {Sistemas Colaborativos, 2008 SimpÃ³sio Brasileiro de},
  lang = {pt},
  title-original = {Aprendendo a Programar em Grupo}
}

@INPROCEEDINGS{Costa-etal2008b,
  author = {Jean M. R. Costa and Rafael M. Feitosa and Cleidson R. B. de Souza},
  title = {{RaisAware}: a support tool for collaborative software engineering based upon dependency analysis},
  crossref = {proceedings:sbsc:2008},
  abstract = {This paper presents RaisAware, a collaborative software development tool. RaisAware is one of the few tools aimed to support the long known relationship between software architecture and coordination of work. Our design is based on dependency analysis of software development artifacts and software developers' activities. We describe the theoretical and analytical motivations behind this work, detail the design and implementation of RaisAware, and provide recommendations for future work in this direction.},
  pages = {254--264},
  doi = {10.1109/SBSC.2008.34},
  year = {2008},
  abstract-original = {Esse artigo apresenta a ferramenta RaisAware, uma ferramenta de auxílio ao desenvolvimento colaborativo de software. RaisAware é uma das poucas ferramentas que explora o relacionamento há muito conhecido entre a arquitetura do software e coordenação do trabalho de desenvolvimento de software. O projeto da ferramenta é baseado na análise de dependências entre os artefatos produzidos no desenvolvimento de software e entre as atividades dos desenvolvedores. As motivações teóricas e analíticas por trás desse trabalho são apresentadas, assim como detalhes do projeto e implementação da RaisAware. O artigo conclui com recomendações para trabalhos futuros.},
  lang = {pt},
  title-original = {RaisAware: Uma Ferramenta de Auxílio à Engenharia de Software Colaborativa Baseada em Análises de Dependências}
}

@INPROCEEDINGS{Costa-etal2008,
  author = {Ricardo Costa and Robson Oliveira and Edeilson Silva and Silvio Meira},
  title = {{A.M.I.G.O.S.}: a platform for knowledge management using social networks},
  crossref = {proceedings:sbsc:2008},
  abstract = {Companies are looking for strategies to support members' communication and collaboration, which would help them to create, manage and share knowledge inside the organization. This work presents the A.M.I.G.O.S. platform, which provides social networks features to support knowledge management. It shows how the use of social networks can help companies overcame this challenge by exchanging information through relationships between its members, and how A.M.I.G.O.S. has being able to improve communication and maintenance of organization knowledge in a Brazilian Research and Innovation Institute.},
  pages = {192--203},
  doi = {10.1109/SBSC.2008.26},
  year = {2008},
  abstract-original = {As organizações vêm procurando mecanismos para facilitar a comunicação e colaboração entre seus membros. Estes mecanismos têm por objetivo auxiliar na criação, gestão e compartilhamento do conhecimento dentro da organização. Este trabalho apresenta a plataforma A.M.I.G.O.S., que provê funcionalidades de redes sociais para apoiar a gestão do conhecimento. É apresentado ainda como o uso de redes sociais pode ajudar empresas a superar o desafio da troca de informações através dos relacionamentos entre os membros da organização, e como o uso do A.M.I.G.O.S. vem auxiliando na comunicação e gestão do conhecimento organizacional em um instituto de pesquisa e inovação no Brasil.},
  lang = {pt},
  title-original = {{A.M.I.G.O.S.}: Uma plataforma para Gestão de Conhecimento através de Redes Sociais}
}

@INPROCEEDINGS{Dantas-eta2008,
  author = {Benedito Tourinho Dantas and José Maria N. David and Gustavo Maia Neto and Ricardo Lacerda Menezes and Ana Paula de Almeida Santos},
  title = {A Web Tool to support coordination of projects in a collaborative environment},
  crossref = {proceedings:sbsc:2008},
  abstract = {Coordination activities of a group, which is involved in simultaneous or sequential project activities, need tool support aimed to continually evaluate both the participation and contribution rates. These coordination actions happen - at the same time - throughout different project phases (beginning, planning, execution, control and closing). In these phases, participations and contributions rates can be generated by the use of different groupware applications. Therefore, it becomes difficult for the coordinator to identify these rates and assign them to each group member. The goal of this paper is to present a rule-based tool aimed at supporting the coordination of projects which are developed in a collaborative environment. This tool is part of WGPMS (Web-based groupware on project management support system) project.},
  pages = {146--157},
  doi = {10.1109/SBSC.2008.19},
  year = {2008},
  abstract-original = {A coordenação de um grupo, envolvido nas diferentes atividades simultâneas ou seqüenciais de um projeto, necessita do apoio de ferramentas de acompanhamento que permitam avaliar continuamente a participação e a contribuição de cada membro. Essa ação de coordenar acontece -- paralelamente -- em diferentes fases de um projeto (início, planejamento, execução, controle e encerramento). Nessas fases, participações e contribuições podem ser materializadas através do uso de diferentes aplicações de groupware. Torna-se difícil, portanto, para o coordenador identificar os percentuais de participação e de contribuição e atribuí-los a cada membro do grupo. O objetivo deste trabalho é apresentar uma ferramenta, baseada na utilização de regras, para apoiar a coordenação de projetos desenvolvidos em um ambiente colaborativo. Tal ferramenta é um componente do projeto WGPMS (Web-based Groupware on Project Management Support System).},
  lang = {pt},
  title-original = {Uma Ferramenta Web de Apoio à Coordenação de Projetos em um Ambiente Colaborativo}
}

@INPROCEEDINGS{4700785,
  author = {José Maria N. David and Márcio G. P. Rosa and Flávia Maria Santoro and Marcos R. S. Borges},
  title = {Evaluating the divergence risk and context loss in groupware},
  crossref = {proceedings:sbsc:2008},
  abstract = {Group participants can diverge regarding awareness information comprehension initially available in the shared workspace. In addition, such information can become irrelevant or insufficient throughout the interaction, resulting in a loss of context. The goal of this work is to analyze the risk factors related to the context loss as well as the context mismatch in groupware. In order to illustrate this, this paper attempts to clarify these concepts and presents case studies carried out aiming to evaluate how and why these risks occur.},
  pages = {55--65},
  doi = {10.1109/SBSC.2008.17},
  year = {2008},
  abstract-original = {Participantes de um grupo podem divergir em relação à compreensão das informações de percepção inicialmente disponibilizadas no espaço de trabalho compartilhado; ou então, tais informações podem se tornar irrelevantes ou insuficientes ao longo da interação, resultando em uma perda de contexto. O objetivo deste trabalho é analisar os fatores de risco associados à perda e à divergência de contexto em groupware. Para tal, o presente artigo discute esses conceitos e apresenta estudos de casos para avaliar como e por que esses riscos ocorrem},
  lang = {pt},
  title-original = {Avaliando o Risco da Divergência e da Perda de Contexto em Groupware}
}

@INPROCEEDINGS{Escalfoni-etal2008,
  author = {Rafael E. L. Escalfoni and Carlos A. S. Franco and Marcos R. S. Borges},
  title = {Supporting the collaborative development of ideas using {B2i}: bank of novel ideas},
  crossref = {proceedings:sbsc:2008},
  abstract = {The competitive forces that drive organizations' development have brought great interest to innovation, as the information content of products, processes, and means of production has become the great differentiator among companies. Technological progress has made the innovation process dependent on the interaction of interdisciplinary teams which can be geographically dispersed. The need for communication among the innovation group members makes collaborative tools useful to facilitate mutual understanding, creativity, and innovative work. This paper presents a collaborative tool that supports generating innovative ideas.},
  pages = {204--214},
  doi = {10.1109/SBSC.2008.25},
  year = {2008},
  abstract-original = {As forças competitivas que impulsionam o desenvolvimento das organizações têm trazido grande interesse ao tema inovação, pois o aumento do conteúdo informacional dos produtos, processos e meios de produção tem se tornado o grande diferencial entre empresas. O avanço tecnológico tornou o processo de inovação dependente da interação de equipes interdisciplinares, que por vezes encontram-se separadas geograficamente. A necessidade de comunicação entre os membros de grupos de inovação faz das ferramentas colaborativas instrumentos úteis para facilitar o entendimento mútuo, a criatividade e o trabalho inovador. O presente artigo apresenta uma ferramenta colaborativa que apóia a geração de idéias inovadoras.},
  lang = {pt},
  title-original = {Apoiando o Desenvolvimento Colaborativo de Idéias com o B2i: Banco de Idéias Inovadoras}
}

@INPROCEEDINGS{Falbo-etal2008,
  author = {Ricardo Almeida Falbo and Bruno Nandolpho Machado and Victoria A. Carvalho},
  title = {An infrastructure to support Collaborative elaboration of software artifacts},
  crossref = {proceedings:sbsc:2008},
  abstract = {Software engineering projects are inherently collaborative and several general purpose communication and collaboration technologies have been adopted in software projects. However, collaboration in software engineering is, many times, artifact-based in the sense that developers collaborate to produce an artifact or a model of the system being built, and artifact-neutral technologies are not enough. This paper presents ColaboraODE, a framework based on the wideband Delphi technique that supports the collaborative elaboration of software artifacts. It was developed for the software engineering environment ODE.},
  pages = {158--168},
  doi = {10.1109/SBSC.2008.20},
  year = {2008},
  lang = {pt},
  title-original = {Uma Infra-estrutura para Apoiar a Elaboração Colaborativa de Artefatos de Software}
}

@INPROCEEDINGS{SantosFilho-etal2008,
  author = {José Valentim Santos Filho and Roberta Lima Gomes and Aloysio Castro Pinto Pedroza and Jean-Pierre Courtiat},
  title = {The Agent-Based Architecture of {RECOLLVE}},
  crossref = {proceedings:sbsc:2008},
  abstract = {The world globalization process, the increasing demand for communication and information technologies create a demand for collaborative applications. Aiming at supporting communication, information exchange and collaboration among users geographically distant, many CSCW (computer supported cooperative work) systems like audio and video conference, shared editors, shared whiteboard and CVEs (collaborative virtual environments) were developed. Collaborative virtual environments represent an important category of CSCW systems that use 3D shared spaces in order to support collaborative activities. We find also many systems that integrate collaborative applications to satisfy specific needs of users. We present in this article the agent-based architecture of RECOLLVE, a CVE which focuses on representing a very large set of collaboration activities in a virtual scene, including their social aspects.},
  pages = {134--145},
  doi = {10.1109/SBSC.2008.32},
  year = {2008}
}

@INPROCEEDINGS{4700791,
  author = {Denise Filippo and Hugo Fuks and Carlos J. P. Lucena},
  title = {Notification-action: information and access to a learning environment using notifications as support for coordinating distance couse forums},
  crossref = {proceedings:sbsc:2008},
  abstract = {In this work, notifications to provide learners and mediators of an online course with awareness information regarding the unfolding of forums and other participants' activities are investigated. In an asynchronous setting, participants need to check the forum frequently to know if there are new messages and whether and when mediators and learners are working. In the absence of this information, participants cannot organize their activities according to the group and waste opportunities to interact with each other. This paper presents two action research cycles in the context of the Information Technology Applied to Education online course and of the AulaNet LMS environment. Notifications presented in popup windows evolved into 'action notifications' as they enable direct access to services in the AulaNet web interface through links and buttons.},
  pages = {111--121},
  doi = {10.1109/SBSC.2008.21},
  year = {2008},
  lang = {pt},
  title-original = {Notificação-ação: Informação e Acesso ao Ambiente de Aprendizagem através de Notificações para Suporte à Coordenação de Fóruns de Cursos a Distância}
}

@INPROCEEDINGS{Gadelha-etal2008,
  author = {Bruno Gadelha and Sionise Gomes and Hugo Fuks and Castro Jr, Alberto Nogueira},
  title = {{FLOCOS}: collaborative system for construction of functional learning objects},
  crossref = {proceedings:sbsc:2008},
  abstract = {This work presents FLOCOS - Functional Learning Objects Collaborative System, a collaborative system for learning objects development that has it focus on a LO category not dealt with by other works: functional learning objects. This system was conceived based on 3C collaboration model and in this context its functionalities have been described.},
  pages = {215--223},
  doi = {10.1109/SBSC.2008.27},
  year = {2008},
  title-original = {FLOCOS: Sistema Colaborativo à Construção de Objetos de Aprendizagem Funcionais}
}

@INPROCEEDINGS{Godoy-Amandi2008,
  author = {Daniela Godoy and Analía Amandi},
  title = {Boosting Trust in Collaborative Recommender Agents with Interest Similarity},
  crossref = {proceedings:sbsc:2008},
  abstract = {Inserted in communities of people with similar interests, recommender agents predict the behavior of users based on the behavior of other like-minded people. In addition to user similarity, trustworthiness is a factor that agents have to consider in the selection of reliable partners for collaboration. Previous works focused on modeling trust in recommender systems based on global user profile similarity or history of exchanged opinions. In this paper we propose a novel approach for agent-based recommendation in which trust is independently learned and evolved for each pair of interest topics two users have in common. Experimental results show that agents learning who to trust about certain topics reach better levels of precision than considering exclusively user similarity.},
  pages = {66--76},
  doi = {10.1109/SBSC.2008.22},
  year = {2008},
  lang = {en}
}

@INPROCEEDINGS{4700804,
  author = {Diogo Krejci and Jonice Oliveira and Jano M. Souza},
  title = {The Use of Visualization for Analysis and Recommendation on People Replacement on Virtual Communities and Teams in the {Brazilian} Scientific Scenario},
  crossref = {proceedings:sbsc:2008},
  abstract = {Due to the lack of resources and the low number of official examinations, turnover is high in the scientific environment. The search for an appropriated substitute researcher to be hired or to moderate communities involves the analysis of a large amount of information. Consequently, we base our choices on the recommendation of others. To solve this problem, this approach indicates professionals through the support of information visualization techniques that assess competences and the working contexts of the researcher that is leaving a post. The visualization usage streamlines the replacement process as it provides a clear and concise representation of parameter values used during the assessment of applicants. This approach is part of the Scientific Knowledge Management Project.},
  pages = {265--275},
  doi = {10.1109/SBSC.2008.33},
  year = {2008}
}

@INPROCEEDINGS{Lemos-Souza2008,
  author = {Alline Lemos and Cleidson R. B. Souza},
  title = {Challenges for knowledge management on software development: results of an ethnographic study},
  crossref = {proceedings:sbsc:2008},
  abstract = {Software development deals with large volumes of knowledge once it joins people collaborating among themselves and working at the most diverse activities. If, on one hand, besides its huge proportion, the knowledge inherent to software engineering grows successively, on the other hand the companies faces several issues on identifying the content, its localization and properly using it. Within this context emerges the concept of Knowledge Engineering. This paper presents an ethnographic study conducted in a real software development environment. The goal of this study is to suggest solutions suitable for the identified difficulties and, as a result, improve the quality to the development process already in place in the company.},
  pages = {77--87},
  doi = {10.1109/SBSC.2008.36},
  year = {2008},
  abstract-original = {Desenvolvimento de software lida com grandes volumes de conhecimento uma vez que reúne diversas pessoas colaborando entre si e trabalhando com as mais distintas atividades. Se de um lado, além de possuir proporções imensas, o conhecimento presente na área de ES cresce sucessivamente, de outro as empresas possuem problemas em identificar o conteúdo, a localização e o uso deste conhecimento. Dentro deste contexto surge o conceito de Gerência de Conhecimento. Este artigo apresenta um estudo etnográfico realizado em um ambiente real de desenvolvimento de software. O objetivo deste estudo é sugerir soluções adequadas às dificuldades identificadas e, assim, atribuir mais qualidade ao processo de desenvolvimento já adotado pela empresa.},
  lang = {pt},
  title-original = {Desafios da Gerência de Conhecimento no Desenvolvimento de Software: Resultados de um Estudo Etnográfico}
}

@INPROCEEDINGS{Linhares-etal2008,
  author = {Giovana B. R. Linhares and Marcos R. S. Borges and Pedro Antune},
  title = {Negociation-Collaboration in formal technical reviews on functional specification},
  crossref = {proceedings:sbsc:2008},
  abstract = {In the most of today's organizations, tasks are performed in groups in which the negotiation is necessary to arrive at a result. During the search for solutions that are accepted by all, are carried out sessions of "brainstorm" and meetings involving groups, possibly located in different places. This work aims to increase the existent knowledge about the dynamics of the binomial "negotiation-cooperation," specifically during the formal technical reviews on functional specification of software. The structuring of this process and a support tool are proposed as computer support.},
  pages = {122--133},
  doi = {10.1109/SBSC.2008.24},
  year = {2008},
  abstract-original = {Cada vez mais no dia-a-dia das organizações, são realizadas tarefas em grupo nas quais é necessária a negociação para se chegar a um resultado. Durante a busca de soluções que sejam aceitas por todos, são realizadas sessões de ``brainstorm'' e reuniões envolvendo grupos de pessoas, possivelmente localizadas em lugares diferentes. Este trabalho visa aumentar o conhecimento existente acerca da dinâmica do binômio ``negociação-colaboração'', mais especificamente deflagrada durante as revisões técnicas formais de especificação funcionais de um software. A estruturação do referido processo e uma ferramenta de apoio são propostos como suporte computacional.},
  booktitle = {Sistemas Colaborativos, 2008 SimpÃ³sio Brasileiro de},
  lang = {pt},
  title-original = {Negociação-Colaboração nas Revisões Técnicas Formais de Especificações Funcionais}
}

@INPROCEEDINGS{4700780,
  author = {Marcelo G. Malcher and Markus Endler},
  title = {A Context-Aware Collaborative Presentation System for Handhelds},
  crossref = {proceedings:sbsc:2008},
  abstract = {Many systems support sharing and co-edition of slides, and thus enable active engagement and collaborative interaction among users of portable devices during lectures or meetings. The majority of these systems, however, run only on larger and more resource-full devices, like notebooks or tablet PCs. Handhelds, such as pocket PCs and smart phones, are becoming cheaper, lighter and with increasing computational power and storage capacity. Therefore, these devices are now also equally eligible for adoption in interactive classes, in the same way as notebooks and tablet PCs are used. In this paper, we present a collaborative presentation system named interactive presenter for handhelds (iPH) which supports sharing and co-edition of slide presentations, and which runs on both tablet PCs and handhelds. We also report the findings of performance tests and usability experiments with iPH on handhelds in an exercise class.},
  pages = {1--11},
  doi = {10.1109/SBSC.2008.13},
  year = {2008}
}

@INPROCEEDINGS{Monteiro-etal2008,
  author = {Eduardo Rocha Monteiro and Orivaldo Lira Tavares and Roberta Lima Gomes},
  title = {Aggregation of social news, a new paradigm of web journalism},
  crossref = {proceedings:sbsc:2008},
  abstract = {This paper describes the social news aggregators pointing these applications as implementers of a new paradigm of web journalism, presenting a brief historic of web journalism until the Digg [Digg, 2008] appearance, at 2005 - the most famous social news aggregator. Besides that, we discuss the main social aspects related, the main functionalities, a conceptual model, and the collaborative filtering incorporated in these tools. Finally, we present the ANSUFES, a social news aggregator developed at UFES.},
  pages = {12--22},
  doi = {10.1109/SBSC.2008.18},
  year = {2008},
  abstract-original = {Este artigo descreve os agregadores de notícias sociais apontando essas aplicações como implementadoras de um novo paradigma de webjornalismo, apresentando um breve histórico do webjornalismo até o surgimento do Digg, em 2005 -- o mais famoso agregador de notícias sociais. Além disso, discutimos os principais aspectos sociais envolvidos, as principais funcionalidades, um modelo conceitual e a filtragem colaborativa incorporada nessa ferramenta. Finalmente, apresentamos o ANSUFES, um agregador de notícias sociais desenvolvido na UFES.},
  lang = {pt},
  title-original = {Agregação de Notícias Sociais, um Novo Paradigma de Webjornalismo}
}

@INPROCEEDINGS{Pichiliani-etal2008,
  author = {Mauro C. Pichiliani and Celso M. Hirata and Fabricio S. Soares and Carlos H. Q. Forster},
  title = {Using eye tracking for visualization of local attention of collaborative edition system},
  crossref = {proceedings:sbsc:2008},
  abstract = {Awareness is the knowledge about the present and past group's activities and it is a relevant question for cooperative work. There are many devices that supplies awareness information in synchronous collaborative editing systems. However, the current awareness devices have restrictions to accomplish effective awareness and to capture the focus of attention, e.g. identify the exact place of the participants' attentions. This paper presents an awareness device for synchronous collaborative editing systems called TeleEye that provide information about the place of the participant's attentions during a collaborative session by means of eye tracking.},
  pages = {169--179},
  doi = {10.1109/SBSC.2008.10},
  year = {2008},
  abstract-original = {Awareness (percepção) é o conhecimento sobre o grupo e suas atividades passadas e presentes e constitui uma questão relevante para o trabalho cooperativo. Existem diversos mecanismos que fornecem a percepção durante a utilização de sistemas de edição colaborativos síncronos. Contudo, os mecanismos de percepção existentes apresentam restrições para efetivação da percepção e captura do foco de atenção, i.e. identificar o local exato da atenção dos participantes. Este artigo apresenta um mecanismo de percepção para sistemas de edição colaborativos síncronos chamado TeleEye que fornece informações sobre o local da atenção dos participantes durante uma seção colaborativa através de Rastreio Ocular.},
  booktitle = {Sistemas Colaborativos, 2008 SimpÃ³sio Brasileiro de},
  lang = {pt},
  title-original = {Utilização do Rastreamento Ocular para Visualização do Local de Atenção em Sistemas de Edição Colaborativos}
}

@INPROCEEDINGS{4700796,
  author = {Lucas L. Provensi and Fábio M. Costa and Vagner Sacramento},
  title = {An architecture for a middleware to support collaborative applications of digital ink},
  crossref = {proceedings:sbsc:2008},
  abstract = {Communication Is a key aspect In collaborative systems, and should enable effective and quality Interaction between users. Conventional communication solutions for collaborative applications do not address the dynamism of some network environments, such as the mobile computing. This article provides a middleware Infrastructure capable of adapting Itself In response to changes In Its execution environment In order to maintain the quality of communication In collaborative systems, with specific Interest In applications based on tablet PCs and digital Ink.},
