}

@INPROCEEDINGS{Santos-etal2008,
  author = {Raphael O. Santos and Fabio Fabris and Magnos Martinello and Cesar Marcondes},
  title = {{JoinUs}: Management of Mobile Social Networks for Pervasive Collaboration},
  crossref = {proceedings:sbsc:2008},
  abstract = {Billions of users carry mobile phones nowadays. However, few of them use the phones in more interesting ways than just phone call. In this work, we will present a system design and a proof-of-concept implementation that allows pervasive collaboration among cell phone users using a mobile social network. Our idea is to use new resources available at smart phones to exploit principles of spatial locality (geographical area), temporal locality (instant warning) and interest matching (personal interest on the subject) in order to engage a number of users to collaborate on mini-tasks, also called mini-campaigns that build up spontaneous ``flash mobs''.},
  pages = {224--234},
  doi = {10.1109/SBSC.2008.14},
  year = {2008},
  lang = {en}
}

@INPROCEEDINGS{SousaJunior-etal2008,
  author = {Sousa Junior, Samuel F. and Marco A. Balieiro and Cleidson R. B. Souza},
  title = {Muldimensional Analysis of Open Source Software Social Networks},
  crossref = {proceedings:sbsc:2008},
  abstract = {Due to the features of open source projects, several researchers have been investigating such projects aiming an understanding of what fosters developers to join open source projects, the tools and practices employed by such projects, the evolution of these communities, among other aspects. One of the most used methods employed is social network analysis. However, such studies do not consider the integrated analysis of several social networks and their relationships. This paper describes an approach to combine several social networks to study the evolution of these projects. It also describes a tool, named Sargas, to analyze the proposed approach. Partial results of the proposed approach are used to extend the onion model of participation in open source projects.},
  pages = {23--33},
  doi = {10.1109/SBSC.2008.35},
  year = {2008},
  abstract-original = {Devido às características dos projetos de software livre, diversos pesquisadores têm investigado estes projetos visando entender o que motiva os desenvolvedores a participar de projetos de software livre, as ferramentas e práticas usadas neste tipo de projeto, a evolução destas comunidades, entre outros aspectos. Um dos métodos mais utilizados nestes estudos é a análise de redes sociais. Contudo, tais estudos não enfocam na análise integradas de várias redes sociais e nos seus relacionamentos. Este artigo descreve uma abordagem para combinar múltiplas redes sociais para estudar a evolução destes projetos. Ele também descreve uma ferramenta, chamada Sargas, par auxiliar a abordagem proposta. Esta ferramenta permite a comparação e visualização de diferentes redes sociais ao mesmo tempo. Resultados iniciais da abordagem proposta são utilizados para estender o modelo ``onion'' de participação em projetos de software livre.},
  lang = {pt},
  title-original = {Análise Multidimensional de Redes Sociais de Projetos de Software Livre}
}

@INPROCEEDINGS{Toledo-etal2008,
  author = {Guilherme David Garcia Toledo and Diego Lima Bastos and José Maria N. David},
  title = {Supporting the interoperability for coordination activities in a groupware infrastructure},
  crossref = {proceedings:sbsc:2008},
  abstract = {Aiming to support the complexity of distributed group activities, different collaborative applications are usually developed in heterogeneous platforms. This complexity is related to the diversity of requirements that need to be fulfilled by groupware. Among them interoperability is a primary attribute to support the development of coordination services. In this context, interoperability absence is a key challenge considering that it prevents several tools to be used when supporting the same activity. The goal of this paper is to present an interoperability solution for coordination services in distributed groupware.},
  pages = {34--44},
  doi = {10.1109/SBSC.2008.16},
  year = {2008},
  abstract-original = {Com o objetivo de apoiar a complexidade das atividades de grupos distribuídos aplicações colaborativas distintas são construídas freqüentemente em plataformas heterogêneas. Tal fato se deve à diversidade de requisitos que precisam ser atendidos por groupware. Dentre esses requisitos a interoperabilidade é um atributo essencial para apoiar o desenvolvimento de serviços de coordenação. Neste contexto, a ausência da interoperabilidade se caracteriza como um problema na medida em que impede a utilização de ferramentas diversas para apoiar uma mesma atividade. O objetivo deste artigo é apresentar uma solução de interoperabilidade para serviços de coordenação em groupware distribuído.},
  lang = {pt},
  title-original = {Apoiando a Interoperabilidade entre as Atividades de Coordenação em uma Infra-estrutura de Groupware}
}

@INPROCEEDINGS{Ugolino-etal2008,
  author = {Wallace Ugulino and João Carlos Gonçalves and Ricardo R. Nunes and Flávia Maria Santoro},
  title = {{K2Chat}: a chat tool with support for logging and indexing of sessions},
